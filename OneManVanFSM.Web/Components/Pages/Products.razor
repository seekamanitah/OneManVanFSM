@page "/products"
@page "/products/new"
@page "/products/{Id:int}"
@page "/products/{Id:int}/edit"
@rendermode InteractiveServer
@implements IDisposable
@inject IProductService ProductSvc
@inject IDropdownService DropdownSvc
@inject NavigationManager Nav

<PageTitle>Products - OneManVanFSM</PageTitle>

@if (mode == "form")
{
    <div class="d-flex align-items-center mb-3">
        <button class="btn btn-outline-secondary btn-sm me-2" @onclick="GoToList"><i class="bi bi-arrow-left"></i></button>
        <h4 class="mb-0"><i class="bi bi-box-seam-fill me-2"></i>@(editId.HasValue ? "Edit" : "New") Product</h4>
    </div>
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <EditForm Model="form" OnValidSubmit="SaveProduct">
                <DataAnnotationsValidator />

                @* ?? Product Information ?? *@
                <h6 class="border-bottom pb-2 mb-3"><i class="bi bi-box-seam me-1"></i>Product Information</h6>
                <div class="row g-2 mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Manufacturer <span class="text-danger">*</span></label>
                        <select class="form-select form-select-sm" value="@_brandSelectValue" @onchange="OnBrandSelectChanged">
                            <option value="">— Select —</option>
                            @foreach (var o in _brandOptions) { <option value="@o">@o</option> }
                            <option value="__custom__">? Add New...</option>
                        </select>
                        @if (_showCustomBrand)
                        {
                            <InputText @bind-Value="form.Brand" class="form-control form-control-sm mt-1" placeholder="Enter new manufacturer name" />
                        }
                        <ValidationMessage For="() => form.Brand" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Model Number <span class="text-danger">*</span></label>
                        <InputText @bind-Value="form.ModelNumber" class="form-control form-control-sm" />
                        <ValidationMessage For="() => form.ModelNumber" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Product Name</label>
                        <InputText @bind-Value="form.Name" class="form-control form-control-sm" placeholder="Display name (optional)" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Product Number</label>
                        <InputText @bind-Value="form.ProductNumber" class="form-control form-control-sm" placeholder="Auto-generated if blank" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Category</label>
                        <select class="form-select form-select-sm" @bind="form.Category">
                            <option value="">Unknown</option>
                            @foreach (var opt in _productCategories) { <option value="@opt">@opt</option> }
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Equipment Category</label>
                        <select class="form-select form-select-sm" @bind="form.EquipmentType">
                            <option value="">Unknown</option>
                            @foreach (var opt in _equipmentTypes) { <option value="@opt">@opt</option> }
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Fuel Type</label>
                        <select class="form-select form-select-sm" @bind="form.FuelType">
                            <option value="">Unknown</option>
                            @foreach (var opt in _fuelTypes) { <option value="@opt">@opt</option> }
                        </select>
                    </div>
                    <div class="col-12">
                        <label class="form-label">Description</label>
                        <InputTextArea @bind-Value="form.Description" class="form-control form-control-sm" rows="3" />
                    </div>
                </div>

                @* ?? Specifications ?? *@
                <h6 class="border-bottom pb-2 mb-3"><i class="bi bi-gear me-1"></i>Specifications</h6>
                <div class="row g-2 mb-3">
                    <div class="col-md-3">
                        <label class="form-label">Tonnage</label>
                        <select class="form-select form-select-sm" @bind="form.Tonnage">
                            <option value="">Select...</option>
                            @foreach (var opt in _tonnageOptions) { <option value="@opt">@opt</option> }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Refrigerant Type</label>
                        <select class="form-select form-select-sm" value="@_refrigerantSelectValue" @onchange="OnRefrigerantSelectChanged">
                            <option value="">Unknown</option>
                            @foreach (var o in _refrigerantOptions) { <option value="@o">@o</option> }
                            <option value="__custom__">? Add New...</option>
                        </select>
                        @if (_showCustomRefrigerant)
                        {
                            <InputText @bind-Value="form.RefrigerantType" class="form-control form-control-sm mt-1" placeholder="Enter refrigerant type" />
                        }
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">SEER Rating</label>
                        <InputText @bind-Value="form.SEERRating" class="form-control form-control-sm" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">AFUE Rating</label>
                        <InputText @bind-Value="form.AFUERating" class="form-control form-control-sm" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Voltage</label>
                        <select class="form-select form-select-sm" value="@_voltageSelectValue" @onchange="OnVoltageSelectChanged">
                            <option value="">— Select —</option>
                            @foreach (var o in _voltageOptions) { <option value="@o">@o</option> }
                            <option value="__custom__">? Add New...</option>
                        </select>
                        @if (_showCustomVoltage)
                        {
                            <InputText @bind-Value="form.Voltage" class="form-control form-control-sm mt-1" placeholder="Enter voltage" />
                        }
                    </div>
                </div>

                @* ?? Pricing ?? *@
                <h6 class="border-bottom pb-2 mb-3"><i class="bi bi-currency-dollar me-1"></i>Pricing</h6>
                <div class="row g-2 mb-3">
                    <div class="col-md-4">
                        <label class="form-label">MSRP</label>
                        <InputNumber @bind-Value="form.MSRP" class="form-control form-control-sm" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Wholesale Cost</label>
                        <InputNumber @bind-Value="form.Cost" class="form-control form-control-sm" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Suggested Sell Price</label>
                        <InputNumber @bind-Value="form.Price" class="form-control form-control-sm" />
                    </div>
                    <div class="col-12 mt-1">
                        <div class="form-check">
                            <InputCheckbox @bind-Value="form.TaxIncludedInPrice" @bind-Value:after="OnProductTaxToggled" class="form-check-input" id="productTaxIncluded" />
                            <label class="form-check-label text-muted small" for="productTaxIncluded">
                                <i class="bi bi-percent me-1"></i>Auto-calculate tax into price (@(_defaultTaxRate)% tax rate from Settings)
                            </label>
                        </div>
                    </div>
                </div>

                @* ?? Warranty ?? *@
                <h6 class="border-bottom pb-2 mb-3"><i class="bi bi-shield-check me-1"></i>Warranty</h6>
                <div class="row g-2 mb-3">
                    <div class="col-md-3">
                        <label class="form-label">Parts Warranty (years)</label>
                        <select class="form-select form-select-sm" @bind="form.PartsWarrantyYears">
                            <option value="0">N/A</option>
                            @for (int w = 1; w <= 15; w++) { <option value="@w">@w</option> }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Labor Warranty (years)</label>
                        <select class="form-select form-select-sm" @bind="form.LaborWarrantyYears">
                            <option value="0">N/A</option>
                            @for (int w = 1; w <= 15; w++) { <option value="@w">@w</option> }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Compressor Warranty (years)</label>
                        <select class="form-select form-select-sm" @bind="form.CompressorWarrantyYears">
                            <option value="0">N/A</option>
                            @for (int w = 1; w <= 15; w++) { <option value="@w">@w</option> }
                        </select>
                    </div>
                    <div class="col-md-3 d-flex align-items-end">
                        <div class="form-check">
                            <InputCheckbox @bind-Value="form.RegistrationRequired" class="form-check-input" id="regRequired" />
                            <label class="form-check-label" for="regRequired">Registration Required</label>
                        </div>
                    </div>
                </div>

                @* ?? Status ?? *@
                <h6 class="border-bottom pb-2 mb-3"><i class="bi bi-toggle-on me-1"></i>Status</h6>
                <div class="row g-2 mb-3">
                    <div class="col-auto">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="isActive" checked="@form.IsActive" @onchange="e => { form.IsActive = (bool)(e.Value ?? false); if (form.IsActive) form.IsDiscontinued = false; }" />
                            <label class="form-check-label" for="isActive">Active</label>
                        </div>
                    </div>
                    <div class="col-auto ms-4">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="isDiscontinued" checked="@form.IsDiscontinued" @onchange="e => { form.IsDiscontinued = (bool)(e.Value ?? false); if (form.IsDiscontinued) form.IsActive = false; }" />
                            <label class="form-check-label" for="isDiscontinued">Discontinued</label>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between border-top pt-3">
                    <button type="button" class="btn btn-outline-secondary btn-sm" @onclick="GoToList">Cancel</button>
                    <button type="submit" class="btn btn-primary btn-sm"><i class="bi bi-check-circle me-1"></i>@(editId.HasValue ? "Save Product" : "Create Product")</button>
                </div>
                @if (!string.IsNullOrEmpty(errorMsg))
                {
                    <div class="alert alert-danger mt-2 mb-0">@errorMsg</div>
                }
            </EditForm>
        </div>
    </div>
}
else if (mode == "detail" && detail is not null)
{
    <!-- DETAIL VIEW -->
    <div class="d-flex align-items-center mb-3">
        <button class="btn btn-outline-secondary btn-sm me-2" @onclick="GoToList"><i class="bi bi-arrow-left"></i></button>
        <h4 class="mb-0"><i class="bi bi-box-seam-fill me-2"></i>@(detail.Name.Length > 0 ? detail.Name : $"{detail.Brand} {detail.ModelNumber}")</h4>
        @if (!string.IsNullOrWhiteSpace(detail.Category))
        {
            <span class="badge bg-info ms-2">@detail.Category</span>
        }
        @if (detail.IsActive) { <span class="badge bg-success ms-1">Active</span> }
        @if (detail.IsDiscontinued) { <span class="badge bg-warning text-dark ms-1">Discontinued</span> }
        <div class="ms-auto dropdown">
            <button class="btn btn-outline-secondary btn-sm dropdown-toggle" data-bs-toggle="dropdown"><i class="bi bi-gear me-1"></i>Actions</button>
            <ul class="dropdown-menu dropdown-menu-end">
                <li><button class="dropdown-item" @onclick="EditDetail"><i class="bi bi-pencil me-1"></i>Edit</button></li>
                <li><hr class="dropdown-divider" /></li>
                @if (_confirmArchive)
                {
                    <li><button class="dropdown-item text-danger fw-semibold" @onclick="ArchiveDetail"><i class="bi bi-exclamation-triangle me-1"></i>Confirm Archive</button></li>
                    <li><button class="dropdown-item" @onclick="() => _confirmArchive = false"><i class="bi bi-x-lg me-1"></i>Cancel</button></li>
                }
                else
                {
                    <li><button class="dropdown-item text-danger" @onclick="() => _confirmArchive = true"><i class="bi bi-archive me-1"></i>Archive</button></li>
                }
            </ul>
        </div>
    </div>
    <div class="row g-3">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-body">
                    <h6><i class="bi bi-box-seam me-1"></i>Product Information</h6>
                    <div class="row g-2 mt-2">
                        @if (!string.IsNullOrWhiteSpace(detail.Brand)) { <div class="col-sm-4"><small class="text-muted d-block">Manufacturer</small><span>@detail.Brand</span></div> }
                        @if (!string.IsNullOrWhiteSpace(detail.ModelNumber)) { <div class="col-sm-4"><small class="text-muted d-block">Model Number</small><span>@detail.ModelNumber</span></div> }
                        @if (!string.IsNullOrWhiteSpace(detail.ProductNumber)) { <div class="col-sm-4"><small class="text-muted d-block">Product Number</small><span>@detail.ProductNumber</span></div> }
                        @if (!string.IsNullOrWhiteSpace(detail.PartNumber)) { <div class="col-sm-4"><small class="text-muted d-block">Part Number</small><span>@detail.PartNumber</span></div> }
                        @if (!string.IsNullOrWhiteSpace(detail.Category)) { <div class="col-sm-4"><small class="text-muted d-block">Category</small><span>@detail.Category</span></div> }
                        @if (!string.IsNullOrWhiteSpace(detail.EquipmentType)) { <div class="col-sm-4"><small class="text-muted d-block">Equipment Type</small><span>@detail.EquipmentType</span></div> }
                        @if (!string.IsNullOrWhiteSpace(detail.FuelType)) { <div class="col-sm-4"><small class="text-muted d-block">Fuel Type</small><span>@detail.FuelType</span></div> }
                        @if (!string.IsNullOrWhiteSpace(detail.Barcode)) { <div class="col-sm-4"><small class="text-muted d-block">Barcode</small><span>@detail.Barcode</span></div> }
                    </div>
                    @if (!string.IsNullOrWhiteSpace(detail.Description))
                    {
                        <hr class="my-2" />
                        <small class="text-muted d-block">Description</small>
                        <p class="mb-0">@detail.Description</p>
                    }
                </div>
            </div>

            @if (!string.IsNullOrWhiteSpace(detail.Tonnage) || !string.IsNullOrWhiteSpace(detail.RefrigerantType) ||
                 !string.IsNullOrWhiteSpace(detail.SEERRating) || !string.IsNullOrWhiteSpace(detail.AFUERating) ||
                 !string.IsNullOrWhiteSpace(detail.Voltage))
            {
                <div class="card border-0 shadow-sm mb-3">
                    <div class="card-body">
                        <h6><i class="bi bi-gear me-1"></i>Specifications</h6>
                        <div class="row g-2 mt-2">
                            @if (!string.IsNullOrWhiteSpace(detail.Tonnage)) { <div class="col-sm-4"><small class="text-muted d-block">Tonnage</small><span>@detail.Tonnage</span></div> }
                            @if (!string.IsNullOrWhiteSpace(detail.RefrigerantType)) { <div class="col-sm-4"><small class="text-muted d-block">Refrigerant Type</small><span>@detail.RefrigerantType</span></div> }
                            @if (!string.IsNullOrWhiteSpace(detail.SEERRating)) { <div class="col-sm-4"><small class="text-muted d-block">SEER Rating</small><span>@detail.SEERRating</span></div> }
                            @if (!string.IsNullOrWhiteSpace(detail.AFUERating)) { <div class="col-sm-4"><small class="text-muted d-block">AFUE Rating</small><span>@detail.AFUERating</span></div> }
                            @if (!string.IsNullOrWhiteSpace(detail.Voltage)) { <div class="col-sm-4"><small class="text-muted d-block">Voltage</small><span>@detail.Voltage</span></div> }
                        </div>
                    </div>
                </div>
            }

            <div class="card border-0 shadow-sm mb-3">
                <div class="card-body">
                    <h6><i class="bi bi-currency-dollar me-1"></i>Pricing</h6>
                    <div class="row g-2 mt-2">
                        @if (detail.MSRP > 0) { <div class="col-sm-4"><small class="text-muted d-block">MSRP</small><span>@detail.MSRP.ToString("C")</span></div> }
                        <div class="col-sm-4"><small class="text-muted d-block">Wholesale Cost</small><span>@detail.Cost.ToString("C")</span></div>
                        <div class="col-sm-4"><small class="text-muted d-block">Suggested Sell Price</small><span>@detail.Price.ToString("C")</span></div>
                        @if (detail.MarkupPercent > 0) { <div class="col-sm-4"><small class="text-muted d-block">Markup</small><span>@detail.MarkupPercent%</span></div> }
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm mb-3">
                <div class="card-body">
                    <h6><i class="bi bi-shield-check me-1"></i>Warranty</h6>
                    <div class="row g-2 mt-2">
                        <div class="col-sm-3"><small class="text-muted d-block">Parts</small><span>@(detail.PartsWarrantyYears > 0 ? $"{detail.PartsWarrantyYears} year(s)" : "N/A")</span></div>
                        <div class="col-sm-3"><small class="text-muted d-block">Labor</small><span>@(detail.LaborWarrantyYears > 0 ? $"{detail.LaborWarrantyYears} year(s)" : "N/A")</span></div>
                        <div class="col-sm-3"><small class="text-muted d-block">Compressor</small><span>@(detail.CompressorWarrantyYears > 0 ? $"{detail.CompressorWarrantyYears} year(s)" : "N/A")</span></div>
                        <div class="col-sm-3"><small class="text-muted d-block">Registration</small><span>@(detail.RegistrationRequired ? "Required" : "Not Required")</span></div>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm mb-3">
                <div class="card-header bg-white"><strong><i class="bi bi-link-45deg me-1"></i>Connections</strong></div>
                <div class="card-body">
                    <div class="row g-2">
                        <div class="col-sm-6">
                            <small class="text-muted d-block">Inventory Items</small>
                            <a href="javascript:void(0)" @onclick="GoToInventory">@detail.InventoryCount in stock</a>
                        </div>
                        <div class="col-sm-6">
                            <small class="text-muted d-block">Installed Assets</small>
                            <a href="javascript:void(0)" @onclick="GoToAssets">@detail.AssetCount assets</a>
                        </div>
                    </div>
                    <hr class="my-2" />
                    <div class="d-flex gap-3 text-muted small">
                        <span><strong>Created:</strong> @detail.CreatedAt.ToString("MMM dd, yyyy h:mm tt")</span>
                        <span><strong>Updated:</strong> @detail.UpdatedAt.ToString("MMM dd, yyyy h:mm tt")</span>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrWhiteSpace(detail.Notes))
            {
                <div class="card border-0 shadow-sm mb-3">
                    <div class="card-header bg-white"><strong><i class="bi bi-journal-text me-1"></i>Notes</strong></div>
                    <div class="card-body"><p class="text-muted small mb-0">@detail.Notes</p></div>
                </div>
            }
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted mb-2">Quick Actions</h6>
                    <a href="/inventory" class="btn btn-outline-secondary btn-sm w-100 mb-2"><i class="bi bi-boxes me-1"></i>View Inventory</a>
                    <a href="/assets" class="btn btn-outline-secondary btn-sm w-100 mb-2"><i class="bi bi-cpu me-1"></i>View Assets</a>
                    <a href="/materiallists" class="btn btn-outline-secondary btn-sm w-100"><i class="bi bi-list-check me-1"></i>Material Lists</a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <!-- LIST VIEW -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0"><i class="bi bi-box-seam-fill me-2"></i>Products</h4>
        <div class="d-flex gap-2 align-items-center">
            <div class="form-check form-switch mb-0">
                <input class="form-check-input" type="checkbox" id="showArchivedProducts" checked="@filter.ShowArchived" @onchange="ToggleShowArchived" />
                <label class="form-check-label small" for="showArchivedProducts">
                    <i class="bi bi-archive me-1"></i>Show Archived
                </label>
            </div>
            @if (!filter.ShowArchived)
            {
                <button class="btn btn-primary btn-sm" @onclick="GoToNew"><i class="bi bi-plus-lg me-1"></i>New Product</button>
            }
        </div>
    </div>
    <div class="card border-0 shadow-sm mb-3">
        <div class="card-body py-2">
            <div class="row g-2 align-items-end">
                <div class="col-md-7">
                    <input type="text" class="form-control form-control-sm" placeholder="Search products..." @bind="filter.Search" @bind:event="oninput" @bind:after="LoadProducts" />
                </div>
                <div class="col-md-5">
                    <input type="text" class="form-control form-control-sm" placeholder="Filter by category..." @bind="filter.Category" @bind:event="oninput" @bind:after="LoadProducts" />
                </div>
            </div>
        </div>
    </div>

    @* Bulk Action Bar *@
    @if (_selectedIds.Count > 0)
    {
        <div class="alert alert-info d-flex justify-content-between align-items-center py-2 mb-3">
            <span><strong>@_selectedIds.Count</strong> product(s) selected</span>
            <div class="d-flex gap-2">
                @if (filter.ShowArchived)
                {
                    <button class="btn btn-success btn-sm" @onclick="BulkRestore"><i class="bi bi-arrow-counterclockwise me-1"></i>Restore</button>
                    @if (!_confirmBulkDelete)
                    {
                        <button class="btn btn-danger btn-sm" @onclick="() => _confirmBulkDelete = true"><i class="bi bi-trash3 me-1"></i>Delete Permanently</button>
                    }
                    else
                    {
                        <button class="btn btn-danger btn-sm fw-semibold" @onclick="BulkDeletePermanently"><i class="bi bi-exclamation-triangle me-1"></i>Confirm Delete Forever</button>
                        <button class="btn btn-outline-secondary btn-sm" @onclick="() => _confirmBulkDelete = false">Cancel</button>
                    }
                }
                else
                {
                    <button class="btn btn-warning btn-sm" @onclick="BulkArchive"><i class="bi bi-archive me-1"></i>Archive</button>
                    @if (!_confirmBulkDelete)
                    {
                        <button class="btn btn-danger btn-sm" @onclick="() => _confirmBulkDelete = true"><i class="bi bi-trash3 me-1"></i>Delete Permanently</button>
                    }
                    else
                    {
                        <button class="btn btn-danger btn-sm fw-semibold" @onclick="BulkDeletePermanently"><i class="bi bi-exclamation-triangle me-1"></i>Confirm Delete Forever</button>
                        <button class="btn btn-outline-secondary btn-sm" @onclick="() => _confirmBulkDelete = false">Cancel</button>
                    }
                }
                <button class="btn btn-outline-secondary btn-sm" @onclick="ClearSelection"><i class="bi bi-x-lg me-1"></i>Clear</button>
            </div>
        </div>
    }

    <div class="card border-0 shadow-sm">
        @if (filter.ShowArchived)
        {
            <div class="card-header bg-warning bg-opacity-10 border-0">
                <small class="text-muted"><i class="bi bi-archive me-1"></i>Showing archived products. Select items to restore or permanently delete.</small>
            </div>
        }
        @if (products is null)
        {
            <div class="card-body text-center py-4"><div class="spinner-border spinner-border-sm"></div> Loading...</div>
        }
        else if (!products.Any())
        {
            <div class="card-body text-center py-5 text-muted">
                <i class="bi @(filter.ShowArchived ? "bi-archive" : "bi-box-seam")" style="font-size: 3rem;"></i>
                <p class="mt-2">@(filter.ShowArchived ? "No archived products." : "No products found.") @if (!filter.ShowArchived) { <a href="javascript:void(0)" @onclick="GoToNew">Create one</a><text>.</text> }</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th style="width:40px;">
                                <input type="checkbox" class="form-check-input" checked="@_allSelected" @onchange="ToggleSelectAll" title="Select all" />
                            </th>
                            <th style="cursor:pointer" @onclick='() => ToggleSort("Name")'>Name @SortIcon("Name")</th>
                            <th>Manufacturer</th>
                            <th>Model</th>
                            <th style="cursor:pointer" @onclick='() => ToggleSort("Category")'>Category @SortIcon("Category")</th>
                            <th style="cursor:pointer" @onclick='() => ToggleSort("Cost")'>Wholesale @SortIcon("Cost")</th>
                            <th style="cursor:pointer" @onclick='() => ToggleSort("Price")'>Sell Price @SortIcon("Price")</th>
                            <th>Status</th>
                            <th>Stock</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in products)
                        {
                            <tr class="@(_selectedIds.Contains(p.Id) ? "table-active" : "")">
                                <td @onclick:stopPropagation="true">
                                    <input type="checkbox" class="form-check-input" checked="@_selectedIds.Contains(p.Id)" @onchange="() => ToggleRowSelection(p.Id)" />
                                </td>
                                <td style="cursor:pointer" @onclick="() => GoToDetail(p.Id)">
                                    <strong>@(p.Name.Length > 0 ? p.Name : $"{p.Brand} {p.ModelNumber}")</strong>
                                </td>
                                <td>@(p.Brand ?? "—")</td>
                                <td>@(p.ModelNumber ?? "—")</td>
                                <td>@(p.Category ?? "—")</td>
                                <td>@p.Cost.ToString("C")</td>
                                <td>@p.Price.ToString("C")</td>
                                <td>
                                    @if (filter.ShowArchived)
                                    {
                                        <span class="badge bg-secondary">Archived</span>
                                    }
                                    else
                                    {
                                        @if (p.IsActive) { <span class="badge bg-success">Active</span> }
                                        @if (p.IsDiscontinued) { <span class="badge bg-warning text-dark">Discontinued</span> }
                                    }
                                </td>
                                <td>@p.InventoryCount</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
    @if (!string.IsNullOrEmpty(_bulkMsg))
    {
        <div class="alert @(_bulkMsgIsError ? "alert-danger" : "alert-success") mt-2 mb-0 py-2">
            <i class="bi @(_bulkMsgIsError ? "bi-x-circle" : "bi-check-circle") me-1"></i>@_bulkMsg
        </div>
    }
}

@code {
    [Parameter] public int? Id { get; set; }
    [SupplyParameterFromQuery] public string? View { get; set; }

    private string mode = "list";
    private List<ProductListItem>? products;
    private ProductFilter filter = new();
    private ProductDetail? detail;
    private ProductEditModel form = new();
    private int? editId;
    private string? errorMsg;
    private bool _confirmArchive;

    // Multi-select & bulk action state
    private HashSet<int> _selectedIds = [];
    private bool _confirmBulkDelete;
    private string? _bulkMsg;
    private bool _bulkMsgIsError;
    private bool _allSelected => products is not null && products.Count > 0 && products.All(p => _selectedIds.Contains(p.Id));

    private List<string> _productCategories = ["Air Conditioner", "Furnace", "Heat Pump", "Ductwork", "Thermostat", "Air Handler", "Boiler", "Mini Split", "Package Unit", "Parts", "Supplies", "Other"];
    private List<string> _equipmentTypes = ["Residential", "Commercial", "Light Commercial", "Industrial"];
    private List<string> _fuelTypes = ["Electric", "Natural Gas", "Propane", "Oil", "Dual Fuel"];
    private List<string> _tonnageOptions = ["1.5 Ton", "2 Ton", "2.5 Ton", "3 Ton", "3.5 Ton", "4 Ton", "5 Ton"];
    private List<string> _brandOptions = [];
    private List<string> _refrigerantOptions = [];
    private List<string> _voltageOptions = [];
    private string _brandSelectValue = "";
    private string _refrigerantSelectValue = "";
    private string _voltageSelectValue = "";
    private bool _showCustomBrand;
    private bool _showCustomRefrigerant;
    private bool _showCustomVoltage;
    private decimal _defaultTaxRate = 9.75m;

    private void OnProductTaxToggled()
    {
        if (form.Price <= 0 || _defaultTaxRate <= 0) return;
        var multiplier = 1 + (_defaultTaxRate / 100m);
        form.Price = form.TaxIncludedInPrice
            ? Math.Round(form.Price * multiplier, 2)
            : Math.Round(form.Price / multiplier, 2);
    }

    protected override void OnInitialized()
    {
        Nav.LocationChanged += OnLocationChanged;
    }

    protected override async Task OnParametersSetAsync()
    {
        await DetermineView();
    }

    private async void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        await DetermineView();
        await InvokeAsync(StateHasChanged);
    }

    private async Task DetermineView()
    {
        var uri = Nav.ToAbsoluteUri(Nav.Uri);
        if (uri.AbsolutePath.Contains("/products/new", StringComparison.OrdinalIgnoreCase))
        {
            mode = "form"; editId = null; form = new ProductEditModel { IsActive = true }; await LoadFormDropdowns();
        }
        else if (Id.HasValue && uri.AbsolutePath.Contains("/edit", StringComparison.OrdinalIgnoreCase))
        {
            await LoadForEdit(Id.Value); await LoadFormDropdowns();
        }
        else if (Id.HasValue)
        {
            await LoadDetail(Id.Value);
        }
        else
        {
            mode = "list"; await LoadProducts();
        }
    }

    public void Dispose()
    {
        Nav.LocationChanged -= OnLocationChanged;
    }

    private async Task LoadProducts() => products = await ProductSvc.GetProductsAsync(filter);

    private async Task LoadFormDropdowns()
    {
        var cats = await DropdownSvc.GetOptionsAsync("ProductCategory");
        if (cats.Count > 0) _productCategories = cats.Where(o => o.IsActive).Select(o => o.Value).ToList();
        var eqTypes = await DropdownSvc.GetOptionsAsync("EquipmentCategory");
        if (eqTypes.Count > 0) _equipmentTypes = eqTypes.Where(o => o.IsActive).Select(o => o.Value).ToList();
        var fuels = await DropdownSvc.GetOptionsAsync("FuelType");
        if (fuels.Count > 0) _fuelTypes = fuels.Where(o => o.IsActive).Select(o => o.Value).ToList();
        var tons = await DropdownSvc.GetOptionsAsync("Tonnage");
        if (tons.Count > 0) _tonnageOptions = tons.Where(o => o.IsActive).Select(o => o.Value).ToList();
        var brands = await DropdownSvc.GetOptionsAsync("Brand");
        if (brands.Count > 0) _brandOptions = brands.Where(o => o.IsActive).Select(o => o.Value).ToList();
        var refrigerants = await DropdownSvc.GetOptionsAsync("RefrigerantType");
        if (refrigerants.Count > 0) _refrigerantOptions = refrigerants.Where(o => o.IsActive).Select(o => o.Value).ToList();
        var voltages = await DropdownSvc.GetOptionsAsync("Voltage");
        if (voltages.Count > 0) _voltageOptions = voltages.Where(o => o.IsActive).Select(o => o.Value).ToList();
        SyncProductDropdowns();
    }

    private void SyncProductDropdowns()
    {
        // Sync brand
        if (!string.IsNullOrWhiteSpace(form.Brand) && _brandOptions.Contains(form.Brand, StringComparer.OrdinalIgnoreCase))
            _brandSelectValue = form.Brand;
        else if (!string.IsNullOrWhiteSpace(form.Brand))
            { _brandSelectValue = "__custom__"; _showCustomBrand = true; }
        else
            _brandSelectValue = "";
        // Sync refrigerant
        if (!string.IsNullOrWhiteSpace(form.RefrigerantType) && _refrigerantOptions.Contains(form.RefrigerantType, StringComparer.OrdinalIgnoreCase))
            _refrigerantSelectValue = form.RefrigerantType;
        else if (!string.IsNullOrWhiteSpace(form.RefrigerantType))
            { _refrigerantSelectValue = "__custom__"; _showCustomRefrigerant = true; }
        else
            _refrigerantSelectValue = "";
        // Sync voltage
        if (!string.IsNullOrWhiteSpace(form.Voltage) && _voltageOptions.Contains(form.Voltage, StringComparer.OrdinalIgnoreCase))
            _voltageSelectValue = form.Voltage;
        else if (!string.IsNullOrWhiteSpace(form.Voltage))
            { _voltageSelectValue = "__custom__"; _showCustomVoltage = true; }
        else
            _voltageSelectValue = "";
    }

    private void OnBrandSelectChanged(ChangeEventArgs e)
    {
        _brandSelectValue = e.Value?.ToString() ?? "";
        if (_brandSelectValue == "__custom__")
            { _showCustomBrand = true; form.Brand = null; }
        else
            { _showCustomBrand = false; form.Brand = string.IsNullOrEmpty(_brandSelectValue) ? null : _brandSelectValue; }
    }

    private void OnRefrigerantSelectChanged(ChangeEventArgs e)
    {
        _refrigerantSelectValue = e.Value?.ToString() ?? "";
        if (_refrigerantSelectValue == "__custom__")
            { _showCustomRefrigerant = true; form.RefrigerantType = null; }
        else
            { _showCustomRefrigerant = false; form.RefrigerantType = string.IsNullOrEmpty(_refrigerantSelectValue) ? null : _refrigerantSelectValue; }
    }

    private void OnVoltageSelectChanged(ChangeEventArgs e)
    {
        _voltageSelectValue = e.Value?.ToString() ?? "";
        if (_voltageSelectValue == "__custom__")
            { _showCustomVoltage = true; form.Voltage = null; }
        else
            { _showCustomVoltage = false; form.Voltage = string.IsNullOrEmpty(_voltageSelectValue) ? null : _voltageSelectValue; }
    }

    private async Task LoadDetail(int id)
    {
        detail = await ProductSvc.GetProductAsync(id);
        mode = detail is not null ? "detail" : "list";
        if (mode == "list") await LoadProducts();
    }

    private async Task LoadForEdit(int id)
    {
        var p = await ProductSvc.GetProductAsync(id);
        if (p is null) { mode = "list"; await LoadProducts(); return; }
        editId = id;
        form = new ProductEditModel
        {
            Name = p.Name, Brand = p.Brand, ModelNumber = p.ModelNumber,
            ProductNumber = p.ProductNumber, PartNumber = p.PartNumber,
            Barcode = p.Barcode, Category = p.Category,
            EquipmentType = p.EquipmentType, FuelType = p.FuelType,
            Description = p.Description,
            Cost = p.Cost, Price = p.Price, MSRP = p.MSRP,
            MarkupPercent = p.MarkupPercent, TaxIncludedInPrice = p.TaxIncludedInPrice,
            Unit = p.Unit, Specs = p.Specs,
            SupplierName = p.SupplierName, IsTemplate = p.IsTemplate,
            Tonnage = p.Tonnage, RefrigerantType = p.RefrigerantType,
            SEERRating = p.SEERRating, AFUERating = p.AFUERating, Voltage = p.Voltage,
            LaborWarrantyYears = p.LaborWarrantyYears, PartsWarrantyYears = p.PartsWarrantyYears,
            CompressorWarrantyYears = p.CompressorWarrantyYears,
            RegistrationRequired = p.RegistrationRequired,
            IsActive = p.IsActive, IsDiscontinued = p.IsDiscontinued,
            Notes = p.Notes
        };
        mode = "form";
    }

    private async Task SaveProduct()
    {
        try
        {
            errorMsg = null;
            if (string.IsNullOrWhiteSpace(form.Name) && !string.IsNullOrWhiteSpace(form.Brand))
                form.Name = $"{form.Brand} {form.ModelNumber}".Trim();
            if (editId.HasValue)
                await ProductSvc.UpdateProductAsync(editId.Value, form);
            else
                await ProductSvc.CreateProductAsync(form);
            Nav.NavigateTo("/products");
        }
        catch (Exception ex) { errorMsg = ex.Message; }
    }

    private async Task ArchiveDetail()
    {
        if (detail is not null)
        {
            await ProductSvc.ArchiveProductAsync(detail.Id);
            _confirmArchive = false;
            Nav.NavigateTo("/products");
        }
    }

    private void GoToList() => Nav.NavigateTo("/products");
    private void GoToNew() => Nav.NavigateTo("/products/new");
    private void GoToDetail(int id) => Nav.NavigateTo($"/products/{id}");
    private void EditDetail() { if (detail is not null) Nav.NavigateTo($"/products/{detail.Id}/edit"); }
    private void GoToInventory() => Nav.NavigateTo("/inventory");
    private void GoToAssets() => Nav.NavigateTo("/assets");

    private async Task ToggleSort(string column)
    {
        if (filter.SortBy == column) filter.SortDescending = !filter.SortDescending;
        else { filter.SortBy = column; filter.SortDescending = false; }
        await LoadProducts();
    }

    private RenderFragment SortIcon(string column) => builder =>
    {
        var css = filter.SortBy == column
            ? (filter.SortDescending ? "bi-sort-down" : "bi-sort-up")
            : "bi-arrow-down-up opacity-25";
        builder.OpenElement(0, "i");
        builder.AddAttribute(1, "class", $"bi {css} ms-1{(filter.SortBy == column ? " text-primary" : "")}");
        builder.CloseElement();
    };

    // ---- Multi-select & Bulk Actions ----
    private void ToggleRowSelection(int id)
    {
        if (!_selectedIds.Remove(id)) _selectedIds.Add(id);
        _confirmBulkDelete = false;
    }

    private void ToggleSelectAll()
    {
        if (products is null) return;
        if (_allSelected)
            _selectedIds.Clear();
        else
            foreach (var p in products) _selectedIds.Add(p.Id);
        _confirmBulkDelete = false;
    }

    private void ClearSelection()
    {
        _selectedIds.Clear();
        _confirmBulkDelete = false;
        _bulkMsg = null;
    }

    private async Task ToggleShowArchived(ChangeEventArgs e)
    {
        filter.ShowArchived = (bool)(e.Value ?? false);
        ClearSelection();
        await LoadProducts();
    }

    private async Task BulkArchive()
    {
        if (_selectedIds.Count == 0) return;
        try
        {
            var count = await ProductSvc.BulkArchiveProductsAsync(_selectedIds.ToList());
            _bulkMsg = $"{count} product(s) archived.";
            _bulkMsgIsError = false;
            ClearSelection();
            await LoadProducts();
        }
        catch (Exception ex) { _bulkMsg = ex.Message; _bulkMsgIsError = true; }
    }

    private async Task BulkRestore()
    {
        if (_selectedIds.Count == 0) return;
        try
        {
            var count = await ProductSvc.BulkRestoreProductsAsync(_selectedIds.ToList());
            _bulkMsg = $"{count} product(s) restored.";
            _bulkMsgIsError = false;
            ClearSelection();
            await LoadProducts();
        }
        catch (Exception ex) { _bulkMsg = ex.Message; _bulkMsgIsError = true; }
    }

    private async Task BulkDeletePermanently()
    {
        if (_selectedIds.Count == 0) return;
        try
        {
            var count = await ProductSvc.BulkDeleteProductsPermanentlyAsync(_selectedIds.ToList());
            _bulkMsg = $"{count} product(s) permanently deleted.";
            _bulkMsgIsError = false;
            ClearSelection();
            await LoadProducts();
        }
        catch (Exception ex) { _bulkMsg = ex.Message; _bulkMsgIsError = true; }
    }
}
