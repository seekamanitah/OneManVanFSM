                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Balance Due</label>
                            <div class="form-control form-control-sm fw-bold @(invoiceForm.BalanceDue > 0 ? "text-warning bg-warning bg-opacity-10 border-warning" : "text-success")">
                                @invoiceForm.BalanceDue.ToString("C")
                            </div>
                        </div>
                    </div>

                    @* ?? Notes & Terms ?? *@
                    <h6 class="border-bottom pb-2 mb-3"><i class="bi bi-journal-text me-1"></i>Notes & Terms</h6>
                    <div class="mb-2">
                        <label class="form-label">Notes</label>
                        <InputTextArea @bind-Value="invoiceForm.Notes" class="form-control form-control-sm" rows="3" placeholder="Additional notes for this invoice..." />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Terms</label>
                        <InputTextArea @bind-Value="invoiceForm.Terms" class="form-control form-control-sm" rows="3" placeholder="Payment terms and conditions..." />
                    </div>

