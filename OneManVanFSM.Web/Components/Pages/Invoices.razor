                            <input type="text" class="form-control form-control-sm" value="@invoiceForm.TaxAmount.ToString("C")" readonly />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label fw-semibold">Total</label>
                            <input type="text" class="form-control form-control-sm fw-bold" value="@invoiceForm.Total.ToString("C")" readonly />
                        </div>
