@page "/financials/invoices"
@page "/financials/invoices/{Id:int}"
@rendermode InteractiveServer
@implements IDisposable
@inject IFinancialService FinSvc
@inject ICustomerService CustomerSvc
@inject IAssetService AssetSvc
@inject IJobService JobSvc
@inject ISiteService SiteSvc
@inject IInventoryService InvSvc
@inject NavigationManager Nav
@inject IJSRuntime JS
@inject ICompanyProfileService CompanyProfileSvc
@inject IDropdownService DropdownSvc
@inject IEmailService EmailSvc
@inject IPdfService PdfSvc

<PageTitle>Invoices - OneManVanFSM</PageTitle>

@if (mode == "detail" && invoiceDetail is not null)
{
    <div class="d-flex align-items-center mb-3 no-print">
        <button class="btn btn-outline-secondary btn-sm me-1" @onclick="BackToList" title="Back to list"><i class="bi bi-arrow-left"></i></button>
        <button class="btn btn-outline-secondary btn-sm me-1" @onclick="GoToPrevInvoice" disabled="@(GetAdjacentInvoiceId(-1) is null)" title="Previous"><i class="bi bi-chevron-left"></i></button>
        <button class="btn btn-outline-secondary btn-sm me-2" @onclick="GoToNextInvoice" disabled="@(GetAdjacentInvoiceId(1) is null)" title="Next"><i class="bi bi-chevron-right"></i></button>
        <h4 class="mb-0"><i class="bi bi-receipt me-2"></i>@invoiceDetail.InvoiceNumber</h4>
        <span class="badge @GetInvBadge(invoiceDetail.Status) ms-2">@invoiceDetail.Status</span>
        <div class="ms-auto d-flex gap-1">
            <div class="dropdown d-inline-block">
                <button class="btn btn-outline-secondary btn-sm dropdown-toggle" data-bs-toggle="dropdown" title="Print template style"><i class="bi bi-palette me-1"></i>@_printTemplate</button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><button class="dropdown-item @(_printTemplate == "Professional" ? "active" : "")" @onclick='() => SetPrintTemplate("Professional")'>Professional (Navy)</button></li>
                    <li><button class="dropdown-item @(_printTemplate == "Classic" ? "active" : "")" @onclick='() => SetPrintTemplate("Classic")'>Classic (B&W)</button></li>
                    <li><button class="dropdown-item @(_printTemplate == "Modern" ? "active" : "")" @onclick='() => SetPrintTemplate("Modern")'>Modern (Teal)</button></li>
                </ul>
            </div>
            <button class="btn btn-outline-success btn-sm" @onclick="PrintInvoice" title="Print / PDF"><i class="bi bi-printer me-1"></i>Print</button>
            <button class="btn btn-outline-info btn-sm" @onclick="OpenEmailModal" title="Email invoice"><i class="bi bi-envelope me-1"></i>Email</button>
            <button class="btn btn-outline-primary btn-sm" @onclick="EditInvoiceFromDetail"><i class="bi bi-pencil me-1"></i>Edit</button>
            @if (invoiceDetail.Status == InvoiceStatus.Draft)
            {
                <button class="btn btn-outline-info btn-sm me-1" @onclick="() => ChangeInvoiceStatus(InvoiceStatus.Sent)"><i class="bi bi-send me-1"></i>Send</button>
            }
            @if (invoiceDetail.Status == InvoiceStatus.Sent || invoiceDetail.Status == InvoiceStatus.Overdue)
            {
                <button class="btn btn-success btn-sm me-1" @onclick="() => ChangeInvoiceStatus(InvoiceStatus.Paid)"><i class="bi bi-check-circle me-1"></i>Mark Paid</button>
            }
            @if (invoiceDetail.Status != InvoiceStatus.Void)
            {
                @if (_confirmVoid)
                {
                    <button class="btn btn-danger btn-sm" @onclick="async () => { _confirmVoid = false; await ChangeInvoiceStatus(InvoiceStatus.Void); }"><i class="bi bi-exclamation-triangle me-1"></i>Confirm Void</button>
                    <button class="btn btn-outline-secondary btn-sm" @onclick="() => _confirmVoid = false">Cancel</button>
                }
                else
                {
                    <button class="btn btn-outline-danger btn-sm" @onclick="() => _confirmVoid = true"><i class="bi bi-x-circle me-1"></i>Void</button>
                }
            }
        </div>
    </div>

    @* -- Print-Only Professional Invoice -- *@
    <div class="print-doc d-none @PrintTemplateClass">
        <div class="print-doc-banner">
            <div class="print-doc-banner-left">
                <p class="print-doc-type">Invoice</p>
                <p class="print-doc-number-line"><strong>@invoiceDetail.InvoiceNumber</strong></p>
            </div>
            <div class="print-doc-banner-right">
                @if (_companyProfile is not null)
                {
                    <p class="print-company-name">@_companyProfile.Name</p>
                    @if (!string.IsNullOrWhiteSpace(_companyProfile.Address)) { <p class="print-company-detail">@_companyProfile.Address</p> }
                    @if (!string.IsNullOrWhiteSpace(_companyProfile.Phone)) { <p class="print-company-detail">@_companyProfile.Phone</p> }
                    @if (!string.IsNullOrWhiteSpace(_companyProfile.Email)) { <p class="print-company-detail">@_companyProfile.Email</p> }
                    @if (!string.IsNullOrWhiteSpace(_companyProfile.TaxId)) { <p class="print-company-detail">Tax ID: @_companyProfile.TaxId</p> }
                }
            </div>
        </div>
        <div class="print-doc-info-bar">
            <div class="print-info-item"><span class="print-info-label">Status</span><span class="print-info-value">@invoiceDetail.Status</span></div>
            @if (invoiceDetail.InvoiceDate.HasValue) { <div class="print-info-item"><span class="print-info-label">Invoice Date</span><span class="print-info-value">@invoiceDetail.InvoiceDate.Value.ToString("MMM dd, yyyy")</span></div> }
            @if (invoiceDetail.DueDate.HasValue) { <div class="print-info-item"><span class="print-info-label">Due Date</span><span class="print-info-value">@invoiceDetail.DueDate.Value.ToString("MMM dd, yyyy")</span></div> }
            @if (!string.IsNullOrWhiteSpace(invoiceDetail.PaymentTerms)) { <div class="print-info-item"><span class="print-info-label">Terms</span><span class="print-info-value">@invoiceDetail.PaymentTerms</span></div> }
            @if (!string.IsNullOrWhiteSpace(invoiceDetail.PricingType)) { <div class="print-info-item"><span class="print-info-label">Pricing</span><span class="print-info-value">@invoiceDetail.PricingType</span></div> }
        </div>
        <div class="print-doc-addresses">
            <div class="print-addr-block">
                @if (invoiceDetail.CustomerName is not null)
                {
                    <span class="print-addr-label">Bill To</span>
                    <p class="print-addr-name">@invoiceDetail.CustomerName</p>
                    @if (!string.IsNullOrWhiteSpace(invoiceDetail.CustomerAddress))
                    {
                        <p class="print-addr-line">@invoiceDetail.CustomerAddress</p>
                        @if (!string.IsNullOrWhiteSpace(invoiceDetail.CustomerCity))
                        {
                            <p class="print-addr-line">@invoiceDetail.CustomerCity@((!string.IsNullOrWhiteSpace(invoiceDetail.CustomerState)) ? $", {invoiceDetail.CustomerState}" : "") @invoiceDetail.CustomerZip</p>
                        }
                    }
                    @if (!string.IsNullOrWhiteSpace(invoiceDetail.CustomerPhone)) { <p class="print-addr-line">@invoiceDetail.CustomerPhone</p> }
                    @if (!string.IsNullOrWhiteSpace(invoiceDetail.CustomerEmail)) { <p class="print-addr-line">@invoiceDetail.CustomerEmail</p> }
                }
                @if (invoiceDetail.SiteName is not null && invoiceDetail.IncludeSiteLocation)
                {
                    <p class="print-addr-line" style="margin-top:3pt;font-size:7.5pt;"><strong>Site:</strong> @invoiceDetail.SiteName@(!string.IsNullOrWhiteSpace(invoiceDetail.SiteAddress) ? $" &mdash; {invoiceDetail.SiteAddress}" : "")@(!string.IsNullOrWhiteSpace(invoiceDetail.SiteCity) ? $", {invoiceDetail.SiteCity}" : "")@(!string.IsNullOrWhiteSpace(invoiceDetail.SiteState) ? $", {invoiceDetail.SiteState}" : "") @invoiceDetail.SiteZip</p>
                }
                else if (invoiceDetail.SiteName is not null)
                {
                    <p class="print-addr-line" style="margin-top:2pt;font-size:7.5pt;">Site: @invoiceDetail.SiteName</p>
                }
            </div>
            @if (invoiceDetail.IncludeAssetInfo && invoiceDetail.SiteAssets.Any())
            {
                <div class="print-addr-block">
                    <span class="print-addr-label">Equipment</span>
                    @foreach (var a in invoiceDetail.SiteAssets)
                    {
                        <p class="print-addr-line" style="font-size:7.5pt;">@(a.Brand ?? "") @(a.Model ?? "")@(!string.IsNullOrWhiteSpace(a.SerialNumber) ? $" (S/N: {a.SerialNumber})" : "")</p>
                    }
                </div>
            }
        </div>

        @{ var isMaterialLabor = invoiceDetail.PricingType?.Contains("Material", StringComparison.OrdinalIgnoreCase) == true; }
        @if (invoiceDetail.Lines.Any())
        {
            @if (invoiceDetail.HideLineItemPrices)
            {
                <table class="print-doc-table">
                    <thead><tr><th>Description</th><th class="text-center">Qty</th></tr></thead>
                    <tbody>
                        @foreach (var l in invoiceDetail.Lines.OrderBy(x => x.SortOrder))
                        {
                            <tr><td>@l.Description</td><td class="text-center">@l.Quantity</td></tr>
                        }
                    </tbody>
                </table>
            }
            else if (isMaterialLabor)
            {
                var grouped = invoiceDetail.Lines.OrderBy(x => x.SortOrder).GroupBy(x => x.LineType ?? "Other");
                <table class="print-doc-table">
                    <thead><tr><th>Description</th><th class="text-center">Qty</th><th class="text-end">Unit Price</th><th class="text-end">Amount</th></tr></thead>
                    <tbody>
                        @foreach (var group in grouped)
                        {
                            <tr class="print-section-divider"><td colspan="4">@group.Key</td></tr>
                            @foreach (var l in group)
                            {
                                <tr><td>@l.Description</td><td class="text-center">@l.Quantity</td><td class="text-end">@l.UnitPrice.ToString("C")</td><td class="text-end">@l.LineTotal.ToString("C")</td></tr>
                            }
                        }
                    </tbody>
                </table>
            }
            else
            {
                <table class="print-doc-table">
                    <thead><tr><th>Description</th><th class="text-center">Qty</th><th class="text-end">Unit Price</th><th class="text-end">Amount</th></tr></thead>
                    <tbody>
                        @foreach (var l in invoiceDetail.Lines.OrderBy(x => x.SortOrder))
                        {
                            <tr><td>@l.Description</td><td class="text-center">@l.Quantity</td><td class="text-end">@l.UnitPrice.ToString("C")</td><td class="text-end">@l.LineTotal.ToString("C")</td></tr>
                        }
                    </tbody>
                </table>
            }
        }

        <div class="print-doc-totals">
            @if (!invoiceDetail.HideLineItemPrices)
            {
                <div class="print-total-row print-total-subtotal"><span class="print-total-label">Subtotal</span><span class="print-total-value">@invoiceDetail.Subtotal.ToString("C")</span></div>
                @if (invoiceDetail.TaxAmount > 0) { <div class="print-total-row"><span class="print-total-label">Tax (@(invoiceDetail.TaxRate)%)</span><span class="print-total-value">@invoiceDetail.TaxAmount.ToString("C")</span></div> }
                @if (invoiceDetail.MarkupAmount > 0) { <div class="print-total-row"><span class="print-total-label">Markup</span><span class="print-total-value">@invoiceDetail.MarkupAmount.ToString("C")</span></div> }
                @if (invoiceDetail.DiscountAmount.HasValue && invoiceDetail.DiscountAmount > 0) { <div class="print-total-row"><span class="print-total-label">Discount@(invoiceDetail.DiscountType == "Percent" ? $" ({invoiceDetail.DiscountValue}%)" : "")</span><span class="print-total-value">-@invoiceDetail.DiscountAmount.Value.ToString("C")</span></div> }
            }
            <div class="print-total-row print-grand-total"><span class="print-total-label">Total</span><span class="print-total-value">@invoiceDetail.Total.ToString("C")</span></div>
            @if (invoiceDetail.AmountPaid > 0) { <div class="print-total-row"><span class="print-total-label">Amount Paid</span><span class="print-total-value">@invoiceDetail.AmountPaid.ToString("C")</span></div> }
            @if (invoiceDetail.BalanceDue > 0)
            {
                <div class="print-total-row print-balance-due"><span class="print-total-label">Balance Due</span><span class="print-total-value">@invoiceDetail.BalanceDue.ToString("C")</span></div>
            }
            else
            {
                <div class="print-total-row print-balance-paid"><span class="print-total-label">Balance Due</span><span class="print-total-value">$0.00</span></div>
            }
            @if (invoiceDetail.DepositApplied.HasValue && invoiceDetail.DepositApplied > 0)
            {
                <div class="print-deposit-callout"><span class="print-deposit-label">Deposit Applied:</span> @invoiceDetail.DepositApplied.Value.ToString("C")</div>
            }
        </div>

        @if (invoiceDetail.Payments.Any())
        {
            <div class="print-payments-block">
                <div class="print-payments-heading">Payments Received</div>
                <table class="print-doc-table">
                    <thead><tr><th>Date</th><th>Method</th><th>Reference</th><th class="text-end">Amount</th></tr></thead>
                    <tbody>
                        @foreach (var p in invoiceDetail.Payments)
                        {
                            <tr><td>@p.PaymentDate.ToString("MMM dd, yyyy")</td><td>@p.Method</td><td>@(p.Reference ?? "--")</td><td class="text-end">@p.Amount.ToString("C")</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        }

        <div class="print-doc-terms">
            @if (!string.IsNullOrWhiteSpace(invoiceDetail.Terms))
            {
                <div class="print-doc-terms-block"><div class="print-terms-heading">Terms & Conditions</div><p class="print-terms-text">@invoiceDetail.Terms</p></div>
            }
            @if (invoiceDetail.IncludeJobDescription && !string.IsNullOrWhiteSpace(invoiceDetail.JobDescription))
            {
                <div class="print-doc-terms-block"><div class="print-terms-heading">Job Description</div><p class="print-terms-text">@invoiceDetail.JobDescription</p></div>
            }
            @if (invoiceDetail.IncludeNotes && !string.IsNullOrWhiteSpace(invoiceDetail.Notes))
            {
                <div class="print-doc-terms-block"><div class="print-terms-heading">Notes</div><p class="print-terms-text">@invoiceDetail.Notes</p></div>
            }
        </div>

        <div class="print-doc-footer">
            @if (_companyProfile is not null)
            {
                @if (!string.IsNullOrWhiteSpace(_companyProfile.Phone)) { <span class="print-footer-item"><i class="bi bi-telephone print-footer-icon"></i> @_companyProfile.Phone</span> }
                @if (!string.IsNullOrWhiteSpace(_companyProfile.Email)) { <span class="print-footer-item"><i class="bi bi-envelope print-footer-icon"></i> @_companyProfile.Email</span> }
                @if (!string.IsNullOrWhiteSpace(_companyProfile.Address)) { <span class="print-footer-item"><i class="bi bi-geo-alt print-footer-icon"></i> @_companyProfile.Address</span> }
            }
        </div>
        <div class="print-doc-thankyou">Thank you for your business!</div>
    </div>

    @* -- Detail Cards (screen only) -- *@
    <div class="row g-3 print-screen-only">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-body">
                    <div class="row g-2 mb-3">
                        @if (invoiceDetail.CustomerName is not null) { <div class="col-sm-4"><strong>Customer:</strong> <a href="javascript:void(0)" @onclick="() => GoToCustomer(invoiceDetail.CustomerId!.Value)">@invoiceDetail.CustomerName</a></div> }
                        @if (invoiceDetail.SiteName is not null)
                        {
                            <div class="col-sm-4">
                                <strong>Site:</strong> <a href="sites/@invoiceDetail.SiteId">@invoiceDetail.SiteName</a>
                                @if (invoiceDetail.IncludeSiteLocation && !string.IsNullOrWhiteSpace(invoiceDetail.SiteAddress))
                                {
                                    <br /><small class="text-muted">@invoiceDetail.SiteAddress</small>
                                    @if (!string.IsNullOrWhiteSpace(invoiceDetail.SiteCity))
                                    {
                                        <br /><small class="text-muted">@invoiceDetail.SiteCity@((!string.IsNullOrWhiteSpace(invoiceDetail.SiteState)) ? $", {invoiceDetail.SiteState}" : "") @invoiceDetail.SiteZip</small>
                                    }
                                }
                            </div>
                        }
                        @if (invoiceDetail.JobNumber is not null)
                        {
                            <div class="col-sm-4">
                                <strong>Job:</strong> <a href="javascript:void(0)" @onclick="() => GoToJob(invoiceDetail.JobId!.Value)">@invoiceDetail.JobNumber</a>
                                @if (!string.IsNullOrWhiteSpace(invoiceDetail.JobTitle))
                                {
                                    <br /><small class="text-muted">@invoiceDetail.JobTitle</small>
                                }
                            </div>
                        }
                    </div>
                    <div class="row g-2 mb-3">
                        @if (invoiceDetail.InvoiceDate.HasValue) { <div class="col-sm-4"><strong>Invoice Date:</strong> @invoiceDetail.InvoiceDate.Value.ToString("MMM dd, yyyy")</div> }
                        @if (invoiceDetail.DueDate.HasValue) { <div class="col-sm-4"><strong>Due Date:</strong> @invoiceDetail.DueDate.Value.ToString("MMM dd, yyyy")</div> }
                        @if (!string.IsNullOrWhiteSpace(invoiceDetail.PaymentTerms)) { <div class="col-sm-4"><strong>Terms:</strong> @invoiceDetail.PaymentTerms</div> }
                    </div>

                    @if (invoiceDetail.Lines.Any())
                    {
                        <h6 class="border-bottom pb-2 mb-2">Line Items</h6>
                        <div class="table-responsive">
                            <table class="table table-sm mb-0">
                                <thead class="table-light">
                                    <tr><th>Description</th><th class="text-center" style="width:60px;">Qty</th><th class="text-end" style="width:100px;">Unit Price</th><th class="text-end" style="width:90px;">Total</th></tr>
                                </thead>
                                <tbody>
                                    @foreach (var l in invoiceDetail.Lines.OrderBy(x => x.SortOrder))
                                    {
                                        <tr>
                                            <td>
                                                @l.Description
                                                @if (!string.IsNullOrEmpty(l.LineType)) { <span class="badge bg-light text-dark ms-1">@l.LineType</span> }
                                            </td>
                                            <td class="text-center">@l.Quantity</td>
                                            <td class="text-end">@l.UnitPrice.ToString("C")</td>
                                            <td class="text-end">@l.LineTotal.ToString("C")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(invoiceDetail.JobDescription)) { <hr class="my-2" /><p class="text-muted small mb-0"><strong>Job Description:</strong> @invoiceDetail.JobDescription</p> }
                    @if (!string.IsNullOrEmpty(invoiceDetail.Notes)) { <hr class="my-2" /><p class="text-muted small mb-0"><strong>Notes:</strong> @invoiceDetail.Notes</p> }
                    @if (!string.IsNullOrEmpty(invoiceDetail.Terms)) { <hr class="my-2" /><p class="text-muted small mb-0"><strong>Terms:</strong> @invoiceDetail.Terms</p> }
                </div>
            </div>

            @if (invoiceDetail.IncludeAssetInfo && invoiceDetail.SiteAssets.Any())
            {
                <div class="card border-0 shadow-sm mb-3">
                    <div class="card-body">
                        <h6 class="mb-2"><i class="bi bi-cpu me-1"></i>Equipment / Asset Information</h6>
                        <div class="table-responsive">
                            <table class="table table-sm mb-0">
                                <thead class="table-light">
                                    <tr><th>Name</th><th>Brand</th><th>Model</th><th>Serial #</th><th>Type</th><th>Last Serviced</th></tr>
                                </thead>
                                <tbody>
                                    @foreach (var a in invoiceDetail.SiteAssets)
                                    {
                                        <tr>
                                            <td>@(a.Name ?? "—")</td>
                                            <td>@(a.Brand ?? "—")</td>
                                            <td>@(a.Model ?? "—")</td>
                                            <td>@(a.SerialNumber ?? "—")</td>
                                            <td>@(a.AssetType ?? "—")</td>
                                            <td>@(a.LastServiceDate?.ToString("MMM dd, yyyy") ?? "—")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }

            @if (invoiceDetail.Payments.Any())
            {
                <div class="card border-0 shadow-sm mb-3">
                    <div class="card-body">
                        <h6 class="mb-2"><i class="bi bi-cash-stack me-1"></i>Payments Received</h6>
                        <table class="table table-sm mb-0">
                            <thead class="table-light"><tr><th>Date</th><th>Method</th><th>Reference</th><th class="text-end">Amount</th><th>Status</th></tr></thead>
                            <tbody>
                                @foreach (var p in invoiceDetail.Payments)
                                {
                                    <tr><td>@p.PaymentDate.ToString("MMM dd")</td><td>@p.Method</td><td>@(p.Reference ?? "—")</td><td class="text-end">@p.Amount.ToString("C")</td><td><span class="badge bg-success">@p.Status</span></td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }

            @if (showPaymentForm)
            {
                <div class="card border-0 shadow-sm border-success mb-3">
                    <div class="card-header bg-transparent"><h6 class="mb-0"><i class="bi bi-cash me-1"></i>Record Payment</h6></div>
                    <div class="card-body">
                        <EditForm Model="paymentForm" OnValidSubmit="SavePayment">
                            <DataAnnotationsValidator />
                            <div class="row g-2">
                                <div class="col-md-4"><label class="form-label">Amount</label><InputNumber @bind-Value="paymentForm.Amount" class="form-control form-control-sm" /><ValidationMessage For="() => paymentForm.Amount" /></div>
                                <div class="col-md-4"><label class="form-label">Method</label><InputSelect @bind-Value="paymentForm.Method" class="form-select form-select-sm">@foreach (var m in Enum.GetValues<PaymentMethod>()) { <option value="@m">@m</option> }</InputSelect></div>
                                <div class="col-md-4"><label class="form-label">Date</label><InputDate @bind-Value="paymentForm.PaymentDate" class="form-control form-control-sm" /></div>
                                <div class="col-md-6"><label class="form-label">Reference</label><InputText @bind-Value="paymentForm.Reference" class="form-control form-control-sm" /></div>
                                <div class="col-md-6"><label class="form-label">Notes</label><InputText @bind-Value="paymentForm.Notes" class="form-control form-control-sm" /></div>
                            </div>
                            <div class="d-flex justify-content-end gap-2 mt-3">
                                <button type="button" class="btn btn-outline-secondary btn-sm" @onclick="() => showPaymentForm = false">Cancel</button>
                                <button type="submit" class="btn btn-success btn-sm">Save Payment</button>
                            </div>
                        </EditForm>
                    </div>
                </div>
            }
            else if (invoiceDetail.BalanceDue > 0)
            {
                <button class="btn btn-outline-success btn-sm mb-3" @onclick="ShowRecordPayment"><i class="bi bi-cash me-1"></i>Record Payment</button>
            }
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-body">
                    <h6 class="text-muted mb-2">Amount Summary</h6>
                    <div class="d-flex justify-content-between mb-1"><span>Subtotal</span><span>@invoiceDetail.Subtotal.ToString("C")</span></div>
                    @if (invoiceDetail.TaxAmount > 0) { <div class="d-flex justify-content-between mb-1"><span>Tax (@(invoiceDetail.TaxRate)%)</span><span>@invoiceDetail.TaxAmount.ToString("C")</span></div> }
                    @if (invoiceDetail.MarkupAmount > 0) { <div class="d-flex justify-content-between mb-1"><span>Markup</span><span>@invoiceDetail.MarkupAmount.ToString("C")</span></div> }
                    @if (invoiceDetail.DiscountAmount.HasValue && invoiceDetail.DiscountAmount > 0) { <div class="d-flex justify-content-between mb-1 text-danger"><span>Discount@(invoiceDetail.DiscountType == "Percent" ? $" ({invoiceDetail.DiscountValue}%)" : "")</span><span>-@invoiceDetail.DiscountAmount.Value.ToString("C")</span></div> }
                    <hr class="my-2" />
                    <div class="d-flex justify-content-between fw-bold"><span>Total</span><span>@invoiceDetail.Total.ToString("C")</span></div>
                    <div class="d-flex justify-content-between mt-1"><span>Paid</span><span class="text-success">@invoiceDetail.AmountPaid.ToString("C")</span></div>
                    <hr class="my-2" />
                    <div class="d-flex justify-content-between fw-bold fs-6 @(invoiceDetail.BalanceDue > 0 ? "text-danger" : "text-success")"><span>Balance Due</span><span>@invoiceDetail.BalanceDue.ToString("C")</span></div>
                </div>
            </div>
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between text-muted small">
                        <span><i class="bi bi-info-circle me-1"></i>Created @invoiceDetail.CreatedAt.ToString("MMM dd, yyyy h:mm tt")</span>
                    </div>
                    <div class="d-flex justify-content-between text-muted small mt-1">
                        <span>Updated @invoiceDetail.UpdatedAt.ToString("MMM dd, yyyy h:mm tt")</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="d-flex align-items-center gap-2">
            <button class="btn btn-outline-secondary btn-sm" @onclick='() => Nav.NavigateTo("/financials")'><i class="bi bi-arrow-left"></i></button>
            <h4 class="mb-0"><i class="bi bi-receipt me-2"></i>Invoices</h4>
        </div>
        <div class="d-flex gap-2 align-items-center">
            <div class="form-check form-switch mb-0">
                <input class="form-check-input" type="checkbox" id="showArchivedInvoices" checked="@invoiceFilter.ShowArchived" @onchange="ToggleShowArchived" />
                <label class="form-check-label small" for="showArchivedInvoices"><i class="bi bi-archive me-1"></i>Show Archived</label>
            </div>
            @if (!invoiceFilter.ShowArchived) { <button class="btn btn-primary btn-sm" @onclick="ShowInvoiceForm"><i class="bi bi-plus-lg me-1"></i>New Invoice</button> }
        </div>
    </div>

    @if (showForm)
    {
        <div class="card border-0 shadow-sm mb-3">
            <div class="card-header bg-transparent d-flex justify-content-between">
                <h6 class="mb-0">@(editingInvoiceId.HasValue ? "Edit Invoice" : "New Invoice")</h6>
                <button class="btn-close" @onclick="CloseForm"></button>
            </div>
            <div class="card-body">
                <EditForm Model="invoiceForm" OnValidSubmit="SaveInvoice">
                    <DataAnnotationsValidator />

                    @* ?? Invoice Info ?? *@
                    <h6 class="border-bottom pb-2 mb-3"><i class="bi bi-info-circle me-1"></i>Invoice Information</h6>
                    <div class="row g-2 mb-3">
                        <div class="col-md-4">
                            <label class="form-label">Invoice Number</label>
                            <InputText @bind-Value="invoiceForm.InvoiceNumber" class="form-control form-control-sm" placeholder="Auto-generated if blank" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Invoice Date</label>
                            <InputDate @bind-Value="invoiceForm.InvoiceDate" class="form-control form-control-sm" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Due Date</label>
                            <InputDate @bind-Value="invoiceForm.DueDate" class="form-control form-control-sm" />
                        </div>
                    </div>

                    @* ?? Customer & Company ?? *@
                    <h6 class="border-bottom pb-2 mb-3"><i class="bi bi-people me-1"></i>Customer & Company</h6>
                    <div class="row g-2 mb-3">
                        <div class="col-md-4">
                            <label class="form-label">Customer</label>
                            <InputSelect @bind-Value="invoiceForm.CustomerId" @bind-Value:after="OnInvoiceCustomerChanged" class="form-select form-select-sm">
                                <option value="">— Select Customer —</option>
                                @foreach (var c in _customers) { <option value="@c.Id">@c.Name</option> }
                            </InputSelect>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Company <small class="text-muted">(Optional)</small></label>
                            <InputSelect @bind-Value="invoiceForm.CompanyId" class="form-select form-select-sm">
                                <option value="">— None —</option>
                                @foreach (var co in _companyOptions) { <option value="@co.Id">@co.Name</option> }
                            </InputSelect>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Status</label>
                            <InputSelect @bind-Value="invoiceForm.Status" class="form-select form-select-sm">
                                @foreach (var s in _invoiceStatuses) { <option value="@s">@s</option> }
                            </InputSelect>
                        </div>
                    </div>

                    @* ?? Pricing Type ?? *@
                    <div class="row g-2 mb-3">
                        <div class="col-md-12">
                            <label class="form-label fw-semibold">Pricing Type</label>
                            <select class="form-select form-select-sm" @bind="invoiceForm.PricingType">
                                @foreach (var pt in _pricingTypes) { <option value="@pt">@pt</option> }
                            </select>
                            <small class="text-muted">Choose how to structure pricing on this invoice</small>
                        </div>
                    </div>

                    @* ?? Optional: Job / Site / Payment Terms ?? *@
                    <div class="row g-2 mb-3">
                        <div class="col-md-4">
                            <label class="form-label">Linked Job <small class="text-muted">(Optional)</small></label>
                            <select class="form-select form-select-sm" value="@invoiceForm.JobId" @onchange="OnJobSelected">
                                <option value="">— None —</option>
                                @foreach (var j in _jobOptions)
                                {
                                    <option value="@j.Id">@j.JobNumber — @(j.Title ?? "Untitled")</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Site <small class="text-muted">(Optional)</small></label>
                            <InputSelect @bind-Value="invoiceForm.SiteId" class="form-select form-select-sm">
                                <option value="">— None —</option>
                                @foreach (var s in _siteOptions)
                                {
                                    <option value="@s.Id">@s.Name @(!string.IsNullOrEmpty(s.Address) ? $"({s.Address})" : "")</option>
                                }
                            </InputSelect>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Payment Terms</label>
                            <select class="form-select form-select-sm" @bind="invoiceForm.PaymentTerms">
                                <option value="">Select...</option>
                                @foreach (var pt in _paymentTermsOptions) { <option value="@pt">@pt</option> }
                            </select>
                        </div>
                    </div>

                    @* ?? Linked Assets Info (from Job) ?? *@
                    @if (_linkedAssetInfo.Count > 0)
                    {
                        <div class="alert alert-info py-2 small mb-3">
                            <i class="bi bi-cpu me-1"></i><strong>Linked Assets:</strong>
                            @foreach (var a in _linkedAssetInfo)
                            {
                                <span class="badge bg-secondary me-1">@a.Name (@(a.AssetType ?? "Asset"))</span>
                            }
                        </div>
                    }

                    @* ?? Line Items ?? *@
                    <div class="d-flex justify-content-between align-items-center border-bottom pb-2 mb-3">
                        <h6 class="mb-0"><i class="bi bi-list-check me-1"></i>Line Items</h6>
                        <button type="button" class="btn btn-primary btn-sm" @onclick="OpenAddItemModal"><i class="bi bi-plus-circle me-1"></i>Add Item</button>
                    </div>
                    @if (invoiceForm.Lines.Count > 0)
                    {
                        <div class="table-responsive mb-3">
                            <table class="table table-sm table-bordered mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Description</th>
                                        <th style="width:70px;" class="text-center">Qty</th>
                                        <th style="width:100px;" class="text-end">Unit Price</th>
                                        <th style="width:90px;" class="text-end">Total</th>
                                        <th style="width:70px;"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < invoiceForm.Lines.Count; i++)
                                    {
                                        var line = invoiceForm.Lines[i];
                                        var capturedIdx = i;
                                        <tr>
                                            <td>
                                                <input type="text" class="form-control form-control-sm border-0 p-0" @bind="line.Description" />
                                                @if (!string.IsNullOrEmpty(line.LineType)) { <span class="badge bg-light text-dark ms-1">@line.LineType</span> }
                                            </td>
                                            <td class="text-center"><input type="number" class="form-control form-control-sm border-0 p-0 text-center" style="width:60px;" step="0.01" @bind="line.Quantity" @bind:event="oninput" @onchange="RecalcInvoiceTotals" /></td>
                                            <td class="text-end"><input type="number" class="form-control form-control-sm border-0 p-0 text-end" style="width:90px;" step="0.01" @bind="line.UnitPrice" @bind:event="oninput" @onchange="RecalcInvoiceTotals" /></td>
                                            <td class="text-end">@((line.Quantity * line.UnitPrice).ToString("C"))</td>
                                            <td class="text-center">
                                                <button type="button" class="btn btn-sm btn-outline-secondary py-0 px-1" @onclick="() => DuplicateInvoiceLine(capturedIdx)" title="Duplicate"><i class="bi bi-copy"></i></button>
                                                <button type="button" class="btn btn-sm btn-outline-danger py-0 px-1 ms-1" @onclick="() => RemoveInvoiceLine(capturedIdx)"><i class="bi bi-x"></i></button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="table-light">
                                    <tr><td colspan="3" class="text-end fw-semibold">Subtotal</td><td class="text-end fw-semibold">@invoiceForm.Subtotal.ToString("C")</td><td></td></tr>
                                </tfoot>
                            </table>
                        </div>
                    }
                    else
                    {
                        @if (invoiceForm.PricingType == "Flat Rate")
                        {
                            <div class="card bg-light border-0 mb-3">
                                <div class="card-body py-3">
                                    <h6 class="mb-2"><i class="bi bi-cash-coin me-1"></i>Flat Rate Price</h6>
                                    <p class="text-muted small mb-2">Enter the total flat rate price for this invoice. Line items are optional for flat rate invoices.</p>
                                    <div class="row g-2">
                                        <div class="col-md-6">
                                            <label class="form-label fw-semibold">Flat Rate Total</label>
                                            <input type="number" class="form-control form-control-sm" step="0.01" min="0" @bind="invoiceForm.Subtotal" @bind:event="oninput" @onchange="RecalcInvoiceTotals" />
                                        </div>
                                        <div class="col-md-6 d-flex align-items-end">
                                            <button type="button" class="btn btn-outline-primary btn-sm" @onclick="OpenAddItemModal"><i class="bi bi-plus-circle me-1"></i>Add Item (Optional)</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="text-center text-muted py-4 mb-3">
                                <i class="bi bi-list-check" style="font-size:2rem;"></i>
                                <p class="mt-2 mb-0">No items yet. Click "Add Item" to get started.</p>
                            </div>
                        }
                    }

                    @* ?? Invoice Totals ?? *@
                    <h6 class="border-bottom pb-2 mb-3"><i class="bi bi-calculator me-1"></i>Invoice Totals</h6>
                    <div class="row g-2 mb-2">
                        <div class="col-md-4">
                            <label class="form-label fw-semibold">Tax Rate (%)</label>
                            <input type="number" class="form-control form-control-sm" step="0.01" @bind="invoiceForm.TaxRate" @bind:event="oninput" @onchange="RecalcInvoiceTotals" />
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="button" class="btn btn-outline-secondary btn-sm" @onclick="ResetTaxRate" title="Reset to default"><i class="bi bi-arrow-counterclockwise me-1"></i>Reset</button>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label fw-semibold">Tax Amount</label>
                            <input type="text" class="form-control form-control-sm" value="@invoiceForm.TaxAmount.ToString("C")" readonly />
                        </div>
                    </div>
                    <div class="form-check mb-3">
                        <input type="checkbox" class="form-check-input" id="taxIncluded" @bind="invoiceForm.TaxIncludedInPrice" @bind:after="RecalcInvoiceTotals" />
                        <label class="form-check-label" for="taxIncluded">Tax Already Included in Price</label>
                    </div>
                    <div class="row g-2 mb-3">
                        <div class="col-md-4">
                            <label class="form-label fw-semibold">Discount</label>
                            <div class="input-group input-group-sm">
                                <select class="form-select" style="max-width:70px;" @bind="invoiceForm.DiscountType" @bind:after="RecalcInvoiceTotals">
                                    <option value="">—</option>
                                    <option value="Percent">%</option>
                                    <option value="Dollar">$</option>
                                </select>
                                <input type="number" class="form-control" step="0.01" @bind="invoiceForm.DiscountValue" @bind:event="oninput" @onchange="RecalcInvoiceTotals" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-semibold">Discount Amount</label>
                            <input type="text" class="form-control form-control-sm" value="@((invoiceForm.DiscountAmount ?? 0).ToString("C"))" readonly />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-semibold">Total</label>
                            <input type="text" class="form-control form-control-sm fw-bold" value="@invoiceForm.Total.ToString("C")" readonly />
                        </div>
                    </div>
                    <div class="row g-2 mb-3">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Amount Paid</label>
                            <InputNumber @bind-Value="invoiceForm.AmountPaid" class="form-control form-control-sm" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Balance Due</label>
                            <div class="form-control form-control-sm fw-bold @(invoiceForm.BalanceDue > 0 ? "text-warning bg-warning bg-opacity-10 border-warning" : "text-success")">
                                @invoiceForm.BalanceDue.ToString("C")
                            </div>
                        </div>
                    </div>

                    @* ?? Notes & Terms ?? *@
                    <h6 class="border-bottom pb-2 mb-3"><i class="bi bi-journal-text me-1"></i>Notes & Terms</h6>
                    <div class="mb-2">
                        <label class="form-label">Notes</label>
                        <InputTextArea @bind-Value="invoiceForm.Notes" class="form-control form-control-sm" rows="3" placeholder="Additional notes for this invoice..." />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Terms</label>
                        <InputTextArea @bind-Value="invoiceForm.Terms" class="form-control form-control-sm" rows="3" placeholder="Payment terms and conditions..." />
                    </div>

                    @* ? Invoice Display Options ? *@
                    <h6 class="border-bottom pb-2 mb-3"><i class="bi bi-eye me-1"></i>Display Options</h6>
                    <div class="form-check mb-2">
                        <input type="checkbox" class="form-check-input" id="includeSiteLocation" @bind="invoiceForm.IncludeSiteLocation" />
                        <label class="form-check-label" for="includeSiteLocation">Include Site Location on Invoice</label>
                    </div>
                    <div class="form-check mb-2">
                        <input type="checkbox" class="form-check-input" id="includeAssetInfo" @bind="invoiceForm.IncludeAssetInfo" />
                        <label class="form-check-label" for="includeAssetInfo">Include Asset Information on Invoice</label>
                    </div>
                    <div class="form-check mb-2">
                        <input type="checkbox" class="form-check-input" id="includeJobDescription" @bind="invoiceForm.IncludeJobDescription" />
                        <label class="form-check-label" for="includeJobDescription">Include Job Description on Invoice</label>
                    </div>
                    <div class="form-check mb-3">
                        <input type="checkbox" class="form-check-input" id="includeNotes" @bind="invoiceForm.IncludeNotes" />
                        <label class="form-check-label" for="includeNotes">Include Notes on Invoice</label>
                    </div>
                    <div class="form-check mb-3">
                        <input type="checkbox" class="form-check-input" id="hideLineItemPrices" @bind="invoiceForm.HideLineItemPrices" />
                        <label class="form-check-label" for="hideLineItemPrices">Hide Line Item Prices (show items without individual prices, display flat total only)</label>
                    </div>

                    <div class="d-flex justify-content-between border-top pt-3">
                        <button type="button" class="btn btn-outline-secondary btn-sm" @onclick="CloseForm">Cancel</button>
                        <div class="d-flex gap-2 align-items-center">
                            @if (!string.IsNullOrEmpty(_savedMsg)) { <span class="text-success small"><i class="bi bi-check-circle me-1"></i>@_savedMsg</span> }
                            <button type="submit" class="btn btn-outline-primary btn-sm" @onclick="() => _closeAfterSave = false"><i class="bi bi-floppy me-1"></i>Save</button>
                            <button type="submit" class="btn btn-primary btn-sm" @onclick="() => _closeAfterSave = true"><i class="bi bi-check-circle me-1"></i>Save & Close</button>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(errorMsg)) { <div class="alert alert-danger mt-2 mb-0">@errorMsg</div> }
                </EditForm>
            </div>
        </div>
    }

    @* ?? Invoice List ?? *@
    <div class="card border-0 shadow-sm mb-2">
        <div class="card-body py-2">
            <div class="row g-2 align-items-end">
                <div class="col-md-8">
                    <input type="text" class="form-control form-control-sm" placeholder="Search invoices..." @bind="invoiceFilter.Search" @bind:event="oninput" @bind:after="LoadInvoices" />
                </div>
                <div class="col-md-4">
                    <select class="form-select form-select-sm" @bind="invoiceFilterStatus" @bind:after="LoadInvoices">
                        <option value="">All Statuses</option>
                        @foreach (var s in _invoiceStatuses) { <option value="@s">@s</option> }
                    </select>
                </div>
            </div>
        </div>
    </div>

    @if (_selectedIds.Count > 0)
    {
        <div class="alert alert-info d-flex justify-content-between align-items-center py-2 mb-3">
            <span><strong>@_selectedIds.Count</strong> invoice(s) selected</span>
            <div class="d-flex gap-2">
                @if (invoiceFilter.ShowArchived)
                {
                    <button class="btn btn-success btn-sm" @onclick="BulkRestore"><i class="bi bi-arrow-counterclockwise me-1"></i>Restore</button>
                    @if (!_confirmBulkDelete) { <button class="btn btn-danger btn-sm" @onclick="() => _confirmBulkDelete = true"><i class="bi bi-trash3 me-1"></i>Delete Permanently</button> }
                    else { <button class="btn btn-danger btn-sm fw-semibold" @onclick="BulkDeletePermanently"><i class="bi bi-exclamation-triangle me-1"></i>Confirm Delete Forever</button> <button class="btn btn-outline-secondary btn-sm" @onclick="() => _confirmBulkDelete = false">Cancel</button> }
                }
                else
                {
                    <button class="btn btn-warning btn-sm" @onclick="BulkArchive"><i class="bi bi-archive me-1"></i>Archive</button>
                    @if (!_confirmBulkDelete) { <button class="btn btn-danger btn-sm" @onclick="() => _confirmBulkDelete = true"><i class="bi bi-trash3 me-1"></i>Delete Permanently</button> }
                    else { <button class="btn btn-danger btn-sm fw-semibold" @onclick="BulkDeletePermanently"><i class="bi bi-exclamation-triangle me-1"></i>Confirm Delete Forever</button> <button class="btn btn-outline-secondary btn-sm" @onclick="() => _confirmBulkDelete = false">Cancel</button> }
                }
                <button class="btn btn-outline-secondary btn-sm" @onclick="ClearInvoiceSelection"><i class="bi bi-x-lg me-1"></i>Clear</button>
            </div>
        </div>
    }

    <div class="card border-0 shadow-sm">
        @if (invoices is null)
        {
            <div class="card-body text-center py-4"><div class="spinner-border spinner-border-sm"></div></div>
        }
        else if (!invoices.Any())
        {
            <div class="card-body text-center py-5 text-muted"><i class="bi bi-receipt" style="font-size:2rem;"></i>
                @if (invoiceFilter.ShowArchived)
                {
                    <p class="mt-2">No archived invoices to show.</p>
                }
                else
                {
                    <p class="mt-2">No invoices yet.</p>
                }
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="table-light"><tr><th style="width:40px;"><input type="checkbox" class="form-check-input" checked="@_allInvoicesSelected" @onchange="ToggleSelectAllInvoices" title="Select all" /></th><th role="button" @onclick='() => ToggleSort("number")'>Number@(SortIcon("number"))</th><th>Customer</th><th>Status</th><th role="button" @onclick='() => ToggleSort("total")'>Total@(SortIcon("total"))</th><th>Balance</th><th role="button" @onclick='() => ToggleSort("duedate")'>Due@(SortIcon("duedate"))</th></tr></thead>
                    <tbody>
                        @foreach (var i in invoices)
                        {
                            <tr class="@(_selectedIds.Contains(i.Id) ? "table-active" : "")">
                                <td @onclick:stopPropagation="true"><input type="checkbox" class="form-check-input" checked="@_selectedIds.Contains(i.Id)" @onchange="() => ToggleInvoiceRowSelection(i.Id)" /></td>
                                <td style="cursor:pointer" @onclick="() => ViewInvoice(i.Id)"><strong>@i.InvoiceNumber</strong></td>
                                <td>@(i.CustomerName ?? "—")</td>
                                <td><span class="badge @GetInvBadge(i.Status)">@i.Status</span></td>
                                <td>@i.Total.ToString("C")</td>
                                <td>@i.BalanceDue.ToString("C")</td>
                                <td>@(i.DueDate?.ToString("MMM dd") ?? "—")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
    @if (!string.IsNullOrEmpty(_bulkMsg))
    {
        <div class="alert @(_bulkMsgIsError ? "alert-danger" : "alert-success") mt-2 mb-0 py-2"><i class="bi @(_bulkMsgIsError ? "bi-x-circle" : "bi-check-circle") me-1"></i>@_bulkMsg</div>
    }
}

@* ?? Add Item Modal ?? *@
@if (_showItemModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background:rgba(0,0,0,.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header py-2">
                    <h6 class="modal-title"><i class="bi bi-plus-circle me-1"></i>Add Line Item</h6>
                    <button type="button" class="btn-close" @onclick="CloseItemModal"></button>
                </div>
                <div class="modal-body">
                    @* Source toggle *@
                    <ul class="nav nav-tabs nav-fill mb-3">
                        <li class="nav-item">
                            <button type="button" class="nav-link @(_modalItemSource == "custom" ? "active" : "")" @onclick='() => SwitchModalSource("custom")'>Custom Item</button>
                        </li>
                        <li class="nav-item">
                            <button type="button" class="nav-link @(_modalItemSource == "inventory" ? "active" : "")" @onclick='() => SwitchModalSource("inventory")'>From Inventory</button>
                        </li>
                        <li class="nav-item">
                            <button type="button" class="nav-link @(_modalItemSource == "product" ? "active" : "")" @onclick='() => SwitchModalSource("product")'>From Product</button>
                        </li>
                    </ul>

                    @if (_modalItemSource == "inventory")
                    {
                        <div class="mb-3">
                            <label class="form-label">Select Inventory Item</label>
                            <select class="form-select form-select-sm" @onchange="OnModalInventorySelected">
                                <option value="">— Choose an item —</option>
                                @foreach (var inv in _inventoryItems)
                                {
                                    <option value="@inv.Id">@inv.Name (@inv.Quantity in stock) — @inv.Price.ToString("C")</option>
                                }
                            </select>
                        </div>
                    }
                    @if (_modalItemSource == "product")
                    {
                        <div class="mb-3">
                            <label class="form-label">Select Product</label>
                            <select class="form-select form-select-sm" @onchange="OnModalProductSelected">
                                <option value="">— Choose a product —</option>
                                @foreach (var p in productOptions)
                                {
                                    <option value="@p.Id">@p.Name — @p.Price.ToString("C")</option>
                                }
                            </select>
                        </div>
                    }

                    <div class="mb-2">
                        <label class="form-label">Description <span class="text-danger">*</span></label>
                        <input type="text" class="form-control form-control-sm" @bind="_modalLine.Description" placeholder="Item description" />
                    </div>
                    <div class="row g-2 mb-2">
                        <div class="col-6">
                            <label class="form-label">Type</label>
                            <select class="form-select form-select-sm" @bind="_modalLine.LineType">
                                @foreach (var lt in _lineTypes) { <option value="@lt">@lt</option> }
                            </select>
                        </div>
