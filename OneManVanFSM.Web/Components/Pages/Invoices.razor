                    <div class="d-flex justify-content-between border-top pt-3">
                        <button type="button" class="btn btn-outline-secondary btn-sm" @onclick="CloseForm">Cancel</button>
                        <button type="submit" class="btn btn-primary btn-sm"><i class="bi bi-check-circle me-1"></i>@(editingInvoiceId.HasValue ? "Save Invoice" : "Create Invoice")</button>
                    </div>
                    @if (!string.IsNullOrEmpty(errorMsg)) { <div class="alert alert-danger mt-2 mb-0">@errorMsg</div> }
                </EditForm>
            </div>
        </div>
    }

    @* ?? Invoice List ?? *@
