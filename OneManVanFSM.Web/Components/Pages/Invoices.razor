            if (!string.IsNullOrWhiteSpace(_companyProfile.Email)) sb.AppendLine(_companyProfile.Email);
        }
        _emailBody = sb.ToString();
        _showEmailModal = true;
    }

    private void CloseEmailModal() { _showEmailModal = false; _emailSendResult = null; }

    private async Task DownloadPdfForEmail()
    {
        _showEmailModal = false;
        await Task.Delay(100);
        await JS.InvokeVoidAsync("triggerPrint");
    }

    private async Task SendEmailFromModal()
    {
        await JS.InvokeVoidAsync("openMailto", _emailTo, _emailSubject, _emailBody);
        _showEmailModal = false;
    }

    private async Task SendEmailWithPdf()
    {
        if (invoiceDetail is null || string.IsNullOrWhiteSpace(_emailTo)) return;
        _emailSending = true;
        _emailSendResult = null;
        StateHasChanged();
        try
        {
            var pdfHtml = BuildInvoicePdfHtml(invoiceDetail);
            var pdfBytes = await PdfSvc.GeneratePdfFromHtmlAsync(pdfHtml);
            var fileName = $"Invoice_{invoiceDetail.InvoiceNumber}_{DateTime.Now:yyyyMMdd}.pdf";
            await EmailSvc.SendEmailAsync(new EmailMessage
            {
                To = _emailTo,
                Subject = _emailSubject,
                Body = _emailBody,
                Attachments = [new EmailAttachment { FileName = fileName, Content = pdfBytes }],
            });
            _emailSendResult = "Sent successfully!";
        }
        catch (Exception ex) { _emailSendResult = $"Failed: {ex.Message}"; }
        finally { _emailSending = false; }
    }

    private string BuildInvoicePdfHtml(InvoiceDetail d)
    {
        var sb = new System.Text.StringBuilder();
        sb.Append("<div class=\"print-doc\">");

        // Banner
        sb.Append("<div class=\"print-doc-banner\">");
        sb.Append("<div class=\"print-doc-banner-left\">");
        sb.Append("<p class=\"print-doc-type\">Invoice</p>");
        sb.Append($"<p class=\"print-doc-number-line\"><strong>{Enc(d.InvoiceNumber)}</strong></p>");
        sb.Append("</div>");
        sb.Append("<div class=\"print-doc-banner-right\">");
        if (_companyProfile is not null)
        {
            sb.Append($"<p class=\"print-company-name\">{Enc(_companyProfile.Name)}</p>");
            if (!string.IsNullOrWhiteSpace(_companyProfile.Address)) sb.Append($"<p class=\"print-company-detail\">{Enc(_companyProfile.Address)}</p>");
            if (!string.IsNullOrWhiteSpace(_companyProfile.Phone)) sb.Append($"<p class=\"print-company-detail\">{Enc(_companyProfile.Phone)}</p>");
            if (!string.IsNullOrWhiteSpace(_companyProfile.Email)) sb.Append($"<p class=\"print-company-detail\">{Enc(_companyProfile.Email)}</p>");
        }
        sb.Append("</div></div>");

        // Info bar
        sb.Append("<div class=\"print-doc-info-bar\">");
        sb.Append($"<div class=\"print-info-item\"><span class=\"print-info-label\">Status</span><span class=\"print-info-value\">{d.Status}</span></div>");
        if (d.InvoiceDate.HasValue) sb.Append($"<div class=\"print-info-item\"><span class=\"print-info-label\">Date</span><span class=\"print-info-value\">{d.InvoiceDate.Value:MMM dd, yyyy}</span></div>");
        if (d.DueDate.HasValue) sb.Append($"<div class=\"print-info-item\"><span class=\"print-info-label\">Due</span><span class=\"print-info-value\">{d.DueDate.Value:MMM dd, yyyy}</span></div>");
        sb.Append("</div>");

        // Addresses
        sb.Append("<div class=\"print-doc-addresses\">");
        if (!string.IsNullOrEmpty(d.CustomerName))
        {
            sb.Append("<div class=\"print-addr-block\">");
            sb.Append("<span class=\"print-addr-label\">Bill To</span>");
            sb.Append($"<p class=\"print-addr-name\">{Enc(d.CustomerName)}</p>");
            if (!string.IsNullOrEmpty(d.CustomerAddress)) sb.Append($"<p class=\"print-addr-line\">{Enc(d.CustomerAddress)}</p>");
            if (!string.IsNullOrEmpty(d.CustomerEmail)) sb.Append($"<p class=\"print-addr-line\">{Enc(d.CustomerEmail)}</p>");
            sb.Append("</div>");
        }
        if (!string.IsNullOrEmpty(d.SiteName))
        {
            sb.Append("<div class=\"print-addr-block\">");
            sb.Append("<span class=\"print-addr-label\">Site / Location</span>");
            sb.Append($"<p class=\"print-addr-name\">{Enc(d.SiteName)}</p>");
            if (!string.IsNullOrEmpty(d.SiteAddress)) sb.Append($"<p class=\"print-addr-line\">{Enc(d.SiteAddress)}</p>");
            sb.Append("</div>");
        }
        sb.Append("</div>");

        // Line items
        if (d.Lines.Count > 0)
        {
            if (d.HideLineItemPrices)
            {
                sb.Append("<table class=\"print-doc-table\"><thead><tr>");
                sb.Append("<th>Description</th><th class=\"text-center\">Qty</th>");
                sb.Append("</tr></thead><tbody>");
                foreach (var line in d.Lines.OrderBy(l => l.SortOrder))
                {
                    sb.Append($"<tr><td>{Enc(line.Description)}</td><td class=\"text-center\">{line.Quantity}</td></tr>");
                }
                sb.Append("</tbody></table>");
            }
            else
            {
                var materialLines = d.Lines.Where(l => l.LineType != "Labor").ToList();
                var laborLines = d.Lines.Where(l => l.LineType == "Labor").ToList();
                sb.Append("<table class=\"print-doc-table\"><thead><tr>");
                sb.Append("<th>Description</th><th class=\"text-center\">Qty</th><th class=\"text-end\">Unit Price</th><th class=\"text-end\">Total</th>");
                sb.Append("</tr></thead><tbody>");
                if (materialLines.Count > 0 && laborLines.Count > 0)
                    sb.Append("<tr class=\"print-section-divider\"><td colspan=\"4\">Materials</td></tr>");
                foreach (var line in materialLines)
                {
                    sb.Append("<tr>");
                    sb.Append($"<td>{Enc(line.Description)}</td>");
                    sb.Append($"<td class=\"text-center\">{line.Quantity}</td>");
                    sb.Append($"<td class=\"text-end\">{line.UnitPrice:C}</td>");
                    sb.Append($"<td class=\"text-end\">{line.Quantity * line.UnitPrice:C}</td>");
                    sb.Append("</tr>");
                }
                if (laborLines.Count > 0)
                {
                    sb.Append("<tr class=\"print-section-divider\"><td colspan=\"4\">Labor</td></tr>");
                    foreach (var line in laborLines)
                    {
                        sb.Append("<tr>");
                        sb.Append($"<td>{Enc(line.Description)}</td>");
                        sb.Append($"<td class=\"text-center\">{line.Quantity}</td>");
                        sb.Append($"<td class=\"text-end\">{line.UnitPrice:C}</td>");
                        sb.Append($"<td class=\"text-end\">{line.Quantity * line.UnitPrice:C}</td>");
                        sb.Append("</tr>");
                    }
                }
                sb.Append("</tbody></table>");
            }
        }

        // Totals
        sb.Append("<div class=\"print-doc-totals\">");
        if (!d.HideLineItemPrices)
        {
            sb.Append($"<div class=\"print-total-row print-total-subtotal\"><span class=\"print-total-label\">Subtotal</span><span class=\"print-total-value\">{d.Subtotal:C}</span></div>");
            if (d.TaxRate > 0) sb.Append($"<div class=\"print-total-row\"><span class=\"print-total-label\">Tax ({d.TaxRate}%)</span><span class=\"print-total-value\">{d.TaxAmount:C}</span></div>");
            if (d.DiscountAmount.HasValue && d.DiscountAmount > 0) sb.Append($"<div class=\"print-total-row\"><span class=\"print-total-label\">Discount{(d.DiscountType == "Percent" ? $" ({d.DiscountValue}%)" : "")}</span><span class=\"print-total-value\">-{d.DiscountAmount.Value:C}</span></div>");
        }
        sb.Append($"<div class=\"print-total-row print-grand-total\"><span class=\"print-total-label\">Total</span><span class=\"print-total-value\">{d.Total:C}</span></div>");
        if (d.AmountPaid > 0) sb.Append($"<div class=\"print-total-row\"><span class=\"print-total-label\">Paid</span><span class=\"print-total-value\">{d.AmountPaid:C}</span></div>");
        var balClass = d.BalanceDue <= 0 ? "print-balance-paid" : "print-balance-due";
        sb.Append($"<div class=\"print-total-row {balClass}\"><span class=\"print-total-label\">Balance Due</span><span class=\"print-total-value\">{d.BalanceDue:C}</span></div>");
        sb.Append("</div>");

        // Notes
        if (d.IncludeNotes && !string.IsNullOrWhiteSpace(d.Notes))
        {
            sb.Append("<div class=\"print-doc-terms\">");
            sb.Append($"<div class=\"print-doc-terms-block\"><div class=\"print-terms-heading\">Notes</div><p class=\"print-terms-text\">{Enc(d.Notes)}</p></div>");
            sb.Append("</div>");
        }

        // Footer
        sb.Append("<div class=\"print-doc-footer\">");
        if (_companyProfile is not null)
        {
            if (!string.IsNullOrWhiteSpace(_companyProfile.Phone)) sb.Append($"<span class=\"print-footer-item\"><i class=\"bi bi-telephone print-footer-icon\"></i> {Enc(_companyProfile.Phone)}</span>");
            if (!string.IsNullOrWhiteSpace(_companyProfile.Email)) sb.Append($"<span class=\"print-footer-item\"><i class=\"bi bi-envelope print-footer-icon\"></i> {Enc(_companyProfile.Email)}</span>");
            if (!string.IsNullOrWhiteSpace(_companyProfile.Address)) sb.Append($"<span class=\"print-footer-item\"><i class=\"bi bi-geo-alt print-footer-icon\"></i> {Enc(_companyProfile.Address)}</span>");
        }
        sb.Append("</div>");
        sb.Append("<div class=\"print-doc-thankyou\">Thank you for your business!</div>");

        sb.Append("</div>");
        return PdfService.WrapInHtmlDocument(sb.ToString());
    }

    private static string Enc(string? value) => System.Net.WebUtility.HtmlEncode(value ?? "");

    // ---- Multi-select & Bulk Actions ----
    private void ToggleInvoiceRowSelection(int id) { if (!_selectedIds.Remove(id)) _selectedIds.Add(id); _confirmBulkDelete = false; }
    private void ToggleSelectAllInvoices() { if (invoices is null) return; if (_allInvoicesSelected) _selectedIds.Clear(); else foreach (var i in invoices) _selectedIds.Add(i.Id); _confirmBulkDelete = false; }
    private void ClearInvoiceSelection() { _selectedIds.Clear(); _confirmBulkDelete = false; _bulkMsg = null; }
    private async Task ToggleShowArchived(ChangeEventArgs e) { invoiceFilter.ShowArchived = (bool)(e.Value ?? false); ClearInvoiceSelection(); await LoadInvoices(); }
    private async Task BulkArchive() { if (_selectedIds.Count == 0) return; try { var n = await FinSvc.BulkArchiveInvoicesAsync(_selectedIds.ToList()); _bulkMsg = $"{n} invoice(s) archived."; _bulkMsgIsError = false; ClearInvoiceSelection(); await LoadInvoices(); } catch (Exception ex) { _bulkMsg = ex.Message; _bulkMsgIsError = true; } }
    private async Task BulkRestore() { if (_selectedIds.Count == 0) return; try { var n = await FinSvc.BulkRestoreInvoicesAsync(_selectedIds.ToList()); _bulkMsg = $"{n} invoice(s) restored."; _bulkMsgIsError = false; ClearInvoiceSelection(); await LoadInvoices(); } catch (Exception ex) { _bulkMsg = ex.Message; _bulkMsgIsError = true; } }
    private async Task BulkDeletePermanently() { if (_selectedIds.Count == 0) return; try { var n = await FinSvc.BulkDeleteInvoicesPermanentlyAsync(_selectedIds.ToList()); _bulkMsg = $"{n} invoice(s) permanently deleted."; _bulkMsgIsError = false; ClearInvoiceSelection(); await LoadInvoices(); } catch (Exception ex) { _bulkMsg = ex.Message; _bulkMsgIsError = true; } }
