                            <label class="form-label">Customer</label>
                            <InputSelect @bind-Value="invoiceForm.CustomerId" class="form-select form-select-sm">
                                <option value="">— Select Customer —</option>
                                @foreach (var c in _customers) { <option value="@c.Id">@c.Name</option> }
                            </InputSelect>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Company <small class="text-muted">(Optional)</small></label>
                            <InputSelect @bind-Value="invoiceForm.CompanyId" class="form-select form-select-sm">
                                <option value="">— None —</option>
                                @foreach (var co in _companyOptions) { <option value="@co.Id">@co.Name</option> }
                            </InputSelect>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Status</label>
                            <InputSelect @bind-Value="invoiceForm.Status" class="form-select form-select-sm">
                                @foreach (var s in _invoiceStatuses) { <option value="@s">@s</option> }
                            </InputSelect>
                        </div>
                    </div>

                    @* ?? Pricing Type ?? *@
                    <div class="row g-2 mb-3">
                        <div class="col-md-12">
                            <label class="form-label fw-semibold">Pricing Type</label>
                            <select class="form-select form-select-sm" @bind="invoiceForm.PricingType">
                                @foreach (var pt in _pricingTypes) { <option value="@pt">@pt</option> }
                            </select>
                            <small class="text-muted">Choose how to structure pricing on this invoice</small>
                        </div>
                    </div>

                    @* ?? Optional: Job / Site / Payment Terms ?? *@
                    <div class="row g-2 mb-3">
                        <div class="col-md-4">
                            <label class="form-label">Linked Job <small class="text-muted">(Optional)</small></label>
                            <select class="form-select form-select-sm" value="@invoiceForm.JobId" @onchange="OnJobSelected">
                                <option value="">— None —</option>
                                @foreach (var j in _jobOptions)
                                {
                                    <option value="@j.Id">@j.JobNumber — @(j.Title ?? "Untitled")</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Site <small class="text-muted">(Optional)</small></label>
                            <InputSelect @bind-Value="invoiceForm.SiteId" class="form-select form-select-sm">
                                <option value="">— None —</option>
                                @foreach (var s in _siteOptions)
                                {
                                    <option value="@s.Id">@s.Name @(!string.IsNullOrEmpty(s.Address) ? $"({s.Address})" : "")</option>
                                }
                            </InputSelect>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Payment Terms</label>
                            <select class="form-select form-select-sm" @bind="invoiceForm.PaymentTerms">
                                <option value="">Select...</option>
                                @foreach (var pt in _paymentTermsOptions) { <option value="@pt">@pt</option> }
                            </select>
                        </div>
                    </div>

                    @* ?? Linked Assets Info (from Job) ?? *@
