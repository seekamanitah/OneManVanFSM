@page "/financials/invoices"
@page "/financials/invoices/{Id:int}"
@rendermode InteractiveServer
@inject IFinancialService FinSvc
@inject ICustomerService CustomerSvc
@inject IAssetService AssetSvc
@inject IJobService JobSvc
@inject ISiteService SiteSvc
@inject IInventoryService InvSvc
@inject NavigationManager Nav
@inject IJSRuntime JS
@inject ICompanyProfileService CompanyProfileSvc
@inject IDropdownService DropdownSvc

<PageTitle>Invoices - OneManVanFSM</PageTitle>

@if (mode == "detail" && invoiceDetail is not null)
{
    <div class="d-flex align-items-center mb-3 no-print">
        <button class="btn btn-outline-secondary btn-sm me-2" @onclick="BackToList"><i class="bi bi-arrow-left"></i></button>
        <h4 class="mb-0"><i class="bi bi-receipt me-2"></i>@invoiceDetail.InvoiceNumber</h4>
        <span class="badge @GetInvBadge(invoiceDetail.Status) ms-2">@invoiceDetail.Status</span>
        <div class="ms-auto d-flex gap-1">
            <div class="dropdown d-inline-block">
                <button class="btn btn-outline-secondary btn-sm dropdown-toggle" data-bs-toggle="dropdown" title="Print template style"><i class="bi bi-palette me-1"></i>@_printTemplate</button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><button class="dropdown-item @(_printTemplate == "Professional" ? "active" : "")" @onclick='() => SetPrintTemplate("Professional")'>Professional (Navy)</button></li>
                    <li><button class="dropdown-item @(_printTemplate == "Classic" ? "active" : "")" @onclick='() => SetPrintTemplate("Classic")'>Classic (B&W)</button></li>
                    <li><button class="dropdown-item @(_printTemplate == "Modern" ? "active" : "")" @onclick='() => SetPrintTemplate("Modern")'>Modern (Teal)</button></li>
                </ul>
            </div>
            <button class="btn btn-outline-success btn-sm" @onclick="PrintInvoice" title="Print / PDF"><i class="bi bi-printer me-1"></i>Print</button>
            <button class="btn btn-outline-info btn-sm" @onclick="OpenEmailModal" title="Email invoice"><i class="bi bi-envelope me-1"></i>Email</button>
            <button class="btn btn-outline-primary btn-sm" @onclick="EditInvoiceFromDetail"><i class="bi bi-pencil me-1"></i>Edit</button>
            @if (invoiceDetail.Status == InvoiceStatus.Draft)
            {
                <button class="btn btn-outline-info btn-sm me-1" @onclick="() => ChangeInvoiceStatus(InvoiceStatus.Sent)"><i class="bi bi-send me-1"></i>Send</button>
            }
            @if (invoiceDetail.Status == InvoiceStatus.Sent || invoiceDetail.Status == InvoiceStatus.Overdue)
            {
                <button class="btn btn-success btn-sm me-1" @onclick="() => ChangeInvoiceStatus(InvoiceStatus.Paid)"><i class="bi bi-check-circle me-1"></i>Mark Paid</button>
            }
            @if (invoiceDetail.Status != InvoiceStatus.Void)
            {
                @if (_confirmVoid)
                {
                    <button class="btn btn-danger btn-sm" @onclick="async () => { _confirmVoid = false; await ChangeInvoiceStatus(InvoiceStatus.Void); }"><i class="bi bi-exclamation-triangle me-1"></i>Confirm Void</button>
                    <button class="btn btn-outline-secondary btn-sm" @onclick="() => _confirmVoid = false">Cancel</button>
                }
                else
                {
                    <button class="btn btn-outline-danger btn-sm" @onclick="() => _confirmVoid = true"><i class="bi bi-x-circle me-1"></i>Void</button>
                }
            }
        </div>
    </div>

    @* -- Print-Only Professional Invoice -- *@
    <div class="print-doc d-none @PrintTemplateClass">
        <div class="print-doc-banner">
            <div class="print-doc-banner-left">
                <p class="print-doc-type">Invoice</p>
                <p class="print-doc-number-line"><strong>@invoiceDetail.InvoiceNumber</strong></p>
            </div>
            <div class="print-doc-banner-right">
                @if (_companyProfile is not null)
                {
                    <p class="print-company-name">@_companyProfile.Name</p>
                    @if (!string.IsNullOrWhiteSpace(_companyProfile.Address)) { <p class="print-company-detail">@_companyProfile.Address</p> }
                    @if (!string.IsNullOrWhiteSpace(_companyProfile.Phone)) { <p class="print-company-detail">@_companyProfile.Phone</p> }
                    @if (!string.IsNullOrWhiteSpace(_companyProfile.Email)) { <p class="print-company-detail">@_companyProfile.Email</p> }
                    @if (!string.IsNullOrWhiteSpace(_companyProfile.TaxId)) { <p class="print-company-detail">Tax ID: @_companyProfile.TaxId</p> }
                }
            </div>
        </div>
        <div class="print-doc-info-bar">
            <div class="print-info-item"><span class="print-info-label">Status</span><span class="print-info-value">@invoiceDetail.Status</span></div>
            @if (invoiceDetail.InvoiceDate.HasValue) { <div class="print-info-item"><span class="print-info-label">Invoice Date</span><span class="print-info-value">@invoiceDetail.InvoiceDate.Value.ToString("MMM dd, yyyy")</span></div> }
            @if (invoiceDetail.DueDate.HasValue) { <div class="print-info-item"><span class="print-info-label">Due Date</span><span class="print-info-value">@invoiceDetail.DueDate.Value.ToString("MMM dd, yyyy")</span></div> }
            @if (!string.IsNullOrWhiteSpace(invoiceDetail.PaymentTerms)) { <div class="print-info-item"><span class="print-info-label">Terms</span><span class="print-info-value">@invoiceDetail.PaymentTerms</span></div> }
            @if (!string.IsNullOrWhiteSpace(invoiceDetail.PricingType)) { <div class="print-info-item"><span class="print-info-label">Pricing</span><span class="print-info-value">@invoiceDetail.PricingType</span></div> }
        </div>
        <div class="print-doc-addresses">
            <div class="print-addr-block">
                @if (invoiceDetail.CustomerName is not null)
                {
                    <span class="print-addr-label">Bill To</span>
                    <p class="print-addr-name">@invoiceDetail.CustomerName</p>
                    @if (!string.IsNullOrWhiteSpace(invoiceDetail.CustomerAddress))
                    {
                        <p class="print-addr-line">@invoiceDetail.CustomerAddress</p>
                        @if (!string.IsNullOrWhiteSpace(invoiceDetail.CustomerCity))
                        {
                            <p class="print-addr-line">@invoiceDetail.CustomerCity@((!string.IsNullOrWhiteSpace(invoiceDetail.CustomerState)) ? $", {invoiceDetail.CustomerState}" : "") @invoiceDetail.CustomerZip</p>
                        }
                    }
                    @if (!string.IsNullOrWhiteSpace(invoiceDetail.CustomerPhone)) { <p class="print-addr-line">@invoiceDetail.CustomerPhone</p> }
                    @if (!string.IsNullOrWhiteSpace(invoiceDetail.CustomerEmail)) { <p class="print-addr-line">@invoiceDetail.CustomerEmail</p> }
                }
                @if (invoiceDetail.SiteName is not null && invoiceDetail.IncludeSiteLocation)
                {
                    <p class="print-addr-line" style="margin-top:3pt;font-size:7.5pt;"><strong>Site:</strong> @invoiceDetail.SiteName@(!string.IsNullOrWhiteSpace(invoiceDetail.SiteAddress) ? $" — {invoiceDetail.SiteAddress}" : "")@(!string.IsNullOrWhiteSpace(invoiceDetail.SiteCity) ? $", {invoiceDetail.SiteCity}" : "")@(!string.IsNullOrWhiteSpace(invoiceDetail.SiteState) ? $", {invoiceDetail.SiteState}" : "") @invoiceDetail.SiteZip</p>
                }
                else if (invoiceDetail.SiteName is not null)
                {
                    <p class="print-addr-line" style="margin-top:2pt;font-size:7.5pt;">Site: @invoiceDetail.SiteName</p>
                }
            </div>
        </div>

        @{ var isMaterialLabor = invoiceDetail.PricingType?.Contains("Material", StringComparison.OrdinalIgnoreCase) == true; }
        @if (invoiceDetail.Lines.Any())
        {
            @if (isMaterialLabor)
            {
                var grouped = invoiceDetail.Lines.OrderBy(x => x.SortOrder).GroupBy(x => x.LineType ?? "Other");
                <table class="print-doc-table">
                    <thead><tr><th>Description</th><th class="text-center">Qty</th><th class="text-end">Unit Price</th><th class="text-end">Amount</th></tr></thead>
                    <tbody>
                        @foreach (var group in grouped)
                        {
                            <tr class="print-section-divider"><td colspan="4">@group.Key</td></tr>
                            @foreach (var l in group)
                            {
                                <tr><td>@l.Description</td><td class="text-center">@l.Quantity</td><td class="text-end">@l.UnitPrice.ToString("C")</td><td class="text-end">@l.LineTotal.ToString("C")</td></tr>
                            }
                        }
                    </tbody>
                </table>
            }
            else
            {
                <table class="print-doc-table">
                    <thead><tr><th>Description</th><th class="text-center">Qty</th><th class="text-end">Unit Price</th><th class="text-end">Amount</th></tr></thead>
                    <tbody>
                        @foreach (var l in invoiceDetail.Lines.OrderBy(x => x.SortOrder))
                        {
                            <tr><td>@l.Description</td><td class="text-center">@l.Quantity</td><td class="text-end">@l.UnitPrice.ToString("C")</td><td class="text-end">@l.LineTotal.ToString("C")</td></tr>
                        }
                    </tbody>
                </table>
            }
        }

        @if (invoiceDetail.IncludeAssetInfo && invoiceDetail.SiteAssets.Any())
        {
            <div class="print-asset-compact">
                <div class="print-terms-heading">Equipment / Asset Information</div>
                @foreach (var a in invoiceDetail.SiteAssets)
                {
                    <div class="print-asset-row">
                        <span class="print-asset-label">@(a.Name ?? "Asset")</span>
                        <span class="print-asset-detail">
                            @if (!string.IsNullOrWhiteSpace(a.Brand)) { <text> — @a.Brand</text> }
                            @if (!string.IsNullOrWhiteSpace(a.Model)) { <text> @a.Model</text> }
                            @if (!string.IsNullOrWhiteSpace(a.SerialNumber)) { <text> (S/N: @a.SerialNumber)</text> }
                            @if (!string.IsNullOrWhiteSpace(a.AssetType)) { <text> · @a.AssetType</text> }
                            @if (a.LastServiceDate.HasValue) { <text> · Last: @a.LastServiceDate.Value.ToString("MMM dd, yyyy")</text> }
                        </span>
                    </div>
                }
            </div>
        }

        <div class="print-doc-totals">
            <div class="print-total-row print-total-subtotal"><span class="print-total-label">Subtotal</span><span class="print-total-value">@invoiceDetail.Subtotal.ToString("C")</span></div>
            @if (invoiceDetail.TaxAmount > 0) { <div class="print-total-row"><span class="print-total-label">Tax (@(invoiceDetail.TaxRate)%)</span><span class="print-total-value">@invoiceDetail.TaxAmount.ToString("C")</span></div> }
            @if (invoiceDetail.MarkupAmount > 0) { <div class="print-total-row"><span class="print-total-label">Markup</span><span class="print-total-value">@invoiceDetail.MarkupAmount.ToString("C")</span></div> }
            @if (invoiceDetail.DiscountAmount.HasValue && invoiceDetail.DiscountAmount > 0) { <div class="print-total-row"><span class="print-total-label">Discount</span><span class="print-total-value">-@invoiceDetail.DiscountAmount.Value.ToString("C")</span></div> }
            <div class="print-total-row print-grand-total"><span class="print-total-label">Total</span><span class="print-total-value">@invoiceDetail.Total.ToString("C")</span></div>
            @if (invoiceDetail.AmountPaid > 0) { <div class="print-total-row"><span class="print-total-label">Amount Paid</span><span class="print-total-value">@invoiceDetail.AmountPaid.ToString("C")</span></div> }
            @if (invoiceDetail.BalanceDue > 0)
            {
                <div class="print-total-row print-balance-due"><span class="print-total-label">Balance Due</span><span class="print-total-value">@invoiceDetail.BalanceDue.ToString("C")</span></div>
            }
            else
            {
                <div class="print-total-row print-balance-paid"><span class="print-total-label">Balance Due</span><span class="print-total-value">$0.00</span></div>
            }
            @if (invoiceDetail.DepositApplied.HasValue && invoiceDetail.DepositApplied > 0)
            {
                <div class="print-deposit-callout"><span class="print-deposit-label">Deposit Applied:</span> @invoiceDetail.DepositApplied.Value.ToString("C")</div>
            }
        </div>

        @if (invoiceDetail.Payments.Any())
        {
            <div class="print-payments-block">
                <div class="print-payments-heading">Payments Received</div>
                <table class="print-doc-table">
                    <thead><tr><th>Date</th><th>Method</th><th>Reference</th><th class="text-end">Amount</th></tr></thead>
                    <tbody>
                        @foreach (var p in invoiceDetail.Payments)
                        {
                            <tr><td>@p.PaymentDate.ToString("MMM dd, yyyy")</td><td>@p.Method</td><td>@(p.Reference ?? "--")</td><td class="text-end">@p.Amount.ToString("C")</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        }

        <div class="print-doc-terms">
            @if (!string.IsNullOrWhiteSpace(invoiceDetail.Terms))
            {
                <div class="print-doc-terms-block"><div class="print-terms-heading">Terms & Conditions</div><p class="print-terms-text">@invoiceDetail.Terms</p></div>
            }
            @if (!string.IsNullOrWhiteSpace(invoiceDetail.Notes))
            {
                <div class="print-doc-terms-block"><div class="print-terms-heading">Notes</div><p class="print-terms-text">@invoiceDetail.Notes</p></div>
            }
        </div>

        <div class="print-doc-footer">
            @if (_companyProfile is not null)
            {
                @if (!string.IsNullOrWhiteSpace(_companyProfile.Phone)) { <span class="print-footer-item"><i class="bi bi-telephone print-footer-icon"></i> @_companyProfile.Phone</span> }
                @if (!string.IsNullOrWhiteSpace(_companyProfile.Email)) { <span class="print-footer-item"><i class="bi bi-envelope print-footer-icon"></i> @_companyProfile.Email</span> }
                @if (!string.IsNullOrWhiteSpace(_companyProfile.Address)) { <span class="print-footer-item"><i class="bi bi-geo-alt print-footer-icon"></i> @_companyProfile.Address</span> }
            }
        </div>
        <div class="print-doc-thankyou">Thank you for your business!</div>
    </div>

    @* -- Detail Cards (screen only) -- *@
    <div class="row g-3 print-screen-only">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-body">
                    <div class="row g-2 mb-3">
                        @if (invoiceDetail.CustomerName is not null) { <div class="col-sm-4"><strong>Customer:</strong> <a href="javascript:void(0)" @onclick="() => GoToCustomer(invoiceDetail.CustomerId!.Value)">@invoiceDetail.CustomerName</a></div> }
                        @if (invoiceDetail.SiteName is not null)
                        {
                            <div class="col-sm-4">
                                <strong>Site:</strong> <a href="sites/@invoiceDetail.SiteId">@invoiceDetail.SiteName</a>
                                @if (invoiceDetail.IncludeSiteLocation && !string.IsNullOrWhiteSpace(invoiceDetail.SiteAddress))
                                {
                                    <br /><small class="text-muted">@invoiceDetail.SiteAddress</small>
                                    @if (!string.IsNullOrWhiteSpace(invoiceDetail.SiteCity))
                                    {
                                        <br /><small class="text-muted">@invoiceDetail.SiteCity@((!string.IsNullOrWhiteSpace(invoiceDetail.SiteState)) ? $", {invoiceDetail.SiteState}" : "") @invoiceDetail.SiteZip</small>
                                    }
                                }
                            </div>
                        }
                        @if (invoiceDetail.JobNumber is not null)
                        {
                            <div class="col-sm-4">
                                <strong>Job:</strong> <a href="javascript:void(0)" @onclick="() => GoToJob(invoiceDetail.JobId!.Value)">@invoiceDetail.JobNumber</a>
                                @if (!string.IsNullOrWhiteSpace(invoiceDetail.JobTitle))
                                {
                                    <br /><small class="text-muted">@invoiceDetail.JobTitle</small>
                                }
                            </div>
                        }
                    </div>
                    <div class="row g-2 mb-3">
                        @if (invoiceDetail.InvoiceDate.HasValue) { <div class="col-sm-4"><strong>Invoice Date:</strong> @invoiceDetail.InvoiceDate.Value.ToString("MMM dd, yyyy")</div> }
                        @if (invoiceDetail.DueDate.HasValue) { <div class="col-sm-4"><strong>Due Date:</strong> @invoiceDetail.DueDate.Value.ToString("MMM dd, yyyy")</div> }
                        @if (!string.IsNullOrWhiteSpace(invoiceDetail.PaymentTerms)) { <div class="col-sm-4"><strong>Terms:</strong> @invoiceDetail.PaymentTerms</div> }
                    </div>

                    @if (invoiceDetail.Lines.Any())
                    {
                        <h6 class="border-bottom pb-2 mb-2">Line Items</h6>
                        <div class="table-responsive">
                            <table class="table table-sm mb-0">
                                <thead class="table-light">
                                    <tr><th>Description</th><th class="text-center" style="width:60px;">Qty</th><th class="text-end" style="width:100px;">Unit Price</th><th class="text-end" style="width:90px;">Total</th></tr>
                                </thead>
                                <tbody>
                                    @foreach (var l in invoiceDetail.Lines.OrderBy(x => x.SortOrder))
                                    {
                                        <tr>
                                            <td>
                                                @l.Description
                                                @if (!string.IsNullOrEmpty(l.LineType)) { <span class="badge bg-light text-dark ms-1">@l.LineType</span> }
                                            </td>
                                            <td class="text-center">@l.Quantity</td>
                                            <td class="text-end">@l.UnitPrice.ToString("C")</td>
                                            <td class="text-end">@l.LineTotal.ToString("C")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(invoiceDetail.JobDescription)) { <hr class="my-2" /><p class="text-muted small mb-0"><strong>Job Description:</strong> @invoiceDetail.JobDescription</p> }
                    @if (!string.IsNullOrEmpty(invoiceDetail.Notes)) { <hr class="my-2" /><p class="text-muted small mb-0"><strong>Notes:</strong> @invoiceDetail.Notes</p> }
                    @if (!string.IsNullOrEmpty(invoiceDetail.Terms)) { <hr class="my-2" /><p class="text-muted small mb-0"><strong>Terms:</strong> @invoiceDetail.Terms</p> }
                </div>
            </div>

            @if (invoiceDetail.IncludeAssetInfo && invoiceDetail.SiteAssets.Any())
            {
                <div class="card border-0 shadow-sm mb-3">
                    <div class="card-body">
                        <h6 class="mb-2"><i class="bi bi-cpu me-1"></i>Equipment / Asset Information</h6>
                        <div class="table-responsive">
                            <table class="table table-sm mb-0">
                                <thead class="table-light">
                                    <tr><th>Name</th><th>Brand</th><th>Model</th><th>Serial #</th><th>Type</th><th>Last Serviced</th></tr>
                                </thead>
                                <tbody>
                                    @foreach (var a in invoiceDetail.SiteAssets)
                                    {
                                        <tr>
                                            <td>@(a.Name ?? "—")</td>
                                            <td>@(a.Brand ?? "—")</td>
                                            <td>@(a.Model ?? "—")</td>
                                            <td>@(a.SerialNumber ?? "—")</td>
                                            <td>@(a.AssetType ?? "—")</td>
                                            <td>@(a.LastServiceDate?.ToString("MMM dd, yyyy") ?? "—")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }

            @if (invoiceDetail.Payments.Any())
            {
                <div class="card border-0 shadow-sm mb-3">
                    <div class="card-body">
                        <h6 class="mb-2"><i class="bi bi-cash-stack me-1"></i>Payments Received</h6>
                        <table class="table table-sm mb-0">
                            <thead class="table-light"><tr><th>Date</th><th>Method</th><th>Reference</th><th class="text-end">Amount</th><th>Status</th></tr></thead>
                            <tbody>
                                @foreach (var p in invoiceDetail.Payments)
                                {
                                    <tr><td>@p.PaymentDate.ToString("MMM dd")</td><td>@p.Method</td><td>@(p.Reference ?? "—")</td><td class="text-end">@p.Amount.ToString("C")</td><td><span class="badge bg-success">@p.Status</span></td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }

            @if (showPaymentForm)
            {
                <div class="card border-0 shadow-sm border-success mb-3">
                    <div class="card-header bg-transparent"><h6 class="mb-0"><i class="bi bi-cash me-1"></i>Record Payment</h6></div>
                    <div class="card-body">
                        <EditForm Model="paymentForm" OnValidSubmit="SavePayment">
                            <DataAnnotationsValidator />
                            <div class="row g-2">
                                <div class="col-md-4"><label class="form-label">Amount</label><InputNumber @bind-Value="paymentForm.Amount" class="form-control form-control-sm" /><ValidationMessage For="() => paymentForm.Amount" /></div>
                                <div class="col-md-4"><label class="form-label">Method</label><InputSelect @bind-Value="paymentForm.Method" class="form-select form-select-sm">@foreach (var m in Enum.GetValues<PaymentMethod>()) { <option value="@m">@m</option> }</InputSelect></div>
                                <div class="col-md-4"><label class="form-label">Date</label><InputDate @bind-Value="paymentForm.PaymentDate" class="form-control form-control-sm" /></div>
                                <div class="col-md-6"><label class="form-label">Reference</label><InputText @bind-Value="paymentForm.Reference" class="form-control form-control-sm" /></div>
                                <div class="col-md-6"><label class="form-label">Notes</label><InputText @bind-Value="paymentForm.Notes" class="form-control form-control-sm" /></div>
                            </div>
                            <div class="d-flex justify-content-end gap-2 mt-3">
                                <button type="button" class="btn btn-outline-secondary btn-sm" @onclick="() => showPaymentForm = false">Cancel</button>
                                <button type="submit" class="btn btn-success btn-sm">Save Payment</button>
                            </div>
                        </EditForm>
                    </div>
                </div>
            }
            else if (invoiceDetail.BalanceDue > 0)
            {
                <button class="btn btn-outline-success btn-sm mb-3" @onclick="ShowRecordPayment"><i class="bi bi-cash me-1"></i>Record Payment</button>
            }
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-body">
                    <h6 class="text-muted mb-2">Amount Summary</h6>
                    <div class="d-flex justify-content-between mb-1"><span>Subtotal</span><span>@invoiceDetail.Subtotal.ToString("C")</span></div>
                    @if (invoiceDetail.TaxAmount > 0) { <div class="d-flex justify-content-between mb-1"><span>Tax (@(invoiceDetail.TaxRate)%)</span><span>@invoiceDetail.TaxAmount.ToString("C")</span></div> }
                    @if (invoiceDetail.MarkupAmount > 0) { <div class="d-flex justify-content-between mb-1"><span>Markup</span><span>@invoiceDetail.MarkupAmount.ToString("C")</span></div> }
                    @if (invoiceDetail.DiscountAmount.HasValue && invoiceDetail.DiscountAmount > 0) { <div class="d-flex justify-content-between mb-1"><span>Discount</span><span>-@invoiceDetail.DiscountAmount.Value.ToString("C")</span></div> }
                    <hr class="my-2" />
                    <div class="d-flex justify-content-between fw-bold"><span>Total</span><span>@invoiceDetail.Total.ToString("C")</span></div>
                    <div class="d-flex justify-content-between mt-1"><span>Paid</span><span class="text-success">@invoiceDetail.AmountPaid.ToString("C")</span></div>
                    <hr class="my-2" />
                    <div class="d-flex justify-content-between fw-bold fs-6 @(invoiceDetail.BalanceDue > 0 ? "text-danger" : "text-success")"><span>Balance Due</span><span>@invoiceDetail.BalanceDue.ToString("C")</span></div>
                </div>
            </div>
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between text-muted small">
                        <span><i class="bi bi-info-circle me-1"></i>Created @invoiceDetail.CreatedAt.ToString("MMM dd, yyyy h:mm tt")</span>
                    </div>
                    <div class="d-flex justify-content-between text-muted small mt-1">
                        <span>Updated @invoiceDetail.UpdatedAt.ToString("MMM dd, yyyy h:mm tt")</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="d-flex align-items-center gap-2">
            <button class="btn btn-outline-secondary btn-sm" @onclick='() => Nav.NavigateTo("/financials")'><i class="bi bi-arrow-left"></i></button>
            <h4 class="mb-0"><i class="bi bi-receipt me-2"></i>Invoices</h4>
        </div>
        <button class="btn btn-primary btn-sm" @onclick="ShowInvoiceForm"><i class="bi bi-plus-lg me-1"></i>New Invoice</button>
    </div>

    @if (showForm)
    {
        <div class="card border-0 shadow-sm mb-3">
            <div class="card-header bg-transparent d-flex justify-content-between">
                <h6 class="mb-0">@(editingInvoiceId.HasValue ? "Edit Invoice" : "New Invoice")</h6>
