    private void RecalcInvoiceTotals()
    {
        // For flat rate with no lines, preserve the manually entered subtotal
        if (invoiceForm.Lines.Count > 0)
            invoiceForm.Subtotal = invoiceForm.Lines.Sum(l => l.Quantity * l.UnitPrice);
        else if (invoiceForm.PricingType != "Flat Rate")
            invoiceForm.Subtotal = 0;
        // else: flat rate with no lines — keep existing subtotal

        if (invoiceForm.TaxIncludedInPrice)
            invoiceForm.TaxAmount = 0;
        else
            invoiceForm.TaxAmount = Math.Round(invoiceForm.Subtotal * (invoiceForm.TaxRate / 100m), 2);
        var discount = invoiceForm.DiscountAmount ?? 0;
        invoiceForm.Total = Math.Round(invoiceForm.Subtotal + invoiceForm.MarkupAmount + invoiceForm.TaxAmount - discount, 2);
        invoiceForm.BalanceDue = Math.Max(0, invoiceForm.Total - invoiceForm.AmountPaid);
    }

