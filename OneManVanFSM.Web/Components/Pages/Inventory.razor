    private async Task LoadForEdit(int id)
    {
        var d = await InventorySvc.GetItemAsync(id);
        if (d is null) { mode = "list"; await LoadItems(); return; }
        editId = id;
        form = new InventoryEditModel
        {
            Name = d.Name, SKU = d.SKU, PartNumber = d.PartNumber,
            Category = d.Category, Unit = d.Unit, Description = d.Description,
            Barcode = d.Barcode, ShelfBin = d.ShelfBin,
            PreferredSupplier = d.PreferredSupplier,
            Location = d.Location, Quantity = d.Quantity,
            MinThreshold = d.MinThreshold, MaxCapacity = d.MaxCapacity,
