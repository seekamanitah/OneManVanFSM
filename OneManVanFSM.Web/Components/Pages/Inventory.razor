@page "/inventory"
@page "/inventory/new"
@page "/inventory/{Id:int}"
@page "/inventory/{Id:int}/edit"
@rendermode InteractiveServer
@implements IDisposable
@inject IInventoryService InventorySvc
@inject IProductService ProductSvc
@inject IDropdownService DropdownSvc
@inject NavigationManager Nav

<PageTitle>Inventory - OneManVanFSM</PageTitle>

@if (mode == "form")
{
    <div class="d-flex align-items-center mb-3">
        <button class="btn btn-outline-secondary btn-sm me-1" @onclick="GoToList"><i class="bi bi-arrow-left"></i></button>
        @if (editId.HasValue)
        {
            <button class="btn btn-outline-secondary btn-sm me-1" @onclick="GoToPrevEdit" disabled="@(GetAdjacentEditId(-1) is null)" title="Previous"><i class="bi bi-chevron-left"></i></button>
            <button class="btn btn-outline-secondary btn-sm me-2" @onclick="GoToNextEdit" disabled="@(GetAdjacentEditId(1) is null)" title="Next"><i class="bi bi-chevron-right"></i></button>
        }
        <h4 class="mb-0"><i class="bi bi-boxes me-2"></i>@(editId.HasValue ? "Edit" : "New") Item</h4>
    </div>
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <EditForm Model="form" OnValidSubmit="SaveItem">
                <DataAnnotationsValidator />

                @* ?? Item Information ?? *@
                <h6 class="border-bottom pb-2 mb-3"><i class="bi bi-box-seam me-1"></i>Item Information</h6>
                <div class="row g-2 mb-3">
                    <div class="col-12">
                        <label class="form-label">Name <span class="text-danger">*</span></label>
                        <InputText @bind-Value="form.Name" class="form-control form-control-sm" />
                        <ValidationMessage For="() => form.Name" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">SKU</label>
                        <InputText @bind-Value="form.SKU" class="form-control form-control-sm" placeholder="Optional" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Part Number</label>
                        <InputText @bind-Value="form.PartNumber" class="form-control form-control-sm" placeholder="Optional" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Category</label>
                        <select class="form-select form-select-sm" @bind="form.Category">
                            <option value="">General</option>
                            @foreach (var opt in _inventoryCategories) { <option value="@opt">@opt</option> }
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Unit</label>
                        <InputText @bind-Value="form.Unit" class="form-control form-control-sm" placeholder="ea" />
                    </div>
                    <div class="col-12">
                        <label class="form-label">Description</label>
                        <InputTextArea @bind-Value="form.Description" class="form-control form-control-sm" rows="3" />
                    </div>
                </div>

                @* ?? Stock & Pricing ?? *@
                <h6 class="border-bottom pb-2 mb-3"><i class="bi bi-currency-dollar me-1"></i>Stock & Pricing</h6>
                <div class="row g-2 mb-3">
                    <div class="col-md-4">
                        <label class="form-label">Quantity on Hand</label>
                        <InputNumber @bind-Value="form.Quantity" class="form-control form-control-sm" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Reorder Point</label>
                        <InputNumber @bind-Value="form.MinThreshold" class="form-control form-control-sm" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Location</label>
                        <InputText @bind-Value="form.ShelfBin" class="form-control form-control-sm" placeholder="Shelf, bin, etc." />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Wholesale Cost</label>
                        <div class="input-group input-group-sm">
                            <span class="input-group-text">$</span>
                            <InputNumber @bind-Value="form.Cost" @bind-Value:after="RecalcInventoryPricing" class="form-control form-control-sm" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">MSRP <small class="text-muted">(auto-calculated)</small></label>
                        <div class="input-group input-group-sm">
                            <span class="input-group-text">$</span>
                            <input type="text" class="form-control form-control-sm bg-light" value="@_inventoryMsrp.ToString("F2")" readonly />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Suggested Sell Price</label>
                        <div class="input-group input-group-sm">
                            <span class="input-group-text">$</span>
                            <InputNumber @bind-Value="form.Price" class="form-control form-control-sm" />
                        </div>
                        @if (form.Price != _inventoryMsrp && _inventoryMsrp > 0)
                        {
                            <small class="text-info"><i class="bi bi-info-circle me-1"></i>Custom price — differs from MSRP</small>
                        }
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Supplier</label>
                        <InputText @bind-Value="form.PreferredSupplier" class="form-control form-control-sm" placeholder="Search suppliers..." />
                    </div>
                    <div class="col-12 mt-1">
                        <div class="form-check">
                            <InputCheckbox @bind-Value="form.TaxIncludedInPrice" @bind-Value:after="RecalcInventoryPricing" class="form-check-input" id="inventoryTaxIncluded" />
                            <label class="form-check-label text-muted small" for="inventoryTaxIncluded">
                                <i class="bi bi-percent me-1"></i>Include tax in MSRP &amp; Sell Price (@(_defaultTaxRate)% tax rate from Settings)
                            </label>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between border-top pt-3">
                    <button type="button" class="btn btn-outline-secondary btn-sm" @onclick="GoToList">Cancel</button>
                    <button type="submit" class="btn btn-primary btn-sm"><i class="bi bi-check-circle me-1"></i>@(editId.HasValue ? "Save Item" : "Create Item")</button>
                </div>
                @if (!string.IsNullOrEmpty(errorMsg)) { <div class="alert alert-danger mt-2 mb-0">@errorMsg</div> }
            </EditForm>
        </div>
    </div>
}
else if (mode == "detail" && detail is not null)
{
    <div class="d-flex align-items-center mb-3">
        <button class="btn btn-outline-secondary btn-sm me-1" @onclick="GoToList"><i class="bi bi-arrow-left"></i></button>
        <button class="btn btn-outline-secondary btn-sm me-1" @onclick="GoToPrev" disabled="@(GetAdjacentId(-1) is null)" title="Previous"><i class="bi bi-chevron-left"></i></button>
        <button class="btn btn-outline-secondary btn-sm me-2" @onclick="GoToNext" disabled="@(GetAdjacentId(1) is null)" title="Next"><i class="bi bi-chevron-right"></i></button>
        <h4 class="mb-0"><i class="bi bi-boxes me-2"></i>@detail.Name</h4>
        <span class="badge @(detail.Quantity <= detail.MinThreshold ? "bg-danger" : "bg-success") ms-2">
            @(detail.Quantity <= detail.MinThreshold ? "Low Stock" : "In Stock")
        </span>
        <div class="ms-auto dropdown">
            <button class="btn btn-outline-secondary btn-sm dropdown-toggle" data-bs-toggle="dropdown"><i class="bi bi-gear me-1"></i>Actions</button>
            <ul class="dropdown-menu dropdown-menu-end">
                <li><button class="dropdown-item" @onclick="EditDetail"><i class="bi bi-pencil me-1"></i>Edit</button></li>
                <li><hr class="dropdown-divider" /></li>
                @if (_confirmArchive)
                {
                    <li><button class="dropdown-item text-danger fw-semibold" @onclick="ArchiveDetail"><i class="bi bi-exclamation-triangle me-1"></i>Confirm Archive</button></li>
                    <li><button class="dropdown-item" @onclick="() => _confirmArchive = false"><i class="bi bi-x-lg me-1"></i>Cancel</button></li>
                }
                else
                {
                    <li><button class="dropdown-item text-danger" @onclick="() => _confirmArchive = true"><i class="bi bi-archive me-1"></i>Archive</button></li>
                }
            </ul>
        </div>
    </div>
    <div class="row g-3">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-body">
                    <h6><i class="bi bi-box-seam me-1"></i>Item Information</h6>
                    <div class="row g-2 mt-2">
                        @if (!string.IsNullOrWhiteSpace(detail.SKU)) { <div class="col-sm-4"><small class="text-muted d-block">SKU</small><span>@detail.SKU</span></div> }
                        @if (!string.IsNullOrWhiteSpace(detail.PartNumber)) { <div class="col-sm-4"><small class="text-muted d-block">Part Number</small><span>@detail.PartNumber</span></div> }
                        @if (!string.IsNullOrWhiteSpace(detail.Category)) { <div class="col-sm-4"><small class="text-muted d-block">Category</small><span>@detail.Category</span></div> }
                        @if (!string.IsNullOrWhiteSpace(detail.Unit)) { <div class="col-sm-4"><small class="text-muted d-block">Unit</small><span>@detail.Unit</span></div> }
                        @if (!string.IsNullOrWhiteSpace(detail.Barcode)) { <div class="col-sm-4"><small class="text-muted d-block">Barcode</small><span>@detail.Barcode</span></div> }
                    </div>
                    @if (!string.IsNullOrWhiteSpace(detail.Description))
                    {
                        <hr class="my-2" />
                        <small class="text-muted d-block">Description</small>
                        <p class="mb-0">@detail.Description</p>
                    }
                </div>
            </div>

            <div class="card border-0 shadow-sm mb-3">
                <div class="card-body">
                    <h6><i class="bi bi-currency-dollar me-1"></i>Stock & Pricing</h6>
                    <div class="row g-2 mt-2">
                        <div class="col-sm-4"><small class="text-muted d-block">Quantity on Hand</small><span class="@(detail.Quantity <= detail.MinThreshold ? "text-danger fw-bold" : "")">@detail.Quantity</span></div>
                        <div class="col-sm-4"><small class="text-muted d-block">Reorder Point</small><span>@detail.MinThreshold</span></div>
                        @if (!string.IsNullOrWhiteSpace(detail.ShelfBin)) { <div class="col-sm-4"><small class="text-muted d-block">Location</small><span>@detail.ShelfBin</span></div> }
                        <div class="col-sm-4"><small class="text-muted d-block">Wholesale Cost</small><span>@detail.Cost.ToString("C")</span></div>
                        <div class="col-sm-4"><small class="text-muted d-block">Suggested Sell Price</small><span class="fw-semibold">@detail.Price.ToString("C")</span>@if (detail.TaxIncludedInPrice) { <small class="text-muted ms-1">(incl. tax)</small> }</div>
                        @if (!string.IsNullOrWhiteSpace(detail.PreferredSupplier)) { <div class="col-sm-4"><small class="text-muted d-block">Supplier</small><span>@detail.PreferredSupplier</span></div> }
                        @if (detail.MarkupPercent > 0) { <div class="col-sm-4"><small class="text-muted d-block">Markup</small><span>@detail.MarkupPercent%</span></div> }
                    </div>
                    @if (!string.IsNullOrWhiteSpace(detail.LotNumber) || detail.ExpiryDate.HasValue || detail.LastRestockedDate.HasValue)
                    {
                        <hr class="my-2" />
                        <div class="row g-2">
                            <div class="col-sm-4"><small class="text-muted d-block">Lot</small><span>@(detail.LotNumber ?? "—")</span></div>
                            <div class="col-sm-4"><small class="text-muted d-block">Expiry</small><span>@(detail.ExpiryDate?.ToString("MMM dd, yyyy") ?? "—")</span></div>
                            <div class="col-sm-4"><small class="text-muted d-block">Last Restocked</small><span>@(detail.LastRestockedDate?.ToString("MMM dd, yyyy") ?? "—")</span></div>
                        </div>
                    }
                </div>
            </div>

            <div class="card border-0 shadow-sm mb-3">
                <div class="card-header bg-white"><strong><i class="bi bi-link-45deg me-1"></i>Connections</strong></div>
                <div class="card-body">
                    <div class="row g-2">
                        <div class="col-sm-6">
                            <small class="text-muted d-block">Product Template</small>
                            @if (detail.ProductId.HasValue && detail.ProductName is not null)
                            { <a href="javascript:void(0)" @onclick="() => GoToProduct(detail.ProductId.Value)">@detail.ProductName</a> }
                            else { <span>—</span> }
                        </div>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrWhiteSpace(detail.Notes))
            {
                <div class="card border-0 shadow-sm mb-3">
                    <div class="card-header bg-white"><strong><i class="bi bi-journal-text me-1"></i>Notes</strong></div>
                    <div class="card-body"><p class="text-muted small mb-0">@detail.Notes</p></div>
                </div>
            }
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted mb-2">Stock Level</h6>
                    @{ var pct = detail.MaxCapacity > 0 ? (int)(detail.Quantity / detail.MaxCapacity * 100) : 0; }
                    <div class="progress mb-2" style="height: 20px;">
                        <div class="progress-bar @(pct < 25 ? "bg-danger" : pct < 50 ? "bg-warning" : "bg-success")"
                             style="width: @pct%">@pct%</div>
                    </div>
                    <small class="text-muted">@detail.Quantity of @detail.MaxCapacity capacity</small>
                    <hr class="my-2" />
                    <div class="d-flex gap-3 text-muted small">
                        <span><strong>Created:</strong> @detail.CreatedAt.ToString("MMM dd, yyyy h:mm tt")</span>
                        <span><strong>Updated:</strong> @detail.UpdatedAt.ToString("MMM dd, yyyy h:mm tt")</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0"><i class="bi bi-boxes me-2"></i>Inventory</h4>
        <div class="d-flex gap-2 align-items-center">
            <div class="form-check form-switch mb-0">
                <input class="form-check-input" type="checkbox" id="showArchivedInventory" checked="@filter.ShowArchived" @onchange="ToggleShowArchived" />
                <label class="form-check-label small" for="showArchivedInventory"><i class="bi bi-archive me-1"></i>Show Archived</label>
            </div>
            @if (!filter.ShowArchived) { <button class="btn btn-primary btn-sm" @onclick="GoToNew"><i class="bi bi-plus-lg me-1"></i>Add Item</button> }
        </div>
    </div>

    @if (dashboard is not null)
    {
        <div class="row g-3 mb-3">
            <div class="col-sm-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center py-3">
                        <div class="fs-4 fw-bold">@dashboard.TotalItems</div>
                        <small class="text-muted">Total Items</small>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="card border-0 shadow-sm @(dashboard.LowStockCount > 0 ? "border-danger" : "")">
                    <div class="card-body text-center py-3">
                        <div class="fs-4 fw-bold text-danger">@dashboard.LowStockCount</div>
                        <small class="text-muted">Low Stock</small>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center py-3">
                        <div class="fs-4 fw-bold text-warning">@dashboard.ExpiringCount</div>
                        <small class="text-muted">Expiring Soon</small>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center py-3">
                        <div class="fs-4 fw-bold">@dashboard.TotalValue.ToString("C")</div>
                        <small class="text-muted">Total Value</small>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="card border-0 shadow-sm mb-3">
        <div class="card-body py-2">
            <div class="row g-2 align-items-end">
                <div class="col-md-5">
                    <input type="text" class="form-control form-control-sm" placeholder="Search inventory..." @bind="filter.Search" @bind:event="oninput" @bind:after="LoadItems" />
                </div>
                <div class="col-md-4">
                    <select class="form-select form-select-sm" @bind="filterLocation" @bind:after="LoadItems">
                        <option value="">All Locations</option>
                        @foreach (var loc in Enum.GetValues<InventoryLocation>())
                        {
                            <option value="@loc">@loc</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="lowOnly" @bind="filter.LowStockOnly" @bind:after="LoadItems" />
                        <label class="form-check-label" for="lowOnly">Low Stock Only</label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (_selectedIds.Count > 0)
    {
        <div class="alert alert-info d-flex justify-content-between align-items-center py-2 mb-3">
            <span><strong>@_selectedIds.Count</strong> item(s) selected</span>
            <div class="d-flex gap-2">
                @if (filter.ShowArchived)
                {
                    <button class="btn btn-success btn-sm" @onclick="BulkRestore"><i class="bi bi-arrow-counterclockwise me-1"></i>Restore</button>
                    @if (!_confirmBulkDelete) { <button class="btn btn-danger btn-sm" @onclick="() => _confirmBulkDelete = true"><i class="bi bi-trash3 me-1"></i>Delete Permanently</button> }
                    else { <button class="btn btn-danger btn-sm fw-semibold" @onclick="BulkDeletePermanently"><i class="bi bi-exclamation-triangle me-1"></i>Confirm Delete Forever</button> <button class="btn btn-outline-secondary btn-sm" @onclick="() => _confirmBulkDelete = false">Cancel</button> }
                }
                else
                {
                    <button class="btn btn-warning btn-sm" @onclick="BulkArchive"><i class="bi bi-archive me-1"></i>Archive</button>
                    @if (!_confirmBulkDelete) { <button class="btn btn-danger btn-sm" @onclick="() => _confirmBulkDelete = true"><i class="bi bi-trash3 me-1"></i>Delete Permanently</button> }
                    else { <button class="btn btn-danger btn-sm fw-semibold" @onclick="BulkDeletePermanently"><i class="bi bi-exclamation-triangle me-1"></i>Confirm Delete Forever</button> <button class="btn btn-outline-secondary btn-sm" @onclick="() => _confirmBulkDelete = false">Cancel</button> }
                }
                <button class="btn btn-outline-secondary btn-sm" @onclick="ClearSelection"><i class="bi bi-x-lg me-1"></i>Clear</button>
            </div>
        </div>
    }

    <div class="card border-0 shadow-sm">
        @if (items is null)
        {
            <div class="card-body text-center py-4"><div class="spinner-border spinner-border-sm"></div> Loading...</div>
        }
        else if (!items.Any())
        {
            <div class="card-body text-center py-5 text-muted">
                <i class="bi bi-boxes" style="font-size: 3rem;"></i>
                @if (filter.ShowArchived)
                {
                    <p class="mt-2">No archived inventory items to show.</p>
                }
                else
                {
                    <p class="mt-2">No inventory items found. <a href="javascript:void(0)" @onclick="GoToNew">Add one</a>.</p>
                }
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th style="width:40px;"><input type="checkbox" class="form-check-input" checked="@_allSelected" @onchange="ToggleSelectAll" title="Select all" /></th>
                            <th style="cursor:pointer" @onclick='() => ToggleSort("Name")'>Name @SortIcon("Name")</th>
                            <th>SKU</th>
                            <th>Category</th>
                            <th style="cursor:pointer" @onclick='() => ToggleSort("Location")'>Location @SortIcon("Location")</th>
                            <th style="cursor:pointer" @onclick='() => ToggleSort("Quantity")'>Qty @SortIcon("Quantity")</th>
                            <th>Reorder Pt</th>
                            <th style="cursor:pointer" @onclick='() => ToggleSort("Cost")'>Wholesale @SortIcon("Cost")</th>
                            <th>Sell Price</th>
                            <th style="width:90px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var i in items)
                        {
                            <tr class="@(_selectedIds.Contains(i.Id) ? "table-active" : "")">
                                <td @onclick:stopPropagation="true"><input type="checkbox" class="form-check-input" checked="@_selectedIds.Contains(i.Id)" @onchange="() => ToggleRowSelection(i.Id)" /></td>
                                <td style="cursor:pointer" @onclick="() => GoToDetail(i.Id)">
                                    <strong>@i.Name</strong>
                                    @if (i.ProductName is not null) { <br /><small class="text-muted">@i.ProductName</small> }
                                </td>
                                <td>@(i.SKU ?? "—")</td>
                                <td>@(i.Category ?? "—")</td>
                                <td>@i.Location</td>
                                <td>
                                    <span class="@(i.IsLowStock ? "text-danger fw-bold" : "")">@i.Quantity</span>
                                </td>
                                <td>@i.MinThreshold</td>
                                <td>@i.Cost.ToString("C")</td>
                                <td>@i.Price.ToString("C")</td>
                                <td @onclick:stopPropagation="true">
                                    <div class="d-flex gap-1">
                                        <button class="btn btn-outline-primary btn-sm py-0 px-1" @onclick="() => GoToEditRow(i.Id)" title="Edit"><i class="bi bi-pencil"></i></button>
                                        <button class="btn btn-outline-danger btn-sm py-0 px-1" @onclick="() => ArchiveRow(i.Id)" title="Archive"><i class="bi bi-archive"></i></button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
    @if (!string.IsNullOrEmpty(_bulkMsg))
    {
        <div class="alert @(_bulkMsgIsError ? "alert-danger" : "alert-success") mt-2 mb-0 py-2"><i class="bi @(_bulkMsgIsError ? "bi-x-circle" : "bi-check-circle") me-1"></i>@_bulkMsg</div>
    }
}

@code {
    [Parameter] public int? Id { get; set; }

    private string mode = "list";
    private List<InventoryListItem>? items;
    private InventoryFilter filter = new();
    private string filterLocation = "";
    private InventoryDashboard? dashboard;
    private InventoryDetail? detail;
    private InventoryEditModel form = new();
    private int? editId;
    private string? errorMsg;
    private bool _confirmArchive;

    // Multi-select & bulk action state
    private HashSet<int> _selectedIds = [];
    private bool _confirmBulkDelete;
    private string? _bulkMsg;
    private bool _bulkMsgIsError;
    private bool _allSelected => items is not null && items.Count > 0 && items.All(i => _selectedIds.Contains(i.Id));

    private List<ProductListItem> _products = [];
    private List<string> _inventoryCategories = ["Parts", "Supplies", "Equipment", "Filters", "Refrigerant", "Ductwork", "Electrical", "Plumbing", "Safety", "Tools", "Other"];
    private decimal _defaultTaxRate = 9.75m;
    private decimal _inventoryMsrp;

    private void RecalcInventoryPricing()
    {
        if (_defaultTaxRate <= 0 || form.Cost <= 0)
        {
            _inventoryMsrp = form.Cost;
            return;
        }
        var multiplier = 1 + (_defaultTaxRate / 100m);
        var oldMsrp = _inventoryMsrp;
        _inventoryMsrp = form.TaxIncludedInPrice
            ? Math.Round(form.Cost * multiplier, 2)
            : form.Cost;

        // If Sell Price was tracking the old MSRP (or was never customized), keep it in sync
        if (form.Price == 0 || form.Price == oldMsrp)
            form.Price = _inventoryMsrp;
    }

    protected override void OnInitialized()
    {
        Nav.LocationChanged += OnLocationChanged;
    }

    protected override async Task OnParametersSetAsync()
    {
        await DetermineView();
    }

    private async void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        await DetermineView();
        await InvokeAsync(StateHasChanged);
    }

    private async Task DetermineView()
    {
        var uri = Nav.ToAbsoluteUri(Nav.Uri);
        if (uri.AbsolutePath.Contains("/inventory/new", StringComparison.OrdinalIgnoreCase))
        {
            await LoadDropdowns();
            mode = "form"; editId = null; form = new() { TaxIncludedInPrice = true }; _inventoryMsrp = 0;
        }
        else if (Id.HasValue && uri.AbsolutePath.Contains("/edit", StringComparison.OrdinalIgnoreCase))
        {
            await LoadDropdowns();
            await LoadForEdit(Id.Value);
        }
        else if (Id.HasValue)
        {
            await LoadDetailView(Id.Value);
        }
        else
        {
            mode = "list"; await LoadItems(); dashboard = await InventorySvc.GetDashboardAsync();
        }
    }

