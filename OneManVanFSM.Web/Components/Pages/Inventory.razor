@page "/inventory"
@page "/inventory/new"
@page "/inventory/{Id:int}"
@page "/inventory/{Id:int}/edit"
@rendermode InteractiveServer
@implements IDisposable
@inject IInventoryService InventorySvc
@inject IProductService ProductSvc
@inject NavigationManager Nav

<PageTitle>Inventory - OneManVanFSM</PageTitle>

@if (mode == "form")
{
    <div class="d-flex align-items-center mb-3">
        <button class="btn btn-outline-secondary btn-sm me-2" @onclick="GoToList"><i class="bi bi-arrow-left"></i></button>
        <h4 class="mb-0"><i class="bi bi-boxes me-2"></i>@(editId.HasValue ? "Edit" : "Add") Inventory Item</h4>
    </div>
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <EditForm Model="form" OnValidSubmit="SaveItem">
                <DataAnnotationsValidator />
                <div class="row g-3">
                    <div class="col-md-5">
                        <label class="form-label">Name <span class="text-danger">*</span></label>
                        <InputText @bind-Value="form.Name" class="form-control" />
                        <ValidationMessage For="() => form.Name" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Product Template</label>
                        <InputSelect @bind-Value="form.ProductId" class="form-select">
                            <option value="">— Select Product —</option>
                            @foreach (var p in _products)
                            {
                                <option value="@p.Id">@p.Name</option>
                            }
                        </InputSelect>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Location</label>
                        <InputSelect @bind-Value="form.Location" class="form-select">
                            @foreach (var loc in Enum.GetValues<InventoryLocation>())
                            {
                                <option value="@loc">@loc</option>
                            }
                        </InputSelect>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">SKU</label>
                        <InputText @bind-Value="form.SKU" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Barcode</label>
                        <InputText @bind-Value="form.Barcode" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Shelf / Bin</label>
                        <InputText @bind-Value="form.ShelfBin" class="form-control" placeholder="Shelf B3" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Preferred Supplier</label>
                        <InputText @bind-Value="form.PreferredSupplier" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Quantity</label>
                        <InputNumber @bind-Value="form.Quantity" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Min Threshold</label>
                        <InputNumber @bind-Value="form.MinThreshold" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Max Capacity</label>
                        <InputNumber @bind-Value="form.MaxCapacity" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Cost</label>
                        <InputNumber @bind-Value="form.Cost" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Price</label>
                        <InputNumber @bind-Value="form.Price" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Markup %</label>
                        <InputNumber @bind-Value="form.MarkupPercent" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Lot Number</label>
                        <InputText @bind-Value="form.LotNumber" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Expiry Date</label>
                        <InputDate @bind-Value="form.ExpiryDate" class="form-control" />
                    </div>
                    <div class="col-12">
                        <label class="form-label">Notes</label>
                        <InputTextArea @bind-Value="form.Notes" class="form-control" rows="2" />
                    </div>
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary"><i class="bi bi-check-lg me-1"></i>Save</button>
                    <button type="button" class="btn btn-outline-secondary ms-2" @onclick="GoToList">Cancel</button>
                </div>
                @if (!string.IsNullOrEmpty(errorMsg)) { <div class="alert alert-danger mt-2 mb-0">@errorMsg</div> }
            </EditForm>
        </div>
    </div>
}
else if (mode == "detail" && detail is not null)
{
    <div class="d-flex align-items-center mb-3">
        <button class="btn btn-outline-secondary btn-sm me-2" @onclick="GoToList"><i class="bi bi-arrow-left"></i></button>
        <h4 class="mb-0"><i class="bi bi-boxes me-2"></i>@detail.Name</h4>
        <span class="badge @(detail.Quantity <= detail.MinThreshold ? "bg-danger" : "bg-success") ms-2">
            @(detail.Quantity <= detail.MinThreshold ? "Low Stock" : "In Stock")
        </span>
        <div class="ms-auto">
            <button class="btn btn-outline-primary btn-sm me-1" @onclick="EditDetail"><i class="bi bi-pencil me-1"></i>Edit</button>
            <button class="btn btn-outline-danger btn-sm" @onclick="ArchiveDetail"><i class="bi bi-archive me-1"></i>Archive</button>
        </div>
    </div>
    <div class="row g-3">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-body">
                    <h6><i class="bi bi-box-seam me-1"></i>Stock Details</h6>
                    <div class="row g-2 mt-2">
                        <div class="col-sm-4"><small class="text-muted d-block">Location</small><span>@detail.Location</span></div>
                        <div class="col-sm-4"><small class="text-muted d-block">Quantity</small><span>@detail.Quantity</span></div>
                        <div class="col-sm-4"><small class="text-muted d-block">Min / Max</small><span>@detail.MinThreshold / @detail.MaxCapacity</span></div>
                        <div class="col-sm-4"><small class="text-muted d-block">Cost</small><span>@detail.Cost.ToString("C")</span></div>
                        <div class="col-sm-4"><small class="text-muted d-block">Price</small><span>@detail.Price.ToString("C")</span></div>
                        <div class="col-sm-4"><small class="text-muted d-block">Markup</small><span>@detail.MarkupPercent%</span></div>
                        @if (!string.IsNullOrWhiteSpace(detail.SKU)) { <div class="col-sm-4"><small class="text-muted d-block">SKU</small><span>@detail.SKU</span></div> }
                        @if (!string.IsNullOrWhiteSpace(detail.Barcode)) { <div class="col-sm-4"><small class="text-muted d-block">Barcode</small><span>@detail.Barcode</span></div> }
                        @if (!string.IsNullOrWhiteSpace(detail.ShelfBin)) { <div class="col-sm-4"><small class="text-muted d-block">Shelf / Bin</small><span>@detail.ShelfBin</span></div> }
                        @if (!string.IsNullOrWhiteSpace(detail.PreferredSupplier)) { <div class="col-sm-4"><small class="text-muted d-block">Preferred Supplier</small><span>@detail.PreferredSupplier</span></div> }
                    </div>
                    @if (!string.IsNullOrWhiteSpace(detail.LotNumber) || detail.ExpiryDate.HasValue || detail.LastRestockedDate.HasValue)
                    {
                        <hr />
                        <div class="row g-2">
                            <div class="col-sm-4"><small class="text-muted d-block">Lot</small><span>@(detail.LotNumber ?? "—")</span></div>
                            <div class="col-sm-4"><small class="text-muted d-block">Expiry</small><span>@(detail.ExpiryDate?.ToString("MMM dd, yyyy") ?? "—")</span></div>
                            <div class="col-sm-4"><small class="text-muted d-block">Last Restocked</small><span>@(detail.LastRestockedDate?.ToString("MMM dd, yyyy") ?? "—")</span></div>
                        </div>
                    }
                </div>
            </div>

            <div class="card border-0 shadow-sm mb-3">
                <div class="card-header bg-white"><strong><i class="bi bi-link-45deg me-1"></i>Connections</strong></div>
                <div class="card-body">
                    <div class="row g-2">
                        <div class="col-sm-6">
                            <small class="text-muted d-block">Product Template</small>
                            @if (detail.ProductId.HasValue && detail.ProductName is not null)
                            { <a href="javascript:void(0)" @onclick="() => GoToProduct(detail.ProductId.Value)">@detail.ProductName</a> }
                            else { <span>—</span> }
                        </div>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrWhiteSpace(detail.Notes))
            {
                <div class="card border-0 shadow-sm mb-3">
                    <div class="card-header bg-white"><strong><i class="bi bi-journal-text me-1"></i>Notes</strong></div>
                    <div class="card-body"><p class="text-muted small mb-0">@detail.Notes</p></div>
                </div>
            }
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted mb-2">Stock Level</h6>
                    @{ var pct = detail.MaxCapacity > 0 ? (int)(detail.Quantity / detail.MaxCapacity * 100) : 0; }
                    <div class="progress mb-2" style="height: 20px;">
                        <div class="progress-bar @(pct < 25 ? "bg-danger" : pct < 50 ? "bg-warning" : "bg-success")"
                             style="width: @pct%">@pct%</div>
                    </div>
                    <small class="text-muted">@detail.Quantity of @detail.MaxCapacity capacity</small>
                </div>
            </div>
            <div class="card border-0 shadow-sm mt-3">
                <div class="card-body">
                    <h6 class="text-muted mb-3"><i class="bi bi-info-circle me-1"></i>Record Info</h6>
                    <p class="mb-1 small"><strong>Created:</strong> @detail.CreatedAt.ToString("MMM dd, yyyy h:mm tt")</p>
                    <p class="mb-0 small"><strong>Updated:</strong> @detail.UpdatedAt.ToString("MMM dd, yyyy h:mm tt")</p>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0"><i class="bi bi-boxes me-2"></i>Inventory</h4>
        <button class="btn btn-primary btn-sm" @onclick="GoToNew"><i class="bi bi-plus-lg me-1"></i>Add Item</button>
    </div>

    @if (dashboard is not null)
    {
        <div class="row g-3 mb-3">
            <div class="col-sm-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center py-3">
                        <div class="fs-4 fw-bold">@dashboard.TotalItems</div>
                        <small class="text-muted">Total Items</small>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="card border-0 shadow-sm @(dashboard.LowStockCount > 0 ? "border-danger" : "")">
                    <div class="card-body text-center py-3">
                        <div class="fs-4 fw-bold text-danger">@dashboard.LowStockCount</div>
                        <small class="text-muted">Low Stock</small>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center py-3">
                        <div class="fs-4 fw-bold text-warning">@dashboard.ExpiringCount</div>
                        <small class="text-muted">Expiring Soon</small>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center py-3">
                        <div class="fs-4 fw-bold">@dashboard.TotalValue.ToString("C")</div>
                        <small class="text-muted">Total Value</small>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="card border-0 shadow-sm mb-3">
        <div class="card-body py-2">
            <div class="row g-2 align-items-end">
                <div class="col-md-5">
                    <input type="text" class="form-control form-control-sm" placeholder="Search inventory..." @bind="filter.Search" @bind:event="oninput" @onkeyup="HandleSearchKey" />
                </div>
                <div class="col-md-3">
                    <select class="form-select form-select-sm" @bind="filterLocation">
                        <option value="">All Locations</option>
                        @foreach (var loc in Enum.GetValues<InventoryLocation>())
                        {
                            <option value="@loc">@loc</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="lowOnly" @bind="filter.LowStockOnly" />
                        <label class="form-check-label" for="lowOnly">Low Only</label>
                    </div>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-outline-primary btn-sm w-100" @onclick="LoadItems"><i class="bi bi-search"></i></button>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        @if (items is null)
        {
            <div class="card-body text-center py-4"><div class="spinner-border spinner-border-sm"></div> Loading...</div>
        }
        else if (!items.Any())
        {
            <div class="card-body text-center py-5 text-muted">
                <i class="bi bi-boxes" style="font-size: 3rem;"></i>
                <p class="mt-2">No inventory items found. <a href="javascript:void(0)" @onclick="GoToNew">Add one</a>.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="table-light">
                        <tr><th>Name</th><th>SKU</th><th>Location</th><th>Quantity</th><th>Threshold</th><th>Cost</th><th>Lot</th><th>Expiry</th></tr>
                    </thead>
                    <tbody>
                        @foreach (var i in items)
                        {
                            <tr style="cursor:pointer" @onclick="() => GoToDetail(i.Id)">
                                <td>
                                    <strong>@i.Name</strong>
                                    @if (i.ProductName is not null) { <br /><small class="text-muted">@i.ProductName</small> }
                                </td>
                                <td>@(i.SKU ?? "—")</td>
                                <td>@i.Location</td>
                                <td>
                                    <span class="@(i.IsLowStock ? "text-danger fw-bold" : "")">@i.Quantity</span>
                                </td>
                                <td>@i.MinThreshold</td>
                                <td>@i.Cost.ToString("C")</td>
                                <td>@(i.LotNumber ?? "—")</td>
                                <td>@(i.ExpiryDate?.ToString("MMM yyyy") ?? "—")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
}

@code {
    [Parameter] public int? Id { get; set; }

    private string mode = "list";
    private List<InventoryListItem>? items;
    private InventoryFilter filter = new();
    private string filterLocation = "";
    private InventoryDashboard? dashboard;
    private InventoryDetail? detail;
    private InventoryEditModel form = new();
    private int? editId;
    private string? errorMsg;

    private List<ProductListItem> _products = [];

    protected override void OnInitialized()
    {
        Nav.LocationChanged += OnLocationChanged;
    }

    protected override async Task OnParametersSetAsync()
    {
        await DetermineView();
    }

    private async void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        await DetermineView();
        await InvokeAsync(StateHasChanged);
    }

    private async Task DetermineView()
    {
        var uri = Nav.ToAbsoluteUri(Nav.Uri);
        if (uri.AbsolutePath.Contains("/inventory/new", StringComparison.OrdinalIgnoreCase))
        {
            await LoadDropdowns();
            mode = "form"; editId = null; form = new();
        }
        else if (Id.HasValue && uri.AbsolutePath.Contains("/edit", StringComparison.OrdinalIgnoreCase))
        {
            await LoadDropdowns();
            await LoadForEdit(Id.Value);
        }
        else if (Id.HasValue)
        {
            await LoadDetailView(Id.Value);
        }
        else
        {
            mode = "list"; await LoadItems(); dashboard = await InventorySvc.GetDashboardAsync();
        }
    }

    public void Dispose()
    {
        Nav.LocationChanged -= OnLocationChanged;
    }

    private async Task LoadItems()
    {
        filter.Location = string.IsNullOrWhiteSpace(filterLocation) ? null : Enum.Parse<InventoryLocation>(filterLocation);
        items = await InventorySvc.GetItemsAsync(filter);
    }

    private async Task LoadDetailView(int id)
    {
        detail = await InventorySvc.GetItemAsync(id);
        mode = detail is not null ? "detail" : "list";
        if (mode == "list") await LoadItems();
    }

    private async Task LoadForEdit(int id)
    {
        var d = await InventorySvc.GetItemAsync(id);
        if (d is null) { mode = "list"; await LoadItems(); return; }
        editId = id;
        form = new InventoryEditModel
        {
            Name = d.Name, SKU = d.SKU, Barcode = d.Barcode,
            ShelfBin = d.ShelfBin, PreferredSupplier = d.PreferredSupplier,
            Location = d.Location, Quantity = d.Quantity,
            MinThreshold = d.MinThreshold, MaxCapacity = d.MaxCapacity,
            Cost = d.Cost, Price = d.Price, MarkupPercent = d.MarkupPercent,
            LotNumber = d.LotNumber, ExpiryDate = d.ExpiryDate,
            Notes = d.Notes, ProductId = d.ProductId
        };
        mode = "form";
    }

    private async Task SaveItem()
    {
        try
        {
            errorMsg = null;
            if (editId.HasValue) await InventorySvc.UpdateItemAsync(editId.Value, form);
            else await InventorySvc.CreateItemAsync(form);
            Nav.NavigateTo("/inventory");
        }
        catch (Exception ex) { errorMsg = ex.Message; }
    }

    private async Task ArchiveDetail()
    {
        if (detail is not null) { await InventorySvc.ArchiveItemAsync(detail.Id); Nav.NavigateTo("/inventory"); }
    }

    private void GoToList() => Nav.NavigateTo("/inventory");
    private void GoToNew() => Nav.NavigateTo("/inventory/new");
    private void GoToDetail(int id) => Nav.NavigateTo($"/inventory/{id}");
    private void EditDetail() { if (detail is not null) Nav.NavigateTo($"/inventory/{detail.Id}/edit"); }
    private void GoToProduct(int id) => Nav.NavigateTo($"/products/{id}");

    private async Task HandleSearchKey(KeyboardEventArgs e) { if (e.Key == "Enter") await LoadItems(); }

    private async Task LoadDropdowns()
    {
        _products = await ProductSvc.GetProductsAsync();
    }
}
