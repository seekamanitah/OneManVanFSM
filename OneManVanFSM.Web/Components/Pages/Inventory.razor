    private int? GetAdjacentId(int offset)
    {
        if (items is null || detail is null) return null;
        var idx = items.FindIndex(i => i.Id == detail.Id);
        if (idx < 0) return null;
        var target = idx + offset;
        return target >= 0 && target < items.Count ? items[target].Id : null;
    }
    private void GoToPrev() { var id = GetAdjacentId(-1); if (id.HasValue) GoToDetail(id.Value); }
    private void GoToNext() { var id = GetAdjacentId(1); if (id.HasValue) GoToDetail(id.Value); }

    private int? GetAdjacentEditId(int offset)
    {
        if (items is null || !editId.HasValue) return null;
        var idx = items.FindIndex(i => i.Id == editId.Value);
        if (idx < 0) return null;
        var target = idx + offset;
        return target >= 0 && target < items.Count ? items[target].Id : null;
    }
    private void GoToPrevEdit() { var id = GetAdjacentEditId(-1); if (id.HasValue) Nav.NavigateTo($"/inventory/{id.Value}/edit"); }
    private void GoToNextEdit() { var id = GetAdjacentEditId(1); if (id.HasValue) Nav.NavigateTo($"/inventory/{id.Value}/edit"); }
