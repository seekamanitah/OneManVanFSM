                        Status = d.Status, Priority = d.Priority,
                        TradeType = d.TradeType, JobType = d.JobType, SystemType = d.SystemType,
                        ScheduledDate = d.ScheduledDate, EstimatedDuration = d.EstimatedDuration,
                        EstimatedTotal = d.EstimatedTotal, ActualDuration = d.ActualDuration,
                        ActualTotal = d.ActualTotal, PermitRequired = d.PermitRequired,
                        PermitNumber = d.PermitNumber, Notes = d.Notes,
                        CustomerId = d.CustomerId, CompanyId = d.CompanyId, SiteId = d.SiteId,
                        AssignedEmployeeId = d.AssignedEmployeeId
                    };
                    _permitRequired = d.PermitRequired == true;
                    // Filter sites/assets by customer context
                    await RefreshSitesAndAssets();
                    // Populate multi-select from primary + additional employee ids
                    _selectedTechIds = [];
                    if (d.AssignedEmployeeId.HasValue) _selectedTechIds.Add(d.AssignedEmployeeId.Value);
                    if (d.AssignedEmployees?.Count > 0)
                    {
                        foreach (var ae in d.AssignedEmployees)
                            _selectedTechIds.Add(ae.EmployeeId);
                    }
                    // Populate linked assets
                    _selectedAssetIds = [];
                    if (d.LinkedAssets?.Count > 0)
                    {
                        foreach (var la in d.LinkedAssets)
                            _selectedAssetIds.Add(la.Id);
                    }
                }
            }
            else
            {
                _editModel = new JobEditModel { TradeType = "HVAC" };
                _permitRequired = false;
                _selectedTechIds = [];
                _selectedAssetIds = [];

                // Prepopulate from query string (e.g., navigating from Customer, Site, or Asset page)
                var qs = System.Web.HttpUtility.ParseQueryString(Navigation.ToAbsoluteUri(Navigation.Uri).Query);
                if (int.TryParse(qs["customerId"], out var qsCustId))
                    _editModel.CustomerId = qsCustId;
                if (int.TryParse(qs["siteId"], out var qsSiteId))
                {
                    _editModel.SiteId = qsSiteId;
                    // Also resolve customer from site if not already set
                    if (!_editModel.CustomerId.HasValue)
                    {
                        var site = _sites.FirstOrDefault(s => s.Id == qsSiteId);
                        if (site?.CustomerId.HasValue == true)
                            _editModel.CustomerId = site.CustomerId;
                    }
                }
                if (int.TryParse(qs["assetId"], out var qsAssetId))
                {
                    _selectedAssetIds = [qsAssetId];
                    // Also resolve customer/site from asset if not already set
                    var asset = _assets.FirstOrDefault(a => a.Id == qsAssetId);
                    if (asset is not null)
                    {
                        if (!_editModel.CustomerId.HasValue && asset.CustomerId.HasValue)
                            _editModel.CustomerId = asset.CustomerId;
                        if (!_editModel.SiteId.HasValue && asset.SiteId.HasValue)
                            _editModel.SiteId = asset.SiteId;
                    }
                }
                // Refresh filtered sites/assets for the selected customer context
                if (_editModel.CustomerId.HasValue || _editModel.SiteId.HasValue)
                    await RefreshSitesAndAssets();
            }
        }
        else if (Id.HasValue)
        {
            _view = View.Detail;
            _detail = await JobService.GetJobAsync(Id.Value);
            _pageTitle = _detail?.JobNumber ?? "Job";
            if (_detail is not null)
            {
                _assignedEmployees = _detail.AssignedEmployees;
                _technicians = await JobService.GetTechniciansAsync();
                _companyProfile = await CompanyProfileSvc.GetProfileAsync();
            }
        }
        else
        {
            _view = View.List; _pageTitle = "Jobs";
            await ReloadList();
        }
        _loading = false;
    }

