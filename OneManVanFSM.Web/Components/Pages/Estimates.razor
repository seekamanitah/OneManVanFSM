            var fileName = $"Estimate_{detail.EstimateNumber}_{DateTime.Now:yyyyMMdd}.pdf";
            await EmailSvc.SendEmailAsync(new EmailMessage
            {
                To = _emailTo,
                Subject = _emailSubject,
                Body = _emailBody,
