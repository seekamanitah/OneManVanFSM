@page "/estimates"
@page "/estimates/new"
@page "/estimates/{Id:int}"
@page "/estimates/{Id:int}/edit"
@rendermode InteractiveServer
@implements IDisposable
@inject IEstimateService EstimateSvc
@inject ICustomerService CustomerSvc
@inject ICompanyService CompanySvc
@inject IAssetService AssetSvc
@inject IInventoryService InvSvc
@inject IDropdownService DropdownSvc
@inject NavigationManager Nav
@inject IJSRuntime JS
@inject ICompanyProfileService CompanyProfileSvc
@inject IEmailService EmailSvc
@inject IPdfService PdfSvc

<PageTitle>Estimates - OneManVanFSM</PageTitle>

@if (mode == "form")
{
    <div class="d-flex align-items-center mb-3">
        <button class="btn btn-outline-secondary btn-sm me-1" @onclick="GoToList"><i class="bi bi-arrow-left"></i></button>
        @if (editId.HasValue)
        {
            <button class="btn btn-outline-secondary btn-sm me-1" @onclick="GoToPrevEstimateEdit" disabled="@(GetAdjacentEstimateEditId(-1) is null)" title="Previous"><i class="bi bi-chevron-left"></i></button>
            <button class="btn btn-outline-secondary btn-sm me-2" @onclick="GoToNextEstimateEdit" disabled="@(GetAdjacentEstimateEditId(1) is null)" title="Next"><i class="bi bi-chevron-right"></i></button>
        }
        <h4 class="mb-0"><i class="bi bi-calculator-fill me-2"></i>@(editId.HasValue ? "Edit" : "New") Estimate</h4>
    </div>
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <EditForm Model="form" OnValidSubmit="SaveEstimate">
                <DataAnnotationsValidator />

                @* ?? Estimate Info ?? *@
                <h6 class="border-bottom pb-2 mb-3"><i class="bi bi-info-circle me-1"></i>Estimate Information</h6>
                <div class="row g-2 mb-3">
                    <div class="col-md-8">
                        <label class="form-label">Title <span class="text-danger">*</span></label>
                        <InputText @bind-Value="form.Title" class="form-control form-control-sm" />
                        <ValidationMessage For="() => form.Title" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Status</label>
                        <InputSelect @bind-Value="form.Status" class="form-select form-select-sm">
                            @foreach (var s in _estimateStatuses) { <option value="@s">@s</option> }
                        </InputSelect>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Priority</label>
                        <InputSelect @bind-Value="form.Priority" class="form-select form-select-sm">
                            @foreach (var p in Enum.GetValues<JobPriority>()) { <option value="@p">@p</option> }
                        </InputSelect>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Trade Type</label>
                        <select class="form-select form-select-sm" @bind="form.TradeType">
                            <option value="">Select...</option>
                            @foreach (var t in _tradeTypes) { <option value="@t">@t</option> }
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Pricing Method</label>
                        <InputSelect @bind-Value="form.PricingMethod" class="form-select form-select-sm">
                            @foreach (var m in Enum.GetValues<PricingMethod>()) { <option value="@m">@m</option> }
                        </InputSelect>
                    </div>
                </div>

                @* ?? Customer & Details ?? *@
                <h6 class="border-bottom pb-2 mb-3"><i class="bi bi-people me-1"></i>Customer & Details</h6>
                <div class="row g-2 mb-3">
                    <div class="col-md-4">
                        <label class="form-label">Customer</label>
                        <InputSelect @bind-Value="form.CustomerId" class="form-select form-select-sm">
                            <option value="">— Select Customer —</option>
                            @foreach (var c in _customers)
                            {
                                <option value="@c.Id">@c.Name</option>
                            }
                        </InputSelect>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Company <small class="text-muted">(Optional)</small></label>
                        <InputSelect @bind-Value="form.CompanyId" class="form-select form-select-sm">
                            <option value="">— None —</option>
                            @foreach (var co in _companies)
                            {
                                <option value="@co.Id">@co.Name</option>
                            }
                        </InputSelect>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">System Type</label>
                        <InputSelect @bind-Value="form.SystemType" class="form-select form-select-sm">
                            <option value="">Select system type...</option>
                            @foreach (var st in _systemTypeOptions) { <option value="@st">@st</option> }
                        </InputSelect>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Expiry Date</label>
                        <InputDate @bind-Value="form.ExpiryDate" class="form-control form-control-sm" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Sq Ft</label>
                        <InputNumber @bind-Value="form.SqFt" class="form-control form-control-sm" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Zones</label>
                        <InputNumber @bind-Value="form.Zones" class="form-control form-control-sm" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Stories</label>
                        <InputNumber @bind-Value="form.Stories" class="form-control form-control-sm" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Deposit Required</label>
                        <div class="input-group input-group-sm">
                            <span class="input-group-text">$</span>
                            <InputNumber @bind-Value="form.DepositRequired" class="form-control form-control-sm" />
                        </div>
                    </div>
                    @if (form.DepositRequired.HasValue && form.DepositRequired > 0)
                    {
                        <div class="col-md-3 d-flex align-items-end">
                            <div class="form-check mb-2">
                                <input type="checkbox" class="form-check-input" id="chkDepositReceived" checked="@(form.DepositReceived == true)" @onchange="OnDepositReceivedChanged" />
                                <label class="form-check-label" for="chkDepositReceived">Deposit Received</label>
                            </div>
                        </div>
                        @if (form.DepositReceived == true)
                        {
                            <div class="col-md-2">
                                <label class="form-label">Amount Paid</label>
                                <div class="input-group input-group-sm">
                                    <span class="input-group-text">$</span>
                                    <InputNumber @bind-Value="form.DepositAmountPaid" class="form-control form-control-sm" />
                                </div>
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">Payment Method</label>
                                <InputSelect @bind-Value="form.DepositPaymentMethod" class="form-select form-select-sm">
                                    @foreach (var pm in Enum.GetValues<PaymentMethod>())
                                    {
                                        <option value="@pm">@pm</option>
                                    }
                                </InputSelect>
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">Reference <small class="text-muted">(Check #, etc.)</small></label>
                                <InputText @bind-Value="form.DepositPaymentReference" class="form-control form-control-sm" placeholder="Check #1234" />
                            </div>
                        }
                    }
                </div>

                @* ?? Line Items ?? *@
                <div class="d-flex justify-content-between align-items-center border-bottom pb-2 mb-3">
                    <h6 class="mb-0"><i class="bi bi-list-check me-1"></i>Line Items</h6>
                    <button type="button" class="btn btn-primary btn-sm" @onclick="OpenAddItemModal"><i class="bi bi-plus-circle me-1"></i>Add Item</button>
                </div>
                @if (form.Lines.Count > 0)
                {
                    <div class="table-responsive mb-3">
                        <table class="table table-sm table-bordered mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Description</th>
                                    <th style="width:70px;" class="text-center">Qty</th>
                                    <th style="width:100px;" class="text-end">Unit Price</th>
                                    <th style="width:90px;" class="text-end">Total</th>
                                    <th style="width:40px;"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < form.Lines.Count; i++)
                                {
                                    var line = form.Lines[i];
                                    var capturedIdx = i;
                                    <tr>
                                        <td>
                                            <input type="text" class="form-control form-control-sm border-0 p-0" @bind="line.Description" />
                                            @if (!string.IsNullOrEmpty(line.LineType)) { <span class="badge bg-light text-dark ms-1">@line.LineType</span> }
                                        </td>
                                        <td class="text-center"><input type="number" class="form-control form-control-sm border-0 p-0 text-center" style="width:60px;" step="0.01" @bind="line.Quantity" @bind:event="oninput" @onchange="RecalcTotals" /></td>
                                        <td class="text-end"><input type="number" class="form-control form-control-sm border-0 p-0 text-end" style="width:90px;" step="0.01" @bind="line.UnitPrice" @bind:event="oninput" @onchange="RecalcTotals" /></td>
                                        <td class="text-end">@((line.Quantity * line.UnitPrice).ToString("C"))</td>
                                        <td class="text-center"><button type="button" class="btn btn-sm btn-outline-danger py-0 px-1" @onclick="() => RemoveLine(capturedIdx)"><i class="bi bi-x"></i></button></td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="table-light">
                                <tr><td colspan="3" class="text-end fw-semibold">Subtotal</td><td class="text-end fw-semibold">@form.Subtotal.ToString("C")</td><td></td></tr>
                            </tfoot>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center text-muted py-4 mb-3">
                        <i class="bi bi-list-check" style="font-size:2rem;"></i>
                        <p class="mt-2 mb-0">No items yet. Click "Add Item" to get started.</p>
                    </div>
                }

                @* ?? Estimate Totals ?? *@
                <h6 class="border-bottom pb-2 mb-3"><i class="bi bi-calculator me-1"></i>Estimate Totals</h6>
                <div class="row g-2 mb-2">
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Markup %</label>
                        <input type="number" class="form-control form-control-sm" step="0.01" @bind="form.MarkupPercent" @bind:event="oninput" @onchange="RecalcTotals" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Tax %</label>
                        <input type="number" class="form-control form-control-sm" step="0.01" @bind="form.TaxPercent" @bind:event="oninput" @onchange="RecalcTotals" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Contingency %</label>
                        <input type="number" class="form-control form-control-sm" step="0.01" @bind="form.ContingencyPercent" @bind:event="oninput" @onchange="RecalcTotals" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Discount</label>
                        <div class="input-group input-group-sm">
                            <select class="form-select" style="max-width:70px;" @bind="form.DiscountType" @bind:after="RecalcTotals">
                                <option value="">—</option>
                                <option value="Percent">%</option>
                                <option value="Dollar">$</option>
                            </select>
                            <input type="number" class="form-control" step="0.01" @bind="form.DiscountValue" @bind:event="oninput" @onchange="RecalcTotals" />
                        </div>
                    </div>
                </div>
                <div class="row g-2 mb-3">
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Deposit <small class="text-muted">(70% auto)</small></label>
                        <input type="text" class="form-control form-control-sm" value="@(form.DepositRequired?.ToString("C") ?? "$0.00")" readonly />
                    </div>
                    <div class="col-md-3 offset-md-6">
                        <label class="form-label fw-semibold">Total</label>
                        <input type="text" class="form-control form-control-sm fw-bold" value="@form.Total.ToString("C")" readonly />
                    </div>
                </div>

                @* ?? Notes ?? *@
                <h6 class="border-bottom pb-2 mb-3"><i class="bi bi-journal-text me-1"></i>Notes</h6>
                <div class="mb-3">
                    <InputTextArea @bind-Value="form.Notes" class="form-control form-control-sm" rows="3" placeholder="Additional notes for this estimate..." />
                </div>

                <div class="d-flex justify-content-between border-top pt-3">
                    <button type="button" class="btn btn-outline-secondary btn-sm" @onclick="GoToList">Cancel</button>
                    <div class="d-flex gap-2 align-items-center">
                        @if (!string.IsNullOrEmpty(_savedMsg)) { <span class="text-success small"><i class="bi bi-check-circle me-1"></i>@_savedMsg</span> }
                        <button type="submit" class="btn btn-outline-primary btn-sm" @onclick="() => _closeAfterSave = false"><i class="bi bi-floppy me-1"></i>Save</button>
                        <button type="submit" class="btn btn-primary btn-sm" @onclick="() => _closeAfterSave = true"><i class="bi bi-check-circle me-1"></i>Save & Close</button>
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(errorMsg)) { <div class="alert alert-danger mt-2 mb-0">@errorMsg</div> }
            </EditForm>
        </div>
    </div>
}
else if (mode == "detail" && detail is not null)
{
    <div class="d-flex align-items-center mb-3 no-print">
        <button class="btn btn-outline-secondary btn-sm me-1" @onclick="GoToList" title="Back to list"><i class="bi bi-arrow-left"></i></button>
        <button class="btn btn-outline-secondary btn-sm me-1" @onclick="GoToPrevEstimate" disabled="@(GetAdjacentEstimateId(-1) is null)" title="Previous"><i class="bi bi-chevron-left"></i></button>
        <button class="btn btn-outline-secondary btn-sm me-2" @onclick="GoToNextEstimate" disabled="@(GetAdjacentEstimateId(1) is null)" title="Next"><i class="bi bi-chevron-right"></i></button>
        <h4 class="mb-0"><i class="bi bi-calculator-fill me-2"></i>@detail.EstimateNumber</h4>
        <span class="badge ms-2 @GetStatusBadge(detail.Status)">@detail.Status</span>
        <span class="badge ms-1 @GetPriorityBadge(detail.Priority)">@detail.Priority</span>
        <div class="ms-auto d-flex gap-1">
            <div class="dropdown d-inline-block">
                <button class="btn btn-outline-secondary btn-sm dropdown-toggle" data-bs-toggle="dropdown" title="Print template style"><i class="bi bi-palette me-1"></i>@_printTemplate</button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><button class="dropdown-item @(_printTemplate == "Professional" ? "active" : "")" @onclick='() => SetPrintTemplate("Professional")'>Professional (Navy)</button></li>
                    <li><button class="dropdown-item @(_printTemplate == "Classic" ? "active" : "")" @onclick='() => SetPrintTemplate("Classic")'>Classic (B&W)</button></li>
                    <li><button class="dropdown-item @(_printTemplate == "Modern" ? "active" : "")" @onclick='() => SetPrintTemplate("Modern")'>Modern (Teal)</button></li>
                </ul>
            </div>
            <button class="btn btn-outline-success btn-sm" @onclick="PrintEstimate" title="Print / PDF"><i class="bi bi-printer me-1"></i>Print</button>
            <button class="btn btn-outline-info btn-sm" @onclick="OpenEmailModal" title="Email estimate"><i class="bi bi-envelope me-1"></i>Email</button>
            @if (detail.Status == EstimateStatus.Draft)
            {
                <button class="btn btn-outline-info btn-sm" @onclick="() => ChangeStatus(EstimateStatus.Sent)"><i class="bi bi-send me-1"></i>Send</button>
                <button class="btn btn-success btn-sm" @onclick="() => ChangeStatus(EstimateStatus.Approved)"><i class="bi bi-check-circle me-1"></i>Approve & Create Job</button>
            }
            @if (detail.Status == EstimateStatus.Sent)
            {
                <button class="btn btn-success btn-sm" @onclick="() => ChangeStatus(EstimateStatus.Approved)"><i class="bi bi-check-circle me-1"></i>Approve & Create Job</button>
                <button class="btn btn-outline-danger btn-sm" @onclick="() => ChangeStatus(EstimateStatus.Rejected)"><i class="bi bi-x-circle me-1"></i>Reject</button>
            }
            @if (detail.Status == EstimateStatus.Approved && detail.LinkedJobId.HasValue)
            {
                <a href="/jobs/@detail.LinkedJobId" class="btn btn-outline-success btn-sm"><i class="bi bi-wrench-adjustable me-1"></i>View Job @detail.LinkedJobNumber</a>
            }
            @if (detail.Status == EstimateStatus.Rejected)
            {
                <button class="btn btn-outline-secondary btn-sm" @onclick="() => ChangeStatus(EstimateStatus.Draft)"><i class="bi bi-arrow-counterclockwise me-1"></i>Revert to Draft</button>
            }
            <button class="btn btn-outline-primary btn-sm" @onclick="EditDetail"><i class="bi bi-pencil me-1"></i>Edit</button>
            @if (!_confirmArchive)
            {
                <button class="btn btn-outline-danger btn-sm" @onclick="() => _confirmArchive = true"><i class="bi bi-archive me-1"></i>Archive</button>
            }
            else
            {
                <button class="btn btn-danger btn-sm" @onclick="ArchiveDetail"><i class="bi bi-exclamation-triangle me-1"></i>Confirm?</button>
                <button class="btn btn-outline-secondary btn-sm" @onclick="() => _confirmArchive = false">Cancel</button>
            }
        </div>
    </div>

    @* -- Print-Only Professional Estimate -- *@
    <div class="print-doc d-none @PrintTemplateClass">
        <div class="print-doc-banner">
            <div class="print-doc-banner-left">
                <p class="print-doc-type">Estimate</p>
                <p class="print-doc-number-line"><strong>@detail.EstimateNumber</strong></p>
            </div>
            <div class="print-doc-banner-right">
                @if (_companyProfile is not null)
                {
                    <p class="print-company-name">@_companyProfile.Name</p>
                    @if (!string.IsNullOrWhiteSpace(_companyProfile.Address)) { <p class="print-company-detail">@_companyProfile.Address</p> }
                    @if (!string.IsNullOrWhiteSpace(_companyProfile.Phone)) { <p class="print-company-detail">@_companyProfile.Phone</p> }
                    @if (!string.IsNullOrWhiteSpace(_companyProfile.Email)) { <p class="print-company-detail">@_companyProfile.Email</p> }
                    @if (!string.IsNullOrWhiteSpace(_companyProfile.TaxId)) { <p class="print-company-detail">Tax ID: @_companyProfile.TaxId</p> }
                }
            </div>
        </div>
        <div class="print-doc-info-bar">
            <div class="print-info-item"><span class="print-info-label">Status</span><span class="print-info-value">@detail.Status</span></div>
            <div class="print-info-item"><span class="print-info-label">Priority</span><span class="print-info-value">@detail.Priority</span></div>
            @if (detail.ExpiryDate.HasValue) { <div class="print-info-item"><span class="print-info-label">Valid Until</span><span class="print-info-value">@detail.ExpiryDate.Value.ToString("MMM dd, yyyy")</span></div> }
            @if (!string.IsNullOrWhiteSpace(detail.TradeType)) { <div class="print-info-item"><span class="print-info-label">Trade</span><span class="print-info-value">@detail.TradeType</span></div> }
            <div class="print-info-item"><span class="print-info-label">Pricing</span><span class="print-info-value">@detail.PricingMethod</span></div>
        </div>
        <div class="print-doc-addresses">
            <div class="print-addr-block">
                @if (detail.CustomerName is not null)
                {
                    <span class="print-addr-label">Prepared For</span>
                    <p class="print-addr-name">@detail.CustomerName</p>
                    @if (!string.IsNullOrWhiteSpace(detail.CustomerAddress))
                    {
                        <p class="print-addr-line">@detail.CustomerAddress</p>
                        @if (!string.IsNullOrWhiteSpace(detail.CustomerCity))
                        {
                            <p class="print-addr-line">@detail.CustomerCity@((!string.IsNullOrWhiteSpace(detail.CustomerState)) ? $", {detail.CustomerState}" : "") @detail.CustomerZip</p>
                        }
                    }
                    @if (!string.IsNullOrWhiteSpace(detail.CustomerPhone)) { <p class="print-addr-line">@detail.CustomerPhone</p> }
                    @if (!string.IsNullOrWhiteSpace(detail.CustomerEmail)) { <p class="print-addr-line">@detail.CustomerEmail</p> }
                }
                @if (detail.SiteName is not null) { <p class="print-addr-line" style="margin-top:4pt;">Site: @detail.SiteName</p> }
            </div>
        </div>

        @if (!string.IsNullOrWhiteSpace(detail.Title)) { <h5 style="margin:0 0 10pt 4pt;font-size:12pt;">@detail.Title</h5> }

        @{ var isEstimateGrouped = detail.PricingMethod != PricingMethod.FlatRate; }
        @if (detail.Lines.Any())
        {
            @if (isEstimateGrouped)
            {
                var grouped = detail.Lines.OrderBy(x => x.SortOrder).GroupBy(x => x.LineType ?? "Other");
                <table class="print-doc-table">
                    <thead><tr><th>Description</th><th class="text-center">Qty</th><th class="text-end">Unit Price</th><th class="text-end">Amount</th></tr></thead>
                    <tbody>
                        @foreach (var group in grouped)
                        {
                            <tr class="print-section-divider"><td colspan="4">@group.Key</td></tr>
                            @foreach (var l in group)
                            {
                                <tr><td>@l.Description</td><td class="text-center">@l.Quantity</td><td class="text-end">@l.UnitPrice.ToString("C")</td><td class="text-end">@l.LineTotal.ToString("C")</td></tr>
                            }
                        }
                    </tbody>
                </table>
            }
            else
            {
                <table class="print-doc-table">
                    <thead><tr><th>Description</th><th class="text-center">Qty</th><th class="text-end">Unit Price</th><th class="text-end">Amount</th></tr></thead>
                    <tbody>
                        @foreach (var l in detail.Lines.OrderBy(x => x.SortOrder))
                        {
                            <tr><td>@l.Description</td><td class="text-center">@l.Quantity</td><td class="text-end">@l.UnitPrice.ToString("C")</td><td class="text-end">@l.LineTotal.ToString("C")</td></tr>
                        }
                    </tbody>
                </table>
            }
        }

        <div class="print-doc-totals">
            <div class="print-total-row print-total-subtotal"><span class="print-total-label">Subtotal</span><span class="print-total-value">@detail.Subtotal.ToString("C")</span></div>
            @if (detail.MarkupPercent > 0) { <div class="print-total-row"><span class="print-total-label">Markup (@detail.MarkupPercent%)</span><span class="print-total-value">@((detail.Subtotal * detail.MarkupPercent / 100).ToString("C"))</span></div> }
            @if (detail.TaxPercent > 0) { <div class="print-total-row"><span class="print-total-label">Tax (@detail.TaxPercent%)</span><span class="print-total-value">@((detail.Subtotal * detail.TaxPercent / 100).ToString("C"))</span></div> }
            @if (detail.ContingencyPercent > 0) { <div class="print-total-row"><span class="print-total-label">Contingency (@detail.ContingencyPercent%)</span><span class="print-total-value">@((detail.Subtotal * detail.ContingencyPercent / 100).ToString("C"))</span></div> }
            @if (detail.DiscountAmount > 0) { <div class="print-total-row"><span class="print-total-label">Discount@(detail.DiscountType == "Percent" ? $" ({detail.DiscountValue}%)" : "")</span><span class="print-total-value">-@detail.DiscountAmount.ToString("C")</span></div> }
            <div class="print-total-row print-grand-total"><span class="print-total-label">Total</span><span class="print-total-value">@detail.Total.ToString("C")</span></div>
            @if (detail.DepositRequired.HasValue && detail.DepositRequired > 0)
            {
                <div class="print-deposit-callout">
                    <span class="print-deposit-label">Deposit Required:</span> @detail.DepositRequired.Value.ToString("C")
                    <span style="margin-left:12pt;">Received: @(detail.DepositReceived == true ? "Yes" : "No")</span>
                </div>
            }
        </div>

        <div class="print-doc-terms">
            @if (!string.IsNullOrWhiteSpace(detail.Notes))
            {
                <div class="print-doc-terms-block"><div class="print-terms-heading">Notes</div><p class="print-terms-text">@detail.Notes</p></div>
            }
        </div>

        <div class="print-doc-footer">
            @if (_companyProfile is not null)
            {
                @if (!string.IsNullOrWhiteSpace(_companyProfile.Phone)) { <span class="print-footer-item"><i class="bi bi-telephone print-footer-icon"></i> @_companyProfile.Phone</span> }
