@page "/financials"
@rendermode InteractiveServer
@inject IFinancialService FinSvc
@inject NavigationManager Nav

<PageTitle>Financial Overview - OneManVanFSM</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0"><i class="bi bi-cash-stack me-2"></i>Financial Overview</h4>
    <div class="d-flex gap-1">
        <button class="btn btn-primary btn-sm" @onclick='() => Nav.NavigateTo("/financials/invoices")'><i class="bi bi-receipt me-1"></i>New Invoice</button>
        <button class="btn btn-outline-primary btn-sm" @onclick='() => Nav.NavigateTo("/financials/expenses")'><i class="bi bi-wallet2 me-1"></i>New Expense</button>
    </div>
</div>

@if (dashboard is null)
{
    <div class="text-center py-5"><div class="spinner-border spinner-border-sm"></div> Loading...</div>
}
else
{
    @* ?? KPI Summary Cards ?? *@
    <div class="row g-3 mb-4">
        <div class="col-sm-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center py-3">
                    <div class="fs-4 fw-bold text-success">@dashboard.TotalRevenue.ToString("C")</div>
                    <small class="text-muted">Total Revenue</small>
                    <div class="text-muted small mt-1">@dashboard.TotalInvoiceCount invoices</div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center py-3">
                    <div class="fs-4 fw-bold text-warning">@dashboard.TotalOutstanding.ToString("C")</div>
                    <small class="text-muted">Outstanding</small>
                    <div class="text-muted small mt-1">@dashboard.OverdueInvoiceCount overdue &middot; @dashboard.DraftInvoiceCount drafts</div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center py-3">
                    <div class="fs-4 fw-bold text-danger">@dashboard.TotalExpenses.ToString("C")</div>
                    <small class="text-muted">Expenses</small>
                    <div class="text-muted small mt-1">@dashboard.TotalExpenseCount total &middot; @dashboard.PendingExpenseCount pending</div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center py-3">
                    <div class="fs-4 fw-bold @(dashboard.NetProfit >= 0 ? "text-success" : "text-danger")">@dashboard.NetProfit.ToString("C")</div>
                    <small class="text-muted">Net Profit</small>
                    <div class="text-muted small mt-1">Revenue &minus; Expenses</div>
                </div>
            </div>
        </div>
    </div>

    @* ?? Quick Navigation Cards ?? *@
    <div class="row g-3 mb-4">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm h-100" style="cursor:pointer" @onclick='() => Nav.NavigateTo("/financials/invoices")'>
                <div class="card-body d-flex align-items-center">
                    <div class="me-3">
                        <div class="rounded-circle bg-primary bg-opacity-10 d-flex align-items-center justify-content-center" style="width:48px;height:48px;">
                            <i class="bi bi-receipt text-primary fs-5"></i>
                        </div>
                    </div>
                    <div>
                        <h6 class="mb-0">Invoices</h6>
                        <small class="text-muted">@dashboard.TotalInvoiceCount total &middot; @dashboard.OverdueInvoiceCount overdue &middot; @dashboard.DraftInvoiceCount drafts</small>
                    </div>
                    <i class="bi bi-chevron-right ms-auto text-muted"></i>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-0 shadow-sm h-100" style="cursor:pointer" @onclick='() => Nav.NavigateTo("/financials/expenses")'>
                <div class="card-body d-flex align-items-center">
                    <div class="me-3">
                        <div class="rounded-circle bg-danger bg-opacity-10 d-flex align-items-center justify-content-center" style="width:48px;height:48px;">
                            <i class="bi bi-wallet2 text-danger fs-5"></i>
                        </div>
                    </div>
                    <div>
                        <h6 class="mb-0">Expenses</h6>
                        <small class="text-muted">@dashboard.TotalExpenseCount total &middot; @dashboard.PendingExpenseCount pending approval</small>
                    </div>
                    <i class="bi bi-chevron-right ms-auto text-muted"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3">
        @* ?? Payments Section ?? *@
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                    <h6 class="mb-0"><i class="bi bi-credit-card me-1"></i>Payments</h6>
                    <span class="badge bg-success">@dashboard.TotalPaymentsReceived.ToString("C") received</span>
                </div>
                <div class="card-body py-2">
                    <div class="row g-2 align-items-end mb-2">
                        <div class="col-md-7">
                            <input type="text" class="form-control form-control-sm" placeholder="Search payments..." @bind="paymentFilter.Search" @bind:event="oninput" @bind:after="LoadPayments" />
                        </div>
                        <div class="col-md-5">
                            <select class="form-select form-select-sm" @bind="paymentFilterStatus" @bind:after="LoadPayments">
                                <option value="">All Statuses</option>
                                @foreach (var s in Enum.GetValues<PaymentStatus>()) { <option value="@s">@s</option> }
                            </select>
                        </div>
                    </div>
                </div>
                @if (payments is null)
                {
                    <div class="card-body text-center py-3"><div class="spinner-border spinner-border-sm"></div></div>
                }
                else if (!payments.Any())
                {
                    <div class="card-body text-center py-4 text-muted">
                        <i class="bi bi-credit-card" style="font-size:2rem;"></i>
                        <p class="mt-2 mb-0">No payments recorded yet.</p>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0 align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th role="button" @onclick='() => TogglePaymentSort("amount")'>Amount@(PaymentSortIcon("amount"))</th>
                                    <th>Method</th>
                                    <th>Status</th>
                                    <th>Invoice</th>
                                    <th>Reference</th>
                                    <th role="button" @onclick='() => TogglePaymentSort("createdat")'>Date@(PaymentSortIcon("createdat"))</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var p in payments)
                                {
                                    <tr>
                                        <td><strong>@p.Amount.ToString("C")</strong></td>
                                        <td>@p.Method</td>
                                        <td><span class="badge @GetPayBadge(p.Status)">@p.Status</span></td>
                                        <td>@if (p.InvoiceId.HasValue) { <a href="javascript:void(0)" @onclick="() => ViewInvoice(p.InvoiceId.Value)">@(p.InvoiceNumber ?? "View")</a> } else { <span>&mdash;</span> }</td>
                                        <td>@(p.Reference ?? "&mdash;")</td>
                                        <td>@p.PaymentDate.ToString("MMM dd")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>

        @* ?? Recent Activity ?? *@
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                    <h6 class="mb-0"><i class="bi bi-receipt me-1"></i>Recent Invoices</h6>
                    <a href="/financials/invoices" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
                @if (dashboard.RecentInvoices.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var i in dashboard.RecentInvoices)
                        {
                            <a href="javascript:void(0)" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center py-2" @onclick="() => ViewInvoice(i.Id)">
                                <div>
                                    <strong class="me-2">@i.InvoiceNumber</strong>
                                    <span class="badge @GetInvBadge(i.Status) me-1">@i.Status</span>
                                    @if (i.CustomerName is not null) { <small class="text-muted">@i.CustomerName</small> }
                                </div>
                                <div class="text-end">
                                    <span class="fw-bold">@i.Total.ToString("C")</span>
                                    @if (i.BalanceDue > 0) { <small class="text-danger ms-1">(@i.BalanceDue.ToString("C") due)</small> }
                                </div>
                            </a>
                        }
                    </div>
                }
                else
                {
                    <div class="card-body text-center text-muted py-3"><small>No invoices yet</small></div>
                }
            </div>

            <div class="card border-0 shadow-sm mb-3">
                <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                    <h6 class="mb-0"><i class="bi bi-wallet2 me-1"></i>Recent Expenses</h6>
                    <a href="/financials/expenses" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
                @if (dashboard.RecentExpenses.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var e in dashboard.RecentExpenses)
                        {
                            <a href="javascript:void(0)" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center py-2" @onclick="() => ViewExpense(e.Id)">
                                <div>
                                    <span class="badge @GetExpBadge(e.Status) me-1">@e.Status</span>
                                    <strong class="me-2">@(e.Category ?? "Expense")</strong>
                                    @if (e.Description is not null) { <small class="text-muted">@(e.Description.Length > 40 ? e.Description[..40] + "..." : e.Description)</small> }
                                </div>
                                <span class="fw-bold">@(e.Total > 0 ? e.Total.ToString("C") : e.Amount.ToString("C"))</span>
                            </a>
                        }
                    </div>
                }
                else
                {
                    <div class="card-body text-center text-muted py-3"><small>No expenses yet</small></div>
                }
            </div>
        </div>
    </div>
}

@code {
    private FinancialDashboard? dashboard;
    private List<PaymentListItem>? payments;
    private PaymentFilter paymentFilter = new();
    private string paymentFilterStatus = "";

    protected override async Task OnInitializedAsync()
    {
        dashboard = await FinSvc.GetDashboardAsync();
        await LoadPayments();
    }

    private async Task LoadPayments()
    {
        paymentFilter.Status = string.IsNullOrWhiteSpace(paymentFilterStatus) ? null : Enum.Parse<PaymentStatus>(paymentFilterStatus);
        payments = await FinSvc.GetPaymentsAsync(paymentFilter);
    }

    private void ViewInvoice(int id) => Nav.NavigateTo($"/financials/invoices/{id}");
    private void ViewExpense(int id) => Nav.NavigateTo($"/financials/expenses/{id}");

    private string GetInvBadge(InvoiceStatus s) => s switch
    {
        InvoiceStatus.Draft => "bg-secondary", InvoiceStatus.Sent => "bg-info",
        InvoiceStatus.Invoiced => "bg-primary", InvoiceStatus.Paid => "bg-success",
        InvoiceStatus.Overdue => "bg-danger", InvoiceStatus.Void => "bg-dark",
        _ => "bg-secondary"
    };

    private string GetExpBadge(ExpenseStatus s) => s switch
    {
        ExpenseStatus.Pending => "bg-warning text-dark", ExpenseStatus.Approved => "bg-success",
        ExpenseStatus.Reimbursed => "bg-info", ExpenseStatus.Denied => "bg-danger",
        _ => "bg-secondary"
    };

    private static string GetPayBadge(PaymentStatus s) => s switch
    {
        PaymentStatus.Completed => "bg-success", PaymentStatus.Pending => "bg-warning text-dark",
        PaymentStatus.Refunded => "bg-info", PaymentStatus.Failed => "bg-danger",
        _ => "bg-secondary"
    };

    private async Task TogglePaymentSort(string column)
    {
        if (paymentFilter.SortBy?.Equals(column, StringComparison.OrdinalIgnoreCase) == true) paymentFilter.SortDescending = !paymentFilter.SortDescending;
        else { paymentFilter.SortBy = column; paymentFilter.SortDescending = false; }
        await LoadPayments();
    }

    private MarkupString PaymentSortIcon(string column) =>
        paymentFilter.SortBy?.Equals(column, StringComparison.OrdinalIgnoreCase) == true
            ? new MarkupString(paymentFilter.SortDescending ? " <i class='bi bi-caret-down-fill'></i>" : " <i class='bi bi-caret-up-fill'></i>")
            : default;
}
