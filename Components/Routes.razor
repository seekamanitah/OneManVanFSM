@inject IPlatformHelper Platform

<Router AppAssembly="typeof(MauiProgram).Assembly" NotFoundPage="typeof(Pages.NotFound)">
    <Found Context="routeData">
        <RouteView RouteData="routeData" DefaultLayout="@LayoutType" />
        <FocusOnNavigate RouteData="routeData" Selector="h1" />
    </Found>
</Router>

@code {
    private Type LayoutType => Platform.IsDesktop
        ? typeof(Layout.DesktopLayout)
        : typeof(Layout.MobileLayout);
}
