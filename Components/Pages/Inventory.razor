@page "/inventory"
@inject IMobileInventoryService InventoryService

@if (_loading)
{
    <div class="text-center py-4">
        <div class="spinner-border text-primary" role="status"></div>
    </div>
}
else if (_mode == "detail" && _detailItem != null)
{
    <!-- Detail View -->
    <div class="d-flex align-items-center mb-2">
        <button class="btn btn-sm btn-outline-secondary me-2" @onclick="BackToList"><i class="bi bi-arrow-left"></i></button>
        <span style="font-size:0.95rem; font-weight:700;">@_detailItem.Name</span>
        @if (!string.IsNullOrWhiteSpace(_detailItem.SKU))
        {
            <span class="text-muted ms-2" style="font-size:0.75rem;">(@_detailItem.SKU)</span>
        }
    </div>

    <div class="mobile-card mb-2">
        <div class="d-flex justify-content-between align-items-start mb-2">
            <div>
                <span class="badge bg-@LocationColor(_detailItem.Location)" style="font-size:0.65rem;">@_detailItem.Location</span>
                @if (!string.IsNullOrWhiteSpace(_detailItem.Category))
                {
                    <span class="badge bg-light text-dark ms-1" style="font-size:0.65rem;">@_detailItem.Category</span>
                }
            </div>
            <div style="font-size:1.1rem; font-weight:700; color:var(--primary);">@_detailItem.Price.ToString("C")</div>
        </div>

        <div class="d-flex flex-wrap gap-3 mb-2" style="font-size:0.78rem;">
            <div><span class="text-muted">Qty:</span> <strong class="@(_detailItem.Quantity <= _detailItem.MinThreshold && _detailItem.MinThreshold > 0 ? "text-danger" : "")">@_detailItem.Quantity</strong></div>
            <div><span class="text-muted">Cost:</span> @_detailItem.Cost.ToString("C")</div>
            @if (_detailItem.MinThreshold > 0) { <div><span class="text-muted">Min:</span> @_detailItem.MinThreshold</div> }
            @if (_detailItem.MaxCapacity > 0) { <div><span class="text-muted">Max:</span> @_detailItem.MaxCapacity</div> }
            @if (_detailItem.MarkupPercent > 0) { <div><span class="text-muted">Markup:</span> @_detailItem.MarkupPercent%</div> }
        </div>

        @if (!string.IsNullOrWhiteSpace(_detailItem.ShelfBin))
        {
            <div style="font-size:0.78rem;"><i class="bi bi-geo-alt me-1 text-muted"></i>@_detailItem.ShelfBin</div>
        }
        @if (!string.IsNullOrWhiteSpace(_detailItem.PartNumber))
        {
            <div style="font-size:0.78rem;"><i class="bi bi-hash me-1 text-muted"></i>Part: @_detailItem.PartNumber</div>
        }
        @if (!string.IsNullOrWhiteSpace(_detailItem.Barcode))
        {
            <div style="font-size:0.78rem;"><i class="bi bi-upc me-1 text-muted"></i>@_detailItem.Barcode</div>
        }
        @if (!string.IsNullOrWhiteSpace(_detailItem.Unit))
        {
            <div style="font-size:0.78rem;"><i class="bi bi-rulers me-1 text-muted"></i>Unit: @_detailItem.Unit</div>
        }
        @if (!string.IsNullOrWhiteSpace(_detailItem.LotNumber))
        {
            <div style="font-size:0.78rem;"><i class="bi bi-tag me-1 text-muted"></i>Lot: @_detailItem.LotNumber</div>
        }
    </div>

    @if (!string.IsNullOrWhiteSpace(_detailItem.PreferredSupplier) || _detailItem.ExpiryDate.HasValue || _detailItem.LastRestockedDate.HasValue)
    {
        <div class="mobile-card mb-2">
            <div style="font-size:0.8rem; font-weight:600; margin-bottom:0.3rem;">Additional Info</div>
            @if (!string.IsNullOrWhiteSpace(_detailItem.PreferredSupplier))
            {
                <div style="font-size:0.78rem;"><i class="bi bi-truck me-1 text-muted"></i>Supplier: @_detailItem.PreferredSupplier</div>
            }
            @if (_detailItem.ExpiryDate.HasValue)
            {
                <div style="font-size:0.78rem;" class="@(_detailItem.ExpiryDate.Value < DateTime.Now ? "text-danger" : "")">
                    <i class="bi bi-calendar-x me-1 text-muted"></i>Expires: @_detailItem.ExpiryDate.Value.ToString("MMM dd, yyyy")
                </div>
            }
            @if (_detailItem.LastRestockedDate.HasValue)
            {
                <div style="font-size:0.78rem;"><i class="bi bi-calendar-check me-1 text-muted"></i>Last Restocked: @_detailItem.LastRestockedDate.Value.ToString("MMM dd, yyyy")</div>
            }
        </div>
    }

    @if (!string.IsNullOrWhiteSpace(_detailItem.Description) || !string.IsNullOrWhiteSpace(_detailItem.Notes))
    {
        <div class="mobile-card mb-2">
            @if (!string.IsNullOrWhiteSpace(_detailItem.Description))
            {
                <div style="font-size:0.78rem;"><strong>Description:</strong> @_detailItem.Description</div>
            }
            @if (!string.IsNullOrWhiteSpace(_detailItem.Notes))
            {
                <div style="font-size:0.78rem; margin-top:0.25rem;"><strong>Notes:</strong> @_detailItem.Notes</div>
            }
        </div>
    }

    @if (!string.IsNullOrWhiteSpace(_detailItem.ProductName))
    {
        <div class="mobile-card mb-2">
            <div style="font-size:0.78rem;"><i class="bi bi-box me-1 text-muted"></i>Linked Product: @_detailItem.ProductName</div>
        </div>
    }

    <!-- Actions -->
    <div class="mobile-card mb-2">
        <div style="font-size:0.8rem; font-weight:600; margin-bottom:0.3rem;">Actions</div>
        <div class="d-flex gap-2">
            <button class="btn btn-sm btn-outline-primary flex-fill" @onclick="StartEdit"><i class="bi bi-pencil me-1"></i>Edit</button>
        </div>
    </div>

    <div class="text-muted text-center" style="font-size:0.65rem;">Updated @_detailItem.UpdatedAt.ToString("MMM dd, yyyy h:mm tt")</div>
}
else if (_mode == "edit" && _detailItem != null)
{
    <!-- Edit Form -->
    <div class="d-flex align-items-center mb-3">
        <button class="btn btn-sm btn-outline-secondary me-2" @onclick="CancelEdit"><i class="bi bi-arrow-left"></i></button>
        <span style="font-size:0.95rem; font-weight:700;"><i class="bi bi-pencil-fill text-primary me-1"></i>Edit Item</span>
    </div>

    <div class="mobile-card mb-2" style="padding:0.85rem;">
        <div class="fs-section" style="margin-top:0;">Identity</div>
        <div class="fs-field">
            <label>Name *</label>
            <input type="text" class="form-control" @bind="_editItem.Name" />
        </div>
        <div class="fs-row">
            <div class="fs-field" style="margin-bottom:0;">
                <label>SKU</label>
                <input type="text" class="form-control" @bind="_editItem.SKU" />
            </div>
            <div class="fs-field" style="margin-bottom:0;">
                <label>Part Number</label>
                <input type="text" class="form-control" @bind="_editItem.PartNumber" />
            </div>
        </div>
        <div class="fs-row">
            <div class="fs-field" style="margin-bottom:0;">
                <label>Category</label>
                <input type="text" class="form-control" @bind="_editItem.Category" placeholder="e.g. Fittings" />
            </div>
            <div class="fs-field" style="margin-bottom:0;">
                <label>Unit</label>
                <input type="text" class="form-control" @bind="_editItem.Unit" placeholder="e.g. Each, Box" />
            </div>
        </div>

        <div class="fs-section">Location</div>
        <div class="fs-row">
            <div class="fs-field" style="margin-bottom:0;">
                <label>Location</label>
                <select class="form-select" @bind="_editItem.Location">
                    @foreach (var loc in Enum.GetValues<InventoryLocation>()) { <option value="@loc">@loc</option> }
                </select>
            </div>
            <div class="fs-field" style="margin-bottom:0;">
                <label>Shelf / Bin</label>
                <input type="text" class="form-control" @bind="_editItem.ShelfBin" />
            </div>
        </div>

        <div class="fs-section">Stock &amp; Pricing</div>
        <div class="fs-row-3">
            <div class="fs-field" style="margin-bottom:0;">
                <label>Qty</label>
                <input type="number" step="1" min="0" class="form-control" @bind="_editItem.Quantity" />
            </div>
            <div class="fs-field" style="margin-bottom:0;">
                <label>Cost</label>
                <div class="input-group">
                    <span class="input-group-text" style="border-radius:10px 0 0 10px; padding:4px 8px;">$</span>
                    <input type="number" step="0.01" min="0" class="form-control" style="border-radius:0 10px 10px 0;" @bind="_editItem.Cost" />
                </div>
            </div>
            <div class="fs-field" style="margin-bottom:0;">
                <label>Price</label>
                <div class="input-group">
                    <span class="input-group-text" style="border-radius:10px 0 0 10px; padding:4px 8px;">$</span>
                    <input type="number" step="0.01" min="0" class="form-control" style="border-radius:0 10px 10px 0;" @bind="_editItem.Price" />
                </div>
            </div>
        </div>
        <div class="fs-field">
            <label>Min Threshold (reorder alert)</label>
            <input type="number" step="1" class="form-control" @bind="_editItem.MinThreshold" />
        </div>

        <div class="fs-section">Notes</div>
        <div class="fs-field">
            <label>Description</label>
            <textarea class="form-control" rows="2" @bind="_editItem.Description"></textarea>
        </div>
        <div class="fs-field">
            <label>Notes</label>
            <textarea class="form-control" rows="2" @bind="_editItem.Notes"></textarea>
        </div>
    </div>

    @if (_saveError != null)
    {
        <div class="alert alert-danger py-1 mb-2" style="font-size:0.78rem; border-radius:10px;">@_saveError</div>
    }

    <div class="d-flex gap-2">
        <button class="btn btn-outline-secondary flex-fill" style="border-radius:12px;" @onclick="CancelEdit">Cancel</button>
        <button class="btn btn-primary flex-fill" style="border-radius:12px;" @onclick="SaveEdit" disabled="@string.IsNullOrWhiteSpace(_editItem.Name)">
            <i class="bi bi-check-circle me-1"></i>Update Item
        </button>
    </div>
}
else
{
    @* Bottom Sheet: Add Inventory Item *@
    @if (_showCreate)
    {
        <div class="form-sheet-backdrop" @onclick="() => _showCreate = false"></div>
        <div class="form-sheet" @onclick:stopPropagation="true">
            <div class="form-sheet-handle"></div>
            <div class="form-sheet-header">
                <span class="form-sheet-title"><i class="bi bi-box-seam-fill"></i>New Inventory Item</span>
                <button class="form-sheet-close" @onclick="() => _showCreate = false"><i class="bi bi-x"></i></button>
            </div>

            <div class="fs-section">Item Info</div>
            <div class="fs-field">
                <label>Name *</label>
                <input type="text" class="form-control" placeholder="Item name" @bind="_newItem.Name" />
            </div>
            <div class="fs-field">
                <label>SKU</label>
                <input type="text" class="form-control" placeholder="Optional" @bind="_newItem.SKU" />
            </div>
            <div class="fs-row">
                <div class="fs-field" style="margin-bottom:0;">
                    <label>Location</label>
                    <select class="form-select" @bind="_newItem.Location">
                        @foreach (var loc in Enum.GetValues<InventoryLocation>()) { <option value="@loc">@loc</option> }
                    </select>
                </div>
                <div class="fs-field" style="margin-bottom:0;">
                    <label>Shelf / Bin</label>
                    <input type="text" class="form-control" placeholder="Optional" @bind="_newItem.ShelfBin" />
                </div>
            </div>

            <div class="fs-section">Stock &amp; Pricing</div>
            <div class="fs-row-3">
                <div class="fs-field" style="margin-bottom:0;">
                    <label>Qty</label>
                    <input type="number" step="1" class="form-control" placeholder="0" @bind="_newItem.Quantity" />
                </div>
                <div class="fs-field" style="margin-bottom:0;">
                    <label>Cost</label>
                    <div class="input-group">
                        <span class="input-group-text" style="border-radius:10px 0 0 10px; padding:4px 8px;">$</span>
                        <input type="number" step="0.01" class="form-control" style="border-radius:0 10px 10px 0;" placeholder="0" @bind="_newItem.Cost" />
                    </div>
                </div>
                <div class="fs-field" style="margin-bottom:0;">
                    <label>Price</label>
                    <div class="input-group">
                        <span class="input-group-text" style="border-radius:10px 0 0 10px; padding:4px 8px;">$</span>
                        <input type="number" step="0.01" class="form-control" style="border-radius:0 10px 10px 0;" placeholder="0" @bind="_newItem.Price" />
                    </div>
                </div>
            </div>

            <div class="alert alert-info py-1 px-2 mt-2 mb-0" style="font-size:0.75rem; border-radius:10px;">
                <i class="bi bi-info-circle me-1"></i>Thresholds, supplier, expiry &amp; barcode can be set on the web app.
            </div>

            @if (_saveError != null)
            {
                <div class="alert alert-danger py-1 mt-2 mb-0" style="font-size:0.78rem; border-radius:10px;">@_saveError</div>
            }

            <div class="fs-actions">
                <button class="btn btn-outline-secondary flex-shrink-0" @onclick="() => _showCreate = false">Cancel</button>
                <button class="btn btn-primary flex-fill" @onclick="SaveItem" disabled="@string.IsNullOrWhiteSpace(_newItem.Name)">
                    <i class="bi bi-check-lg me-1"></i>Save Item
                </button>
            </div>
        </div>
    }

    <!-- Stats Row -->
    <div class="gap-grid mb-2">
        <div class="stat-card">
            <div class="stat-icon text-primary"><i class="bi bi-box-seam"></i></div>
            <div class="stat-value">@_stats.TotalItems</div>
            <div class="stat-label">Total Items</div>
        </div>
        <div class="stat-card">
            <div class="stat-icon text-danger"><i class="bi bi-exclamation-triangle"></i></div>
            <div class="stat-value">@_stats.LowStockCount</div>
            <div class="stat-label">Low Stock</div>
        </div>
        <div class="stat-card">
            <div class="stat-icon text-info"><i class="bi bi-truck"></i></div>
            <div class="stat-value">@_stats.TruckItems</div>
            <div class="stat-label">On Truck</div>
        </div>
        <div class="stat-card">
            <div class="stat-icon text-success"><i class="bi bi-currency-dollar"></i></div>
            <div class="stat-value">@_stats.TotalValue.ToString("C0")</div>
            <div class="stat-label">Total Value</div>
        </div>
    </div>

    <!-- Filter Bar -->
    <div class="d-flex gap-2 mb-3">
        <select class="form-select" style="max-width:130px;" @bind="_locationFilter" @bind:after="LoadInventory">
            <option value="">All Locations</option>
            @foreach (var loc in Enum.GetValues<InventoryLocation>())
            {
                <option value="@loc">@loc</option>
            }
        </select>
        <input type="search" class="form-control" placeholder="Search inventoryï¿½" @bind="_search"
               @bind:event="oninput" @bind:after="LoadInventory" />
        <button class="btn btn-outline-secondary" style="min-width:38px; padding:4px 8px;" @onclick="LoadInventory" title="Refresh">
            <i class="bi bi-arrow-clockwise"></i>
        </button>
    </div>

    <!-- Low Stock Toggle -->
    <div class="d-flex align-items-center gap-2 mb-3">
        <div class="form-check form-switch mb-0">
            <input class="form-check-input" type="checkbox" id="lowStockToggle" @bind="_lowStockOnly" @bind:after="LoadInventory" />
            <label class="form-check-label" for="lowStockToggle" style="font-size:0.8rem; font-weight:600;">
                <i class="bi bi-exclamation-triangle text-danger me-1"></i>Low Stock Only
            </label>
        </div>
        <span class="text-muted ms-auto" style="font-size:0.75rem;">@_items.Count item@(_items.Count != 1 ? "s" : "")</span>
    </div>

    @if (_items.Any())
    {
        @foreach (var group in GroupedItems)
        {
            @if (string.IsNullOrEmpty(_locationFilter))
            {
                <div class="section-header">
                    <span><i class="bi @LocationIcon(group.Key) me-1"></i>@group.Key (@group.Count())</span>
                </div>
            }
            @foreach (var item in group)
            {
            <div class="mobile-card" @onclick="() => ViewDetail(item.Id)" style="cursor:pointer;">
                <div class="mobile-card-header">
                    <div style="min-width:0;">
                        <span class="card-title">@item.Name</span>
                        @if (item.SKU != null)
                        {
                            <span class="text-muted ms-1" style="font-size:0.7rem;">(@item.SKU)</span>
                        }
                    </div>
                    <span class="badge bg-@LocationColor(item.Location)" style="font-size:0.65rem; white-space:nowrap;">
                        @item.Location
                    </span>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-1">
                    <div>
                        <div class="d-flex align-items-center gap-2">
                            <div class="d-flex align-items-center gap-1">
                                <button class="btn btn-sm btn-outline-secondary" style="width:28px; height:28px; padding:0; min-height:auto; border-radius:6px; font-size:0.85rem; line-height:1;"
                                        @onclick="() => AdjustQuantity(item.Id, -1)" @onclick:stopPropagation="true">
                                    <i class="bi bi-dash"></i>
                                </button>
                                <span class="fw-bold @(item.IsLowStock ? "text-danger" : "")" style="font-size:0.95rem; min-width:24px; text-align:center;">
                                    @item.Quantity
                                </span>
                                <button class="btn btn-sm btn-outline-primary" style="width:28px; height:28px; padding:0; min-height:auto; border-radius:6px; font-size:0.85rem; line-height:1;"
                                        @onclick="() => AdjustQuantity(item.Id, 1)" @onclick:stopPropagation="true">
                                    <i class="bi bi-plus"></i>
                                </button>
                            </div>
                            @if (item.MinThreshold > 0)
                            {
                                <div style="width:60px; height:6px; background:#e9ecef; border-radius:3px; overflow:hidden;">
                                    <div style="width:@StockBarPct(item)%; height:100%; background:@StockBarColor(item); border-radius:3px;"></div>
                                </div>
                                <span class="text-muted" style="font-size:0.7rem;">min: @item.MinThreshold</span>
                            }
                        </div>
                    </div>
                    <div class="text-end">
                        <div style="font-size:0.85rem; font-weight:600;">@item.Price.ToString("C")</div>
                        <div class="text-muted" style="font-size:0.7rem;">cost: @item.Cost.ToString("C")</div>
                    </div>
                </div>

                @if (item.ShelfBin != null)
                {
                    <p class="card-subtitle mb-0 mt-1">
                        <i class="bi bi-geo-alt me-1"></i>@item.ShelfBin
                    </p>
                }

                @if (item.IsExpired)
                {
                    <div class="mt-1">
                        <span class="badge bg-danger" style="font-size:0.65rem;">
                            <i class="bi bi-exclamation-triangle me-1"></i>Expired @item.ExpiryDate!.Value.ToString("MMM dd")
                        </span>
                    </div>
                }
                else if (item.IsExpiringSoon)
                {
                    <div class="mt-1">
                        <span class="badge bg-warning text-dark" style="font-size:0.65rem;">
                            <i class="bi bi-clock me-1"></i>Expires @item.ExpiryDate!.Value.ToString("MMM dd")
                        </span>
                    </div>
                }

                @if (item.IsLowStock)
                {
                    <div class="mt-1">
                        <span class="badge bg-danger" style="font-size:0.65rem;">
                            <i class="bi bi-arrow-down me-1"></i>Low Stock
                        </span>
                    </div>
                }
            </div>
            }
        }
    }
    else
    {
        <div class="empty-state">
            <i class="bi bi-box-seam d-block"></i>
            <p>No inventory items found</p>
        </div>
    }

    <button class="fab" title="New Item" @onclick="ShowCreateItem">
        <i class="bi bi-plus-lg"></i>
    </button>
}

@code {
    private string _mode = "list";
    private List<MobileInventoryItem> _items = [];
    private MobileInventoryStats _stats = new();
    private bool _loading = true;
    private string _search = string.Empty;
    private string _locationFilter = string.Empty;
    private bool _lowStockOnly;
    private bool _showCreate;
    private MobileInventoryQuickCreate _newItem = new();
    private MobileInventoryDetail? _detailItem;
    private MobileInventoryUpdate _editItem = new();
    private string? _saveError;

    protected override async Task OnInitializedAsync()
    {
        _stats = await InventoryService.GetStatsAsync();
        await LoadInventory();
    }

    private async Task LoadInventory()
    {
        _loading = true;
        StateHasChanged();

        InventoryLocation? loc = Enum.TryParse<InventoryLocation>(_locationFilter, out var parsed) ? parsed : null;

        var filter = new MobileInventoryFilter
        {
            Search = string.IsNullOrWhiteSpace(_search) ? null : _search,
            Location = loc,
            LowStockOnly = _lowStockOnly ? true : null,
        };

        _items = await InventoryService.GetInventoryAsync(filter);
        _loading = false;
    }

    private async Task ViewDetail(int id)
    {
        _detailItem = await InventoryService.GetItemDetailAsync(id);
        if (_detailItem != null) _mode = "detail";
    }

    private async Task BackToList()
    {
        _mode = "list";
        _detailItem = null;
        _stats = await InventoryService.GetStatsAsync();
        await LoadInventory();
    }

    private void CancelEdit() => _mode = "detail";

    private void StartEdit()
    {
        if (_detailItem is null) return;
        _editItem = new MobileInventoryUpdate
        {
            Name = _detailItem.Name,
            SKU = _detailItem.SKU,
            PartNumber = _detailItem.PartNumber,
            Category = _detailItem.Category,
            Unit = _detailItem.Unit,
            Description = _detailItem.Description,
            ShelfBin = _detailItem.ShelfBin,
            Location = _detailItem.Location,
            Quantity = _detailItem.Quantity,
            MinThreshold = _detailItem.MinThreshold,
            Cost = _detailItem.Cost,
            Price = _detailItem.Price,
            Notes = _detailItem.Notes,
        };
        _saveError = null;
        _mode = "edit";
    }

    private async Task SaveEdit()
    {
        if (_detailItem is null) return;
        if (string.IsNullOrWhiteSpace(_editItem.Name)) { _saveError = "Name is required."; return; }

        try
        {
            _saveError = null;
            var ok = await InventoryService.UpdateItemAsync(_detailItem.Id, _editItem);
            if (!ok) { _saveError = "Failed to update item."; return; }
            await ViewDetail(_detailItem.Id);
        }
        catch (Exception ex) { _saveError = ex.Message; }
    }

    private static string LocationColor(InventoryLocation loc) => loc switch
    {
        InventoryLocation.Truck => "primary",
        InventoryLocation.Warehouse => "info",
        InventoryLocation.Site => "success",
        _ => "secondary"
    };

    private static string LocationIcon(InventoryLocation loc) => loc switch
    {
        InventoryLocation.Truck => "bi-truck",
        InventoryLocation.Warehouse => "bi-building",
        InventoryLocation.Site => "bi-geo-alt",
        _ => "bi-box-seam"
    };

    private IEnumerable<IGrouping<InventoryLocation, MobileInventoryItem>> GroupedItems =>
        _items.GroupBy(i => i.Location).OrderBy(g => g.Key);

    private static int StockBarPct(MobileInventoryItem item) =>
        item.MinThreshold > 0 ? Math.Min(100, (int)(item.Quantity / item.MinThreshold * 100)) : 100;

    private static string StockBarColor(MobileInventoryItem item)
    {
        var pct = StockBarPct(item);
        if (pct <= 50) return "#dc3545";
        if (pct <= 100) return "#ffc107";
        return "#198754";
    }

    private void ShowCreateItem() { _newItem = new(); _saveError = null; _showCreate = true; }

    private async Task SaveItem()
    {
        if (string.IsNullOrWhiteSpace(_newItem.Name)) { _saveError = "Name is required."; return; }
        try
        {
            _saveError = null;
            await InventoryService.QuickCreateAsync(_newItem);
            _showCreate = false;
            _stats = await InventoryService.GetStatsAsync();
            await LoadInventory();
        }
        catch (Exception ex) { _saveError = ex.Message; }
    }

    private async Task AdjustQuantity(int itemId, decimal delta)
    {
        await InventoryService.AdjustQuantityAsync(itemId, delta);
        _stats = await InventoryService.GetStatsAsync();
        await LoadInventory();
    }
