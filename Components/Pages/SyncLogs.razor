@page "/sync-logs"
@inject IServiceProvider SP
@inject NavigationManager Nav

<div class="d-flex justify-content-between align-items-center mb-2">
    <span class="text-muted" style="font-size:0.75rem;">@_logs.Count log entry@(_logs.Count != 1 ? "s" : "")</span>
    @if (_logs.Any())
    {
        <button class="btn btn-sm btn-outline-danger" style="font-size:0.7rem; padding:2px 8px;" @onclick="ClearLogs">
            <i class="bi bi-trash me-1"></i>Clear
        </button>
    }
</div>

@if (_logs.Any())
{
    @foreach (var entry in _logs)
    {
        <div class="mobile-card" style="padding:0.5rem 0.75rem; border-left:3px solid #dc3545;">
            <div class="d-flex align-items-start gap-2">
                <i class="bi bi-exclamation-triangle text-danger" style="font-size:0.9rem; margin-top:2px;"></i>
                <div style="flex:1; min-width:0;">
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="fw-bold" style="font-size:0.82rem;">@entry.EntityType</span>
                        <span class="text-muted" style="font-size:0.65rem;">@entry.Timestamp.ToLocalTime().ToString("MMM dd, h:mm tt")</span>
                    </div>
                    <p class="mb-0 text-muted" style="font-size:0.78rem;">@entry.ErrorMessage</p>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="empty-state" style="padding:1.5rem;">
        <i class="bi bi-check-circle d-block" style="font-size:2rem; color:#198754; opacity:0.6;"></i>
        <p class="mt-2">No sync errors recorded</p>
        <p class="text-muted" style="font-size:0.75rem;">Errors from sync operations will appear here</p>
    </div>
}

@code {
    private ISyncService? _syncService;
    private List<SyncErrorEntry> _logs = [];

    protected override void OnInitialized()
    {
        _syncService = SP.GetService<ISyncService>();
        LoadLogs();
    }

    private void LoadLogs()
    {
        _logs = _syncService?.ErrorLog?.OrderByDescending(e => e.Timestamp).ToList() ?? [];
    }

    private void ClearLogs()
    {
        _syncService?.ClearErrorLog();
        _logs = [];
    }
}
