@page "/estimates"
@page "/estimates/{Id:int}"
@inject IMobileEstimateService EstimateService
@inject IMobileCustomerService CustomerService
@inject IMobileSiteService SiteService
@inject IMobileAuthService AuthService
@inject IMobilePdfService PdfService
@inject NavigationManager Nav

@if (Id.HasValue && _detail != null)
{
    <!-- Estimate Detail View -->
    <div class="mb-3">
        <button class="btn btn-sm btn-outline-secondary" @onclick="BackToList">
            <i class="bi bi-arrow-left me-1"></i>Back to Estimates
        </button>
    </div>

    @if (_detail.NeedsReview)
    {
        <div class="alert alert-warning py-2 px-3 mb-2 d-flex align-items-center" style="font-size:0.8rem; border-radius:10px;">
            <i class="bi bi-exclamation-triangle me-2"></i>
            <span>Created on mobile — add line items, pricing, and deposit details on the web app.</span>
        </div>
    }

    <!-- Header Card -->
    <div class="mobile-card">
        <div class="mobile-card-header">
            <div>
                <span class="priority-dot priority-@_detail.Priority.ToString().ToLower()"></span>
                <span class="card-title">@(_detail.Title ?? _detail.EstimateNumber)</span>
            </div>
            <span class="badge-status badge bg-@EstimateStatusColor(_detail.Status)">@_detail.Status</span>
        </div>
        <p class="card-subtitle mb-1"><strong>Estimate #:</strong> @_detail.EstimateNumber</p>
        @if (_detail.TradeType != null)
        {
            <p class="card-subtitle mb-1"><strong>Trade:</strong> @_detail.TradeType</p>
        }
        @if (_detail.SystemType != null)
        {
            <p class="card-subtitle mb-1"><strong>System:</strong> @_detail.SystemType</p>
        }
        <p class="card-subtitle mb-1"><i class="bi bi-calendar3 me-1"></i>Created @_detail.CreatedAt.ToString("MMM dd, yyyy")</p>
        @if (_detail.ExpiryDate.HasValue)
        {
            var isExpired = _detail.ExpiryDate.Value < DateTime.Now;
            <p class="card-subtitle mb-0 @(isExpired ? "text-danger" : "")">
                <i class="bi bi-clock me-1"></i>@(isExpired ? "Expired" : "Expires") @_detail.ExpiryDate.Value.ToString("MMM dd, yyyy")
            </p>
        }
    </div>

    <!-- Customer & Site -->
    @if (_detail.CustomerName != null || _detail.SiteAddress != null)
    {
        <div class="section-header">Customer & Site</div>
        <div class="mobile-card">
            @if (_detail.CustomerName != null)
            {
                <p class="mb-1" style="font-size:0.9rem;"><i class="bi bi-person me-2"></i><strong>@_detail.CustomerName</strong></p>
            }
            @if (_detail.CustomerPhone != null)
            {
                <p class="mb-1" style="font-size:0.85rem;">
                    <i class="bi bi-telephone me-2"></i>
                    <a href="tel:@_detail.CustomerPhone" style="text-decoration:none;">@_detail.CustomerPhone</a>
                </p>
            }
            @if (_detail.SiteAddress != null)
            {
                <p class="mb-0" style="font-size:0.85rem;">
                    <i class="bi bi-geo-alt me-2"></i>
                    @if (_detail.SiteId.HasValue)
                    {
                        <a href="/sites/@_detail.SiteId" style="text-decoration:none;">@_detail.SiteAddress</a>
                    }
                    else
                    {
                        @_detail.SiteAddress
                    }
                </p>
            }
        </div>
    }

    <!-- Line Items -->
    <div class="section-header">Line Items (@_detail.Lines.Count)</div>
    @if (_detail.Lines.Any())
    {
        @foreach (var grp in _detail.Lines.GroupBy(l => l.Section ?? "General"))
        {
            <div class="mobile-card">
                <div class="fw-semibold mb-2" style="font-size:0.85rem; color:var(--primary);">@grp.Key</div>
                @foreach (var line in grp)
                {
                    <div class="d-flex justify-content-between align-items-center py-1 material-row">
                        <div style="flex:1; min-width:0;">
                            <p class="mb-0" style="font-size:0.85rem;">@line.Description</p>
                            @if (line.LineType != null)
                            {
                                <span class="badge bg-light text-dark" style="font-size:0.65rem;">@line.LineType</span>
                            }
                        </div>
                        <div class="text-end" style="white-space:nowrap;">
                            <span style="font-size:0.85rem; font-weight:600;">@line.LineTotal.ToString("C")</span>
                            <div class="text-muted" style="font-size:0.7rem;">@line.Quantity � @line.UnitPrice.ToString("C")</div>
                        </div>
                    </div>
                }
            </div>
        }
    }
    else
    {
        <div class="mobile-card text-center" style="color:#6c757d; font-size:0.85rem;">No line items</div>
    }

    <!-- Totals -->
    <div class="section-header">Totals</div>
    <div class="mobile-card">
        <div class="d-flex justify-content-between mb-1" style="font-size:0.85rem;">
            <span class="text-muted">Subtotal</span>
            <span>@_detail.Subtotal.ToString("C")</span>
        </div>
        @if (_detail.MarkupPercent > 0)
        {
            <div class="d-flex justify-content-between mb-1" style="font-size:0.85rem;">
                <span class="text-muted">Markup (@_detail.MarkupPercent%)</span>
                <span>@((_detail.Subtotal * _detail.MarkupPercent / 100).ToString("C"))</span>
            </div>
        }
        @if (_detail.TaxPercent > 0)
        {
            <div class="d-flex justify-content-between mb-1" style="font-size:0.85rem;">
                <span class="text-muted">Tax (@_detail.TaxPercent%)</span>
                <span>@((_detail.Subtotal * _detail.TaxPercent / 100).ToString("C"))</span>
            </div>
        }
        <hr class="my-1" />
        <div class="d-flex justify-content-between fw-bold" style="font-size:1rem;">
            <span>Total</span>
            <span>@_detail.Total.ToString("C")</span>
        </div>
        @if (_detail.DepositRequired.HasValue)
        {
            <div class="d-flex justify-content-between mt-1" style="font-size:0.85rem;">
                <span class="text-muted">Deposit Required</span>
                <span class="fw-semibold">@_detail.DepositRequired.Value.ToString("C")</span>
            </div>
        }
    </div>

    <!-- Notes -->
    @if (_detail.Notes != null)
    {
        <div class="section-header">Notes</div>
        <div class="mobile-card">
            <p class="mb-0" style="font-size:0.85rem; white-space:pre-wrap;">@_detail.Notes</p>
        </div>
    }

    <!-- Status Actions -->
    <div class="section-header">Actions</div>
    <div class="mobile-card">
        @if (!string.IsNullOrEmpty(_statusMessage))
        {
            <div class="alert @(_statusSuccess ? "alert-success" : "alert-danger") py-1 mb-2" style="font-size:0.8rem; border-radius:8px;">
                <i class="bi @(_statusSuccess ? "bi-check-circle-fill" : "bi-x-circle-fill") me-1"></i>@_statusMessage
            </div>
        }

        @if (_detail.LinkedJobId.HasValue)
        {
            <div class="d-flex align-items-center gap-2 p-2 mb-2" style="background:#d1e7dd; border-radius:8px; cursor:pointer;" @onclick="() => GoToJob(_detail.LinkedJobId.Value)">
                <i class="bi bi-check-circle-fill text-success" style="font-size:1.1rem;"></i>
                <div style="flex:1;">
                    <div style="font-size:0.85rem; font-weight:600; color:#0f5132;">Job Created</div>
                    <div style="font-size:0.75rem; color:#198754;">@_detail.LinkedJobNumber — tap to view</div>
                </div>
                <i class="bi bi-chevron-right text-success" style="font-size:0.75rem;"></i>
            </div>
        }

        <div class="d-flex flex-wrap gap-2">
            @if (_detail.Status == EstimateStatus.Draft)
            {
                <button class="btn btn-outline-primary flex-fill" style="font-size:0.8rem;" disabled="@_updatingStatus"
                        @onclick="() => ChangeStatus(EstimateStatus.Sent)">
                    <i class="bi bi-send me-1"></i>Mark as Sent
                </button>
                <button class="btn btn-success flex-fill" style="font-size:0.8rem;" disabled="@_updatingStatus"
                        @onclick="() => _confirmApprove = true">
                    @if (_updatingStatus) { <span class="spinner-border spinner-border-sm me-1"></span> }
                    <i class="bi bi-check-circle me-1"></i>Approve & Create Job
                </button>
            }
            @if (_detail.Status == EstimateStatus.Sent)
            {
                <button class="btn btn-success flex-fill" style="font-size:0.8rem;" disabled="@_updatingStatus"
                        @onclick="() => _confirmApprove = true">
                    @if (_updatingStatus) { <span class="spinner-border spinner-border-sm me-1"></span> }
                    <i class="bi bi-check-circle me-1"></i>Approve & Create Job
                </button>
                <button class="btn btn-outline-danger flex-fill" style="font-size:0.8rem;" disabled="@_updatingStatus"
                        @onclick="() => ChangeStatus(EstimateStatus.Rejected)">
                    <i class="bi bi-x-circle me-1"></i>Reject
                </button>
            }
            @if (_detail.Status == EstimateStatus.Rejected)
            {
                <button class="btn btn-outline-primary flex-fill" style="font-size:0.8rem;" disabled="@_updatingStatus"
                        @onclick="() => ChangeStatus(EstimateStatus.Draft)">
                    <i class="bi bi-arrow-counterclockwise me-1"></i>Revert to Draft
                </button>
            }
        </div>

        @if (_confirmApprove)
        {
            <div class="alert alert-warning mt-2 py-2" style="font-size:0.8rem;">
                <strong>Confirm:</strong> This will approve the estimate and automatically create a new job. Continue?
                <div class="d-flex gap-2 mt-2">
                    <button class="btn btn-success btn-sm flex-fill" @onclick="ConfirmApprove" disabled="@_updatingStatus">
                        <i class="bi bi-check-lg me-1"></i>Yes, Approve
                    </button>
                    <button class="btn btn-outline-secondary btn-sm flex-fill" @onclick="() => _confirmApprove = false">
                        Cancel
                    </button>
                </div>
            </div>
        }

        <hr class="my-2" />
        <button class="btn btn-outline-primary w-100 mb-2" style="font-size:0.8rem;" disabled="@_sharingPdf"
                @onclick="ShareEstimatePdf">
            @if (_sharingPdf) { <span class="spinner-border spinner-border-sm me-1"></span> }
            <i class="bi bi-file-earmark-pdf me-1"></i>Share as PDF
        </button>
        <button class="btn btn-outline-danger w-100" style="font-size:0.8rem;" disabled="@_updatingStatus"
                @onclick="DeleteEstimate">
            <i class="bi bi-trash3 me-1"></i>Delete Estimate
        </button>
    </div>

    <!-- Quick Links -->
    <div class="section-header">Quick Links</div>
    <div class="mobile-card">
        <div class="d-flex flex-column gap-1">
            @if (_detail.LinkedJobId.HasValue)
            {
                <div class="d-flex justify-content-between align-items-center py-2" style="cursor:pointer;" @onclick="() => GoToJob(_detail.LinkedJobId.Value)">
                    <span style="font-size:0.9rem;"><i class="bi bi-wrench-adjustable me-2 text-success"></i>View Job (@_detail.LinkedJobNumber)</span>
                    <i class="bi bi-chevron-right text-muted" style="font-size:0.75rem;"></i>
                </div>
                <hr class="my-0" />
            }
            @if (_detail.CustomerId.HasValue)
            {
                <div class="d-flex justify-content-between align-items-center py-2" style="cursor:pointer;" @onclick="() => GoToCustomer(_detail.CustomerId.Value)">
                    <span style="font-size:0.9rem;"><i class="bi bi-person me-2 text-primary"></i>View Customer</span>
                    <i class="bi bi-chevron-right text-muted" style="font-size:0.75rem;"></i>
                </div>
            }
            @if (_detail.SiteId.HasValue)
            {
                @if (_detail.CustomerId.HasValue || _detail.LinkedJobId.HasValue)
                {
                    <hr class="my-0" />
                }
                <div class="d-flex justify-content-between align-items-center py-2" style="cursor:pointer;" @onclick="() => GoToSite(_detail.SiteId.Value)">
                    <span style="font-size:0.9rem;"><i class="bi bi-geo-alt me-2 text-primary"></i>View Site Details</span>
                    <i class="bi bi-chevron-right text-muted" style="font-size:0.75rem;"></i>
                </div>
            }
        </div>
    </div>
}
else if (_loading)
{
    <div class="text-center py-4">
        <div class="spinner-border text-primary" role="status"></div>
    </div>
}
else if (!Id.HasValue)
{
    @if (_showCreate)
    {
        @if (_isElevatedRole)
        {
            <!-- Full Estimate Bottom Sheet (Elevated Role) -->
            <div class="form-sheet-backdrop" @onclick="() => _showCreate = false"></div>
            <div class="form-sheet" @onclick:stopPropagation="true">
                <div class="form-sheet-handle"></div>
                <div class="form-sheet-header">
                    <span class="form-sheet-title"><i class="bi bi-calculator-fill"></i>New Estimate</span>
                    <button class="form-sheet-close" @onclick="() => _showCreate = false"><i class="bi bi-x"></i></button>
                </div>

                <div class="fs-section">Estimate Info</div>
                <div class="fs-field">
                    <label>Title *</label>
                    <input type="text" class="form-control" placeholder="Estimate title" @bind="_fullEstimate.Title" />
                </div>
                <div class="fs-field">
                    <label>Customer</label>
                    <div class="fs-input-group">
                        <i class="bi bi-person"></i>
                        <select class="form-select" @bind="_fullEstimate.CustomerId">
                            <option value="">Customer (optional)</option>
                            @foreach (var c in _custOpts) { <option value="@c.Id">@c.Name</option> }
                        </select>
                    </div>
                </div>
                <div class="fs-field">
                    <label>Site</label>
                    <div class="fs-input-group">
                        <i class="bi bi-geo-alt"></i>
                        <select class="form-select" @bind="_fullEstimate.SiteId">
                            <option value="">Site (optional)</option>
                            @foreach (var s in _siteOpts) { <option value="@s.Id">@s.Name</option> }
                        </select>
                    </div>
                </div>
                <div class="fs-row">
                    <div class="fs-field" style="margin-bottom:0;">
                        <label>Trade Type</label>
                        <select class="form-select" @bind="_fullEstimate.TradeType">
                            <option value="">Trade Type</option>
                            <option value="HVAC">HVAC</option>
                            <option value="Plumbing">Plumbing</option>
                            <option value="Electrical">Electrical</option>
                        </select>
                    </div>
                    <div class="fs-field" style="margin-bottom:0;">
                        <label>Priority</label>
                        <select class="form-select" @bind="_fullEstimate.Priority">
                            @foreach (var p in Enum.GetValues<JobPriority>()) { <option value="@p">@p</option> }
                        </select>
                    </div>
                </div>
                <div class="fs-row">
                    <div class="fs-field" style="margin-bottom:0;">
                        <label>Expiry Date</label>
                        <div class="fs-input-group">
                            <i class="bi bi-calendar3"></i>
                            <input type="date" class="form-control" @bind="_fullEstimate.ExpiryDate" />
                        </div>
                    </div>
                    <div class="fs-field" style="margin-bottom:0;">
                        <label>System Type</label>
                        <input type="text" class="form-control" placeholder="e.g. Split, Heat Pump" @bind="_fullEstimate.SystemType" />
                    </div>
                </div>

                <div class="fs-section">
                    <span>Line Items (@_fullEstimate.Lines.Count)</span>
                    <button class="btn btn-sm btn-outline-primary ms-auto" style="font-size:0.7rem; padding:2px 8px; border-radius:8px;" @onclick="AddEstimateLine">
                        <i class="bi bi-plus me-1"></i>Add Line
                    </button>
                </div>
                @for (var idx = 0; idx < _fullEstimate.Lines.Count; idx++)
                {
                    var i = idx;
                    var line = _fullEstimate.Lines[i];
                    <div class="border rounded p-2 mb-2" style="background:#f8f9fa; border-radius:10px !important;">
                        <div class="d-flex justify-content-between align-items-center mb-1">
                            <span class="fw-semibold" style="font-size:0.75rem; color:#6c757d;">Line @(i + 1)</span>
                            <button class="btn btn-sm btn-outline-danger" style="font-size:0.65rem; padding:1px 6px; border-radius:6px;" @onclick="() => RemoveEstimateLine(i)">
                                <i class="bi bi-trash3"></i>
                            </button>
                        </div>
                        <input type="text" class="form-control mb-1" style="border-radius:8px; font-size:0.85rem;" placeholder="Description *" @bind="line.Description" />
                        <div class="row g-1">
                            <div class="col-4">
                                <select class="form-select" style="border-radius:8px; font-size:0.8rem;" @bind="line.LineType">
                                    <option value="Labor">Labor</option>
                                    <option value="Material">Material</option>
                                    <option value="Equipment">Equipment</option>
                                    <option value="Fee">Fee</option>
                                </select>
                            </div>
                            <div class="col-4">
                                <input type="number" class="form-control" style="border-radius:8px; font-size:0.85rem;" placeholder="Qty" @bind="line.Quantity" step="0.5" min="0.1" />
                            </div>
                            <div class="col-4">
                                <input type="number" class="form-control" style="border-radius:8px; font-size:0.85rem;" placeholder="$ Price" @bind="line.UnitPrice" step="0.01" min="0" />
                            </div>
                        </div>
                        <div class="text-end mt-1" style="font-size:0.75rem; color:var(--primary); font-weight:600;">
                            = @((line.Quantity * line.UnitPrice).ToString("C"))
                        </div>
                    </div>
                }

                <div class="fs-section">Pricing</div>
                <div class="fs-row-3">
                    <div class="fs-field" style="margin-bottom:0;">
                        <label>Markup %</label>
                        <input type="number" class="form-control" @bind="_fullEstimate.MarkupPercent" step="1" min="0" />
                    </div>
                    <div class="fs-field" style="margin-bottom:0;">
                        <label>Tax %</label>
                        <input type="number" class="form-control" @bind="_fullEstimate.TaxPercent" step="0.1" min="0" />
                    </div>
                    <div class="fs-field" style="margin-bottom:0;">
                        <label>Deposit $</label>
                        <input type="number" class="form-control" @bind="_fullEstimate.DepositRequired" step="10" min="0" />
                    </div>
                </div>

                <div class="mobile-card mb-2" style="background:#f0faf3; padding:0.65rem 0.85rem;">
                    <div class="d-flex justify-content-between" style="font-size:0.8rem;"><span class="text-muted">Subtotal</span><span>@EstPreviewSubtotal.ToString("C")</span></div>
                    @if (_fullEstimate.MarkupPercent > 0)
                    {
                        <div class="d-flex justify-content-between" style="font-size:0.8rem;"><span class="text-muted">Markup (@_fullEstimate.MarkupPercent%)</span><span>@EstPreviewMarkup.ToString("C")</span></div>
                    }
                    @if (_fullEstimate.TaxPercent > 0)
                    {
                        <div class="d-flex justify-content-between" style="font-size:0.8rem;"><span class="text-muted">Tax (@_fullEstimate.TaxPercent%)</span><span>@EstPreviewTax.ToString("C")</span></div>
                    }
                    <hr class="my-1" />
                    <div class="d-flex justify-content-between fw-bold" style="font-size:0.88rem;"><span>Total</span><span class="text-primary">@EstPreviewTotal.ToString("C")</span></div>
                </div>

                <div class="fs-field">
                    <label>Notes</label>
                    <textarea class="form-control" rows="2" placeholder="Notes (optional)" @bind="_fullEstimate.Notes"></textarea>
                </div>

                @if (_saveError != null)
                {
                    <div class="alert alert-danger py-1 mb-0" style="font-size:0.78rem; border-radius:10px;">@_saveError</div>
                }
                <div class="fs-actions">
                    <button class="btn btn-outline-secondary flex-shrink-0" @onclick="() => _showCreate = false">Cancel</button>
                    <button class="btn btn-primary flex-fill" @onclick="SaveEstimate" disabled="@string.IsNullOrWhiteSpace(_fullEstimate.Title)">
                        <i class="bi bi-check-lg me-1"></i>Create Estimate
                    </button>
                </div>
            </div>
        }
        else
        {
            <!-- Quick Draft Bottom Sheet (Standard Role) -->
            <div class="form-sheet-backdrop" @onclick="() => _showCreate = false"></div>
            <div class="form-sheet" @onclick:stopPropagation="true">
                <div class="form-sheet-handle"></div>
                <div class="form-sheet-header">
                    <span class="form-sheet-title"><i class="bi bi-calculator-fill"></i>Quick Draft Estimate</span>
                    <button class="form-sheet-close" @onclick="() => _showCreate = false"><i class="bi bi-x"></i></button>
                </div>

                <div class="fs-section">Estimate Info</div>
                <div class="fs-field">
                    <label>Title *</label>
                    <input type="text" class="form-control" placeholder="Estimate title" @bind="_newEstimate.Title" />
                </div>
                <div class="fs-field">
                    <label>Customer</label>
                    <div class="fs-input-group">
                        <i class="bi bi-person"></i>
                        <select class="form-select" @bind="_newEstimate.CustomerId">
                            <option value="">Customer (optional)</option>
                            @foreach (var c in _custOpts) { <option value="@c.Id">@c.Name</option> }
                        </select>
                    </div>
                </div>
                <div class="fs-field">
                    <label>Site</label>
                    <div class="fs-input-group">
                        <i class="bi bi-geo-alt"></i>
                        <select class="form-select" @bind="_newEstimate.SiteId">
                            <option value="">Site (optional)</option>
                            @foreach (var s in _siteOpts) { <option value="@s.Id">@s.Name</option> }
                        </select>
                    </div>
                </div>
                <div class="fs-row">
                    <div class="fs-field" style="margin-bottom:0;">
                        <label>Trade Type</label>
                        <select class="form-select" @bind="_newEstimate.TradeType">
                            <option value="">Trade Type</option>
                            <option value="HVAC">HVAC</option>
                            <option value="Plumbing">Plumbing</option>
                            <option value="Electrical">Electrical</option>
                        </select>
                    </div>
                    <div class="fs-field" style="margin-bottom:0;">
                        <label>Priority</label>
                        <select class="form-select" @bind="_newEstimate.Priority">
                            @foreach (var p in Enum.GetValues<JobPriority>()) { <option value="@p">@p</option> }
                        </select>
                    </div>
                </div>
                <div class="fs-field">
                    <label>Notes</label>
                    <textarea class="form-control" rows="2" placeholder="Notes (optional)" @bind="_newEstimate.Notes"></textarea>
                </div>
                <div class="alert alert-info py-1 px-2 mb-0" style="font-size:0.75rem; border-radius:10px;">
                    <i class="bi bi-info-circle me-1"></i>Creates a Draft. Add line items &amp; pricing on the web app.
                </div>

                @if (_saveError != null)
                {
                    <div class="alert alert-danger py-1 mt-2 mb-0" style="font-size:0.78rem; border-radius:10px;">@_saveError</div>
                }
                <div class="fs-actions">
                    <button class="btn btn-outline-secondary flex-shrink-0" @onclick="() => _showCreate = false">Cancel</button>
                    <button class="btn btn-primary flex-fill" @onclick="SaveEstimate" disabled="@string.IsNullOrWhiteSpace(_newEstimate.Title)">
                        <i class="bi bi-check-lg me-1"></i>Create Draft
                    </button>
                </div>
            </div>
        }
    }

    <!-- Estimate List View -->
    <div class="d-flex gap-2 mb-2">
        <select class="form-select" style="max-width:120px; min-height:36px; font-size:0.85rem; padding:4px 8px;" @bind="_statusFilter" @bind:after="LoadEstimates">
            <option value="">All Status</option>
            @foreach (var s in Enum.GetValues<EstimateStatus>())
            {
                <option value="@s">@s</option>
            }
        </select>
        <input type="search" class="form-control" style="min-height:36px; font-size:0.85rem; padding:4px 10px;" placeholder="Search estimates�"
               @bind="_search" @bind:event="oninput" @bind:after="LoadEstimates" />
        <button class="btn btn-outline-secondary btn-sm" @onclick="LoadEstimates" title="Refresh">
            <i class="bi bi-arrow-clockwise"></i>
        </button>
    </div>

    @if (_estimates.Any())
    {
        @foreach (var est in _estimates)
        {
            <div class="mobile-card" style="cursor:pointer;" @onclick="() => GoToDetail(est.Id)">
                <div class="mobile-card-header">
                    <div>
                        <span class="priority-dot priority-@est.Priority.ToString().ToLower()"></span>
                        <span class="card-title">@(est.Title ?? est.EstimateNumber)</span>
                    </div>
                    <span class="badge-status badge bg-@EstimateStatusColor(est.Status)">@est.Status</span>
                </div>
                <p class="card-subtitle mb-1"><strong>@est.EstimateNumber</strong></p>
                @if (est.CustomerName != null)
                {
                    <p class="card-subtitle mb-1">
                        <i class="bi bi-person me-1"></i>@est.CustomerName
                    </p>
                }
                @if (est.SiteAddress != null)
                {
                    <p class="card-subtitle mb-1">
                        <i class="bi bi-geo-alt me-1"></i>@est.SiteAddress
                    </p>
                }
                <div class="d-flex justify-content-between align-items-center mt-1">
                    <span class="fw-bold" style="font-size:0.95rem;">@est.Total.ToString("C")</span>
                    <span class="text-muted" style="font-size:0.7rem;">
                        @est.LineCount line@(est.LineCount != 1 ? "s" : "") � @est.CreatedAt.ToString("MMM dd")
                    </span>
                </div>
                @if (est.ExpiryDate.HasValue)
                {
                    var isExpired = est.ExpiryDate.Value < DateTime.Now;
                    var isExpiringSoon = !isExpired && est.ExpiryDate.Value < DateTime.Now.AddDays(7);
                    @if (isExpired)
                    {
                        <span class="badge bg-danger mt-1" style="font-size:0.65rem;">Expired</span>
                    }
                    else if (isExpiringSoon)
                    {
                        <span class="badge bg-warning text-dark mt-1" style="font-size:0.65rem;">
                            Expires @est.ExpiryDate.Value.ToString("MMM dd")
                        </span>
                    }
                }
            </div>
        }
    }
    else
    {
        <div class="empty-state">
            <i class="bi bi-calculator d-block"></i>
            <p>No estimates found</p>
        </div>
    }

    <button class="fab" title="New Estimate" @onclick="ShowCreateEstimate">
        <i class="bi bi-plus-lg"></i>
    </button>
}
else
{
    <div class="empty-state">
        <i class="bi bi-exclamation-circle d-block"></i>
        <p>Estimate not found</p>
    </div>
}

@code {
    [Parameter] public int? Id { get; set; }

    private List<MobileEstimateCard> _estimates = [];
    private MobileEstimateDetail? _detail;
    private bool _loading = true;
    private string _search = string.Empty;
    private string _statusFilter = string.Empty;
    private bool _showCreate;
    private MobileEstimateQuickCreate _newEstimate = new();
    private MobileEstimateFullCreate _fullEstimate = new();
    private List<MobileCustomerCard> _custOpts = [];
    private List<MobileSiteCard> _siteOpts = [];
    private string? _saveError;
    private bool _updatingStatus;
    private string? _statusMessage;
    private bool _statusSuccess;
    private bool _isElevatedRole;
    private bool _sharingPdf;
    private bool _confirmApprove;

    protected override async Task OnInitializedAsync()
    {
        var session = await AuthService.GetCurrentUserAsync();
        _isElevatedRole = session?.Role is "Owner" or "Admin" or "Manager";

        if (Id.HasValue)
            await LoadDetail();
        else
            await LoadEstimates();
    }

    protected override async Task OnParametersSetAsync()
    {
        if (Id.HasValue && (_detail == null || _detail.Id != Id.Value))
            await LoadDetail();
    }

    private async Task LoadEstimates()
    {
        _loading = true;
        StateHasChanged();

        EstimateStatus? status = Enum.TryParse<EstimateStatus>(_statusFilter, out var parsed) ? parsed : null;

        var filter = new MobileEstimateFilter
        {
            Search = string.IsNullOrWhiteSpace(_search) ? null : _search,
            Status = status,
        };

        _estimates = await EstimateService.GetEstimatesAsync(filter);
        _loading = false;
    }

    private async Task LoadDetail()
    {
        _loading = true;
        StateHasChanged();
        _detail = await EstimateService.GetEstimateDetailAsync(Id!.Value);
        _loading = false;
    }

    private void GoToDetail(int id) => Nav.NavigateTo("/estimates/" + id);
    private void GoToCustomer(int id) => Nav.NavigateTo("/customers/" + id);
    private void GoToSite(int id) => Nav.NavigateTo("/sites/" + id);
    private void GoToJob(int id) => Nav.NavigateTo("/jobs/" + id);

    private async Task ChangeStatus(EstimateStatus newStatus)
    {
        if (_detail == null) return;
        _updatingStatus = true;
        _statusMessage = null;
        _confirmApprove = false;
        StateHasChanged();
        try
        {
            var success = await EstimateService.UpdateStatusAsync(_detail.Id, newStatus);
            if (success)
            {
                if (newStatus == EstimateStatus.Approved)
                    _statusMessage = "Estimate approved — Job created automatically!";
                else
                    _statusMessage = $"Status updated to {newStatus}.";
                _statusSuccess = true;
                await LoadDetail();
            }
            else
            {
                _statusMessage = "Failed to update status.";
                _statusSuccess = false;
            }
        }
        catch (Exception ex)
        {
            _statusMessage = ex.Message;
            _statusSuccess = false;
        }
        _updatingStatus = false;
        }

        private async Task ConfirmApprove()
        {
            await ChangeStatus(EstimateStatus.Approved);
        }

        private async Task ShowCreateEstimate()
    {
        _newEstimate = new();
        _fullEstimate = new();
        if (_isElevatedRole)
            _fullEstimate.Lines.Add(new MobileEstimateLineCreate());
        _saveError = null;
        _custOpts = await CustomerService.GetCustomersAsync();
        _siteOpts = await SiteService.GetSitesAsync();
        _showCreate = true;
    }

    private async Task SaveEstimate()
    {
        try
        {
            _saveError = null;
            if (_isElevatedRole)
            {
                if (string.IsNullOrWhiteSpace(_fullEstimate.Title)) { _saveError = "Title is required."; return; }
                if (!_fullEstimate.Lines.Any(l => !string.IsNullOrWhiteSpace(l.Description))) { _saveError = "At least one line item is required."; return; }
                _fullEstimate.Lines.RemoveAll(l => string.IsNullOrWhiteSpace(l.Description));
                await EstimateService.FullCreateAsync(_fullEstimate);
            }
            else
            {
                if (string.IsNullOrWhiteSpace(_newEstimate.Title)) { _saveError = "Title is required."; return; }
                await EstimateService.QuickCreateAsync(_newEstimate);
            }
            _showCreate = false;
            await LoadEstimates();
        }
        catch (Exception ex) { _saveError = ex.Message; }
    }

    private void AddEstimateLine() => _fullEstimate.Lines.Add(new MobileEstimateLineCreate());
    private void RemoveEstimateLine(int index) { if (_fullEstimate.Lines.Count > 1) _fullEstimate.Lines.RemoveAt(index); }

    private decimal EstPreviewSubtotal => _fullEstimate.Lines.Sum(l => l.Quantity * l.UnitPrice);
    private decimal EstPreviewMarkup => EstPreviewSubtotal * _fullEstimate.MarkupPercent / 100;
    private decimal EstPreviewTax => (EstPreviewSubtotal + EstPreviewMarkup) * _fullEstimate.TaxPercent / 100;
    private decimal EstPreviewTotal => EstPreviewSubtotal + EstPreviewMarkup + EstPreviewTax;

    private void BackToList()
    {
        _detail = null;
        Nav.NavigateTo("/estimates");
    }

    private async Task DeleteEstimate()
    {
        if (_detail is null) return;
        _updatingStatus = true;
        StateHasChanged();
        var ok = await EstimateService.DeleteEstimateAsync(_detail.Id);
        _updatingStatus = false;
        if (ok)
        {
            _detail = null;
            Nav.NavigateTo("/estimates");
        }
        else
        {
            _statusMessage = "Failed to delete estimate.";
            _statusSuccess = false;
        }
    }

    private async Task ShareEstimatePdf()
    {
        if (_detail is null) return;
        _sharingPdf = true;
        StateHasChanged();
        try
        {
            var filePath = await PdfService.GenerateEstimateDocumentAsync(_detail.Id);
            if (filePath is not null)
                await PdfService.ShareDocumentAsync(filePath, $"Estimate {_detail.EstimateNumber}");
        }
        finally
        {
            _sharingPdf = false;
            StateHasChanged();
        }
    }

    private static string EstimateStatusColor(EstimateStatus status) => status switch
    {
        EstimateStatus.Draft => "secondary",
        EstimateStatus.Sent => "info",
        EstimateStatus.Approved => "success",
        EstimateStatus.Rejected => "danger",
        EstimateStatus.Expired => "warning",
        _ => "secondary"
    };
}
