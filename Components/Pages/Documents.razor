@page "/documents"
@inject IMobileDocumentService DocumentService
@inject IMobileAuthService AuthService
@inject IMobilePhotoService PhotoService
@inject NavigationManager Nav
@implements IDisposable

<!-- Notes / Documents Toggle -->
<div class="sub-tab-bar mb-1">
    <button class="sub-tab" @onclick='() => Nav.NavigateTo("/notes")'>
        <i class="bi bi-journal-text me-1"></i>Notes
    </button>
    <button class="sub-tab active">
        <i class="bi bi-file-earmark-text me-1"></i>Docs
    </button>
</div>

<!-- Filter Bar -->
<div class="d-flex gap-2 mb-2">
    <select class="form-select" style="max-width:120px; min-height:36px; font-size:0.85rem; padding:4px 8px;" @bind="_categoryFilter" @bind:after="LoadDocuments">
        <option value="">All Types</option>
        @foreach (var c in Enum.GetValues<DocumentCategory>())
        {
            <option value="@c">@c</option>
        }
    </select>
    <input type="search" class="form-control" style="min-height:36px; font-size:0.85rem; padding:4px 10px;" placeholder="Search documents…" @bind="_search"
           @bind:event="oninput" @bind:after="OnSearchChanged" />
    <button class="btn btn-outline-secondary btn-sm" @onclick="LoadDocuments" title="Refresh">
        <i class="bi bi-arrow-clockwise"></i>
    </button>
    <button class="btn btn-outline-secondary btn-sm" @onclick="CycleSort" title="Sort">
        <i class="bi @SortIcon"></i>
    </button>
</div>

@if (_showCreate)
{
    <div class="mobile-card" style="padding:0.75rem;">
        <h6 class="fw-bold mb-2" style="font-size:0.85rem;">New Document</h6>

        <div class="mb-1">
            <input type="text" class="form-control" style="min-height:38px; font-size:0.9rem; padding:6px 10px;" placeholder="Document name" @bind="_newDoc.Name" />
        </div>

        <div class="mb-1">
            <select class="form-select" style="min-height:38px; font-size:0.9rem; padding:6px 10px;" @bind="_newDoc.Category">
                @foreach (var c in Enum.GetValues<DocumentCategory>())
                {
                    <option value="@c">@c</option>
                }
            </select>
        </div>

        <div class="mb-1">
            <select class="form-select" style="min-height:38px; font-size:0.9rem; padding:6px 10px;" @bind="_newDoc.FileType">
                <option value="">File Type</option>
                <option value="Photo">Photo</option>
                <option value="PDF">PDF</option>
                <option value="Image">Image</option>
                <option value="Video">Video</option>
                <option value="Other">Other</option>
            </select>
        </div>

        <div class="mb-1">
            <textarea class="form-control" rows="2" style="min-height:auto; font-size:0.9rem; padding:6px 10px;" placeholder="Notes (optional)" @bind="_newDoc.Notes"></textarea>
        </div>

        <div class="d-flex gap-2 mb-1">
            <button class="btn btn-outline-primary flex-fill btn-sm" style="min-height:38px;" @onclick="CapturePhoto" disabled="@_attachingFile">
                <i class="bi bi-camera me-1"></i>Take Photo
            </button>
            <button class="btn btn-outline-secondary flex-fill btn-sm" style="min-height:38px;" @onclick="PickPhoto" disabled="@_attachingFile">
                <i class="bi bi-image me-1"></i>Gallery
            </button>
        </div>

        @if (!string.IsNullOrEmpty(_attachedFileName))
        {
            <div class="d-flex align-items-center gap-2 mb-1 px-1" style="font-size:0.8rem;">
                <i class="bi bi-paperclip text-success"></i>
                <span class="text-truncate flex-fill">@_attachedFileName</span>
                <span class="text-muted">@FormatAttachSize(_newDoc.FileSize)</span>
                <button class="btn btn-sm btn-link text-danger p-0" @onclick="ClearAttachment" title="Remove">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
        }

        @if (_attachError != null)
        {
            <div class="alert alert-warning py-1 mb-1" style="font-size:0.78rem;">@_attachError</div>
        }

        <div class="d-flex gap-2 mt-1">
            <button class="btn btn-primary flex-fill" style="min-height:40px;" @onclick="SaveDocument" disabled="@string.IsNullOrWhiteSpace(_newDoc.Name)">
                <i class="bi bi-check-lg me-1"></i>Save
            </button>
            <button class="btn btn-outline-secondary" style="min-height:40px;" @onclick="CancelCreate">Cancel</button>
        </div>

        @if (_saveError != null)
        {
            <div class="alert alert-danger mt-2 py-1" style="font-size:0.8rem;">@_saveError</div>
        }
    </div>
}

@if (_loading)
{
    <div class="text-center py-4">
        <div class="spinner-border text-primary" role="status"></div>
    </div>
}
else if (_documents.Any())
{
    <div class="text-muted mb-2" style="font-size:0.7rem;"><i class="bi @SortIcon me-1"></i>@SortLabel</div>
    @foreach (var doc in SortedDocuments)
    {
        <div class="mobile-card" @onclick="() => TogglePreview(doc.Id)">
            <div class="mobile-card-header">
                <div class="d-flex align-items-center gap-2">
                    <i class="bi @FileIcon(doc.FileType)" style="font-size:1.1rem; color:var(--primary);"></i>
                    <span class="card-title">@doc.Name</span>
                </div>
                <div class="d-flex gap-1">
                    @if (IsPreviewable(doc.FileType) && !string.IsNullOrEmpty(doc.StoredFileName))
                    {
                        <span class="badge bg-info text-white" style="font-size:0.65rem;"><i class="bi bi-eye me-1"></i>Preview</span>
                    }
                    <button class="btn btn-sm btn-outline-danger" style="min-height:32px; padding:2px 8px;"
                            @onclick="() => _deleteConfirmId = doc.Id" @onclick:stopPropagation="true">
                        <i class="bi bi-trash3"></i>
                    </button>
                </div>
            </div>
            @if (_deleteConfirmId == doc.Id)
            {
                <div class="alert alert-danger py-2 d-flex align-items-center gap-2 mb-1" style="font-size:0.8rem;" @onclick:stopPropagation="true">
                    <span>Delete this document?</span>
                    <button class="btn btn-sm btn-danger" style="font-size:0.75rem; padding:2px 10px;" @onclick="() => DeleteDocument(doc.Id)">Yes</button>
                    <button class="btn btn-sm btn-outline-secondary" style="font-size:0.75rem; padding:2px 10px;" @onclick="() => _deleteConfirmId = null">No</button>
                </div>
            }
            <div class="d-flex flex-wrap gap-2 align-items-center mb-1">
                <span class="badge bg-light text-dark" style="font-size:0.7rem;">@doc.Category</span>
                @if (doc.FileType != null)
                {
                    <span class="badge bg-light text-dark" style="font-size:0.7rem;">@doc.FileType</span>
                }
                @if (doc.FileSize.HasValue)
                {
                    <span class="badge bg-light text-dark" style="font-size:0.7rem;">@FormatFileSize(doc.FileSize.Value)</span>
                }
                @if (doc.LinkedEntity != null && doc.LinkedEntityId.HasValue)
                {
                    <button class="badge bg-info text-white border-0" style="font-size:0.7rem; cursor:pointer;"
                            @onclick="() => NavigateToEntity(doc.LinkedEntity, doc.LinkedEntityId.Value)" @onclick:stopPropagation="true">
                        <i class="bi bi-link-45deg me-1"></i>@doc.LinkedEntity #@doc.LinkedEntityId
                    </button>
                }
                else if (doc.LinkedEntity != null)
                {
                    <span class="badge bg-info text-white" style="font-size:0.7rem;">
                        <i class="bi bi-link-45deg me-1"></i>@doc.LinkedEntity
                    </span>
                }
            </div>
            @if (doc.Notes != null)
            {
                <p class="card-subtitle mb-1" style="white-space:pre-wrap;">@doc.Notes</p>
            }
            <div class="d-flex justify-content-between align-items-center">
                <span class="text-muted" style="font-size:0.7rem;">@doc.UploadDate.ToString("MMM dd, h:mm tt")</span>
                @if (doc.FileSize.HasValue)
                {
                    <span class="text-muted" style="font-size:0.65rem;"><i class="bi bi-hdd me-1"></i>@FormatFileSize(doc.FileSize.Value)</span>
                }
            </div>

            @* -- Expanded Preview -- *@
            @if (_expandedDocId == doc.Id && IsPreviewable(doc.FileType) && !string.IsNullOrEmpty(doc.StoredFileName))
            {
                <div style="margin-top:8px; border-top:1px solid #eee; padding-top:8px;">
                    @if (IsImageFile(doc.FileType))
                    {
                        @if (_previewImageData.TryGetValue(doc.Id, out var imgSrc) && imgSrc is not null)
                        {
                            <img src="@imgSrc" alt="@doc.Name" style="width:100%; border-radius:6px;" />
                        }
                        else if (_previewLoading.Contains(doc.Id))
                        {
                            <div class="text-center py-3"><div class="spinner-border spinner-border-sm text-primary"></div></div>
                        }
                        else
                        {
                            <button class="btn btn-outline-primary btn-sm w-100" @onclick="() => LoadImagePreview(doc)" @onclick:stopPropagation="true">
                                <i class="bi bi-image me-1"></i>Load Preview
                            </button>
                        }
                    }
                    else if (IsPdfFile(doc.FileType))
                    {
                        <button class="btn btn-outline-primary btn-sm w-100" @onclick="() => OpenDocument(doc)" @onclick:stopPropagation="true"
                                disabled="@_previewLoading.Contains(doc.Id)">
                            @if (_previewLoading.Contains(doc.Id))
                            {
                                <span class="spinner-border spinner-border-sm me-1"></span>
                            }
                            <i class="bi bi-file-earmark-pdf me-1"></i>Open PDF
                        </button>
                    }
                    <button class="btn btn-outline-secondary btn-sm w-100 mt-1" @onclick="() => OpenDocument(doc)" @onclick:stopPropagation="true"
                            disabled="@_previewLoading.Contains(doc.Id)">
                        <i class="bi bi-box-arrow-up-right me-1"></i>Open in Viewer
                    </button>
                </div>
            }
            else if (_expandedDocId == doc.Id)
            {
                <div style="margin-top:8px; border-top:1px solid #eee; padding-top:8px;">
                    <div class="text-center text-muted small">
                        <i class="bi bi-eye-slash me-1"></i>No preview available for this file type
                    </div>
                    @if (!string.IsNullOrEmpty(doc.StoredFileName))
                    {
                        <button class="btn btn-outline-secondary btn-sm w-100 mt-1" @onclick="() => OpenDocument(doc)" @onclick:stopPropagation="true"
                                disabled="@_previewLoading.Contains(doc.Id)">
                            <i class="bi bi-box-arrow-up-right me-1"></i>Open in Viewer
                        </button>
                    }
                </div>
            }
        </div>
    }
}
else if (!_showCreate)
{
    <div class="empty-state">
        <i class="bi bi-file-earmark-text d-block"></i>
        <p>No documents yet</p>
    </div>
}

@if (!_showCreate)
{
    <button class="fab" title="New Document" @onclick="ShowCreate">
        <i class="bi bi-plus-lg"></i>
    </button>
}

@code {
private int _employeeId;
private List<MobileDocumentItem> _documents = [];
private bool _loading = true;
private bool _showCreate;
private MobileDocumentCreate _newDoc = new();
private string? _saveError;
private string _search = string.Empty;
private string _categoryFilter = string.Empty;
private string _sort = "newest";
private int? _expandedDocId;
private Dictionary<int, string?> _previewImageData = new();
private HashSet<int> _previewLoading = [];
private int? _deleteConfirmId;
private System.Timers.Timer? _debounceTimer;
private string? _attachedFileName;
private string? _attachError;
private bool _attachingFile;

    private List<MobileDocumentItem> SortedDocuments => _sort switch
    {
        "oldest" => _documents.OrderBy(d => d.UploadDate).ToList(),
        "name" => _documents.OrderBy(d => d.Name).ToList(),
        _ => _documents.OrderByDescending(d => d.UploadDate).ToList(),
    };

    private string SortIcon => _sort switch
    {
        "oldest" => "bi-sort-up",
        "name" => "bi-sort-alpha-down",
        _ => "bi-sort-down",
    };

    private string SortLabel => _sort switch
    {
        "oldest" => "Oldest first",
        "name" => "Sorted by name",
        _ => "Newest first",
    };

    private void CycleSort()
    {
        _sort = _sort switch
        {
            "newest" => "oldest",
            "oldest" => "name",
            _ => "newest",
        };
    }

    private void OnSearchChanged()
    {
        _debounceTimer?.Stop();
        _debounceTimer?.Dispose();
        _debounceTimer = new System.Timers.Timer(300);
        _debounceTimer.Elapsed += async (_, _) =>
        {
            _debounceTimer?.Stop();
            await InvokeAsync(async () =>
            {
                await LoadDocuments();
                StateHasChanged();
            });
        };
        _debounceTimer.AutoReset = false;
        _debounceTimer.Start();
    }

    private async Task CapturePhoto()
    {
        _attachError = null;
        _attachingFile = true;
        StateHasChanged();
        try
        {
            var result = await PhotoService.CapturePhotoAsync();
            if (result is not null)
            {
                _newDoc.FilePath = result.FilePath;
                _newDoc.FileSize = result.FileSize;
                _newDoc.FileType = "Photo";
                _attachedFileName = result.FileName;
            }
        }
        catch (Exception ex)
        {
            _attachError = $"Camera error: {ex.Message}";
        }
        finally
        {
            _attachingFile = false;
        }
    }

    private async Task PickPhoto()
    {
        _attachError = null;
        _attachingFile = true;
        StateHasChanged();
        try
        {
            var result = await PhotoService.PickPhotoAsync();
            if (result is not null)
            {
                _newDoc.FilePath = result.FilePath;
                _newDoc.FileSize = result.FileSize;
                _newDoc.FileType = "Photo";
                _attachedFileName = result.FileName;
            }
        }
        catch (Exception ex)
        {
            _attachError = $"Gallery error: {ex.Message}";
        }
        finally
        {
            _attachingFile = false;
        }
    }

    private void ClearAttachment()
    {
        _newDoc.FilePath = null;
        _newDoc.FileSize = null;
        _newDoc.FileType = null;
        _attachedFileName = null;
        _attachError = null;
    }

    private static string FormatAttachSize(long? bytes)
    {
        if (!bytes.HasValue || bytes.Value == 0) return "";
        if (bytes.Value < 1024) return bytes.Value + " B";
        if (bytes.Value < 1024 * 1024) return (bytes.Value / 1024.0).ToString("F1") + " KB";
        return (bytes.Value / (1024.0 * 1024.0)).ToString("F1") + " MB";
    }

    protected override async Task OnInitializedAsync()
    {
        _employeeId = await AuthService.GetEmployeeIdAsync() ?? 0;
        await LoadDocuments();
    }

    private async Task LoadDocuments()
    {
        _loading = true;
        StateHasChanged();

        DocumentCategory? category = Enum.TryParse<DocumentCategory>(_categoryFilter, out var parsed) ? parsed : null;

        var filter = new MobileDocumentFilter
        {
            Search = string.IsNullOrWhiteSpace(_search) ? null : _search,
            Category = category,
        };

        _documents = await DocumentService.GetDocumentsAsync(filter);
        _loading = false;
    }

    private void ShowCreate()
    {
        _newDoc = new MobileDocumentCreate { UploadedByEmployeeId = _employeeId };
        _saveError = null;
        _attachedFileName = null;
        _attachError = null;
        _showCreate = true;
    }

    private void CancelCreate() => _showCreate = false;

    private async Task SaveDocument()
    {
        if (string.IsNullOrWhiteSpace(_newDoc.Name))
        {
            _saveError = "Document name is required.";
            return;
        }

        _newDoc.UploadedByEmployeeId = _employeeId;
        await DocumentService.CreateDocumentAsync(_newDoc);
        _showCreate = false;
        await LoadDocuments();
    }

    private async Task DeleteDocument(int id)
    {
        _deleteConfirmId = null;
        await DocumentService.DeleteDocumentAsync(id);
        await LoadDocuments();
    }

    private static string FileIcon(string? fileType) => fileType?.ToLower() switch
    {
        "photo" or "image" => "bi-image",
        "pdf" => "bi-file-earmark-pdf",
        "video" => "bi-camera-video",
        _ => "bi-file-earmark-text"
    };

    private static string FormatFileSize(long bytes)
    {
        if (bytes < 1024)
            return bytes + " B";
        if (bytes < 1024 * 1024)
            return (bytes / 1024.0).ToString("F1") + " KB";
        return (bytes / (1024.0 * 1024.0)).ToString("F1") + " MB";
    }

    private void TogglePreview(int docId) => _expandedDocId = _expandedDocId == docId ? null : docId;
    private static bool IsPreviewable(string? fileType) => IsPdfFile(fileType) || IsImageFile(fileType);
    private static bool IsPdfFile(string? fileType) => string.Equals(fileType, "PDF", StringComparison.OrdinalIgnoreCase);
    private static bool IsImageFile(string? fileType) => fileType?.ToUpperInvariant() is "JPG" or "JPEG" or "PNG" or "GIF" or "WEBP" or "IMAGE" or "PHOTO";

    private void NavigateToEntity(string entityType, int entityId)
    {
        string? route = null;
        var type = entityType.ToLower();
        if (type == "job")
            route = "/jobs/" + entityId;
        else if (type == "site")
            route = "/sites/" + entityId;
        else if (type == "asset")
            route = "/assets/" + entityId;
        if (route != null)
            Nav.NavigateTo(route);
    }

    private async Task LoadImagePreview(MobileDocumentItem doc)
    {
        if (_previewLoading.Contains(doc.Id)) return;
        _previewLoading.Add(doc.Id);
        StateHasChanged();

        try
        {
            var path = await DocumentService.GetCachedFilePathAsync(doc.Id, doc.StoredFileName);
            if (path is not null && File.Exists(path))
            {
                var bytes = await File.ReadAllBytesAsync(path);
                var mime = doc.FileType?.ToUpperInvariant() switch
                {
                    "PNG" => "image/png",
                    "GIF" => "image/gif",
                    "WEBP" => "image/webp",
                    "BMP" => "image/bmp",
                    _ => "image/jpeg"
                };
                _previewImageData[doc.Id] = $"data:{mime};base64,{Convert.ToBase64String(bytes)}";
            }
            else
            {
                _previewImageData[doc.Id] = null;
            }
        }
        catch
        {
            _previewImageData[doc.Id] = null;
        }
        finally
        {
            _previewLoading.Remove(doc.Id);
            StateHasChanged();
        }
    }

    private async Task OpenDocument(MobileDocumentItem doc)
    {
        if (_previewLoading.Contains(doc.Id)) return;
        _previewLoading.Add(doc.Id);
        StateHasChanged();

        try
        {
            await DocumentService.OpenDocumentAsync(doc.Id, doc.StoredFileName, doc.FileType);
        }
        finally
        {
            _previewLoading.Remove(doc.Id);
            StateHasChanged();
        }
    }

    public void Dispose()
    {
        _debounceTimer?.Dispose();
    }
}
