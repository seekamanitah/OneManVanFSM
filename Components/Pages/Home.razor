@code {
private int _employeeId;
private MobileDashboardData? _data;
private bool _loading = true;
private string? _techName;
private DateTime? _lastUpdated;
private string? _clockError;
private Dictionary<string, bool> _canView = new();
private UserRole _userRole;
private bool _isElevatedRole;
private HashSet<int> _activeJobIds = [];
private PeriodicTimer? _clockTimer;
private CancellationTokenSource? _clockCts;

// Build version tracking
private DateTime? _buildTimestamp;
private int _buildAgeHours;

// Sync state
private ISyncService? _syncService;
private bool _isRemoteMode;
private bool _syncConnected;
private bool _isSyncing;
private string? _syncStatusText;
private string? _syncResultMessage;
private bool _syncResultSuccess;
private List<SyncErrorEntry> _syncErrors = [];
private bool _showSyncErrors;

protected override async Task OnInitializedAsync()
{
    _employeeId = await AuthService.GetEmployeeIdAsync() ?? 0;
    var session = await AuthService.GetCurrentUserAsync();
    _isElevatedRole = session?.Role is "Owner" or "Admin" or "Manager";
    InitSyncState();
    CheckBuildAge();
    await LoadPermissions();
    await LoadDashboard();
    StartClockTimer();
}

    private void InitSyncState()
    {
        _isRemoteMode = Preferences.Default.Get("db_mode", "Local") == "Remote";
        if (_isRemoteMode)
        {
            _syncService = SP.GetService<ISyncService>();
            _syncConnected = _syncService is not null;
            if (_syncService is not null)
            {
                _syncService.OnSyncProgress += HandleSyncProgress;
            }
        }
    }

    private void CheckBuildAge()
    {
        // Parse build timestamp from ApplicationVersion (days since 2025-01-01 + HHmm format)
        if (int.TryParse(AppInfo.Current.BuildString, out var buildNum) && buildNum > 1000)
        {
            try
            {
                var days = buildNum / 10000;
                var hourMin = buildNum % 10000;
                var hour = hourMin / 100;
                var minute = hourMin % 100;
                _buildTimestamp = new DateTime(2025, 1, 1).AddDays(days).AddHours(hour).AddMinutes(minute);
                _buildAgeHours = (int)(DateTime.UtcNow - _buildTimestamp.Value).TotalHours;
            }
            catch { /* Invalid format */ }
        }
    }

    private void HandleSyncProgress(SyncProgressInfo info)
    {
        _isSyncing = info.IsRunning;
        _syncStatusText = info.StatusMessage;
        InvokeAsync(StateHasChanged);
    }

    private async Task SyncNow()
    {
        if (_syncService is null || _isSyncing) return;

        _syncResultMessage = null;
        _syncErrors = [];
        _showSyncErrors = false;
        _isSyncing = true;
        StateHasChanged();

        var result = await _syncService.SyncAllAsync();

        _isSyncing = false;
        _syncResultSuccess = result.Succeeded;
        _syncErrors = result.EntityErrors;
        _syncResultMessage = result.Succeeded
            ? $"Synced {result.EntitiesSynced} records successfully"
            : $"Sync: {result.EntitiesSynced} synced, {result.Errors} failed";
        StateHasChanged();

        // Always refresh dashboard after sync to pick up whatever data did sync
        await AuthService.RefreshSessionAsync();
        _employeeId = await AuthService.GetEmployeeIdAsync() ?? 0;
        await LoadDashboard();

        if (result.Succeeded)
        {
            _ = ClearSyncMessage();
        }
    }

    private async Task ClearSyncMessage()
    {
        await Task.Delay(4000);
        _syncResultMessage = null;
        await InvokeAsync(StateHasChanged);
    }

    private void StartClockTimer()
    {
        _clockCts?.Cancel();
        _clockCts = new CancellationTokenSource();
        _clockTimer?.Dispose();
        _clockTimer = new PeriodicTimer(TimeSpan.FromSeconds(1));
        _ = TickClockAsync(_clockCts.Token);
    }

    private async Task TickClockAsync(CancellationToken ct)
    {
        try
        {
            while (await _clockTimer!.WaitForNextTickAsync(ct))
            {
                if (_data?.IsClockedIn == true)
                    await InvokeAsync(StateHasChanged);
            }
        }
        catch (OperationCanceledException) { }
    }

    public void Dispose()
    {
        _clockCts?.Cancel();
        _clockCts?.Dispose();
        _clockTimer?.Dispose();
        if (_syncService is not null)
            _syncService.OnSyncProgress -= HandleSyncProgress;
    }

    private async Task LoadDashboard()
    {
        _loading = true;
        StateHasChanged();
        _data = await DashboardService.GetDashboardAsync(_employeeId, _isElevatedRole);
        var profile = await TimeService.GetEmployeeProfileAsync(_employeeId);
        _techName = profile?.Name?.Split(' ')[0];

        // Fallback: use username from session if no employee profile linked
        if (string.IsNullOrEmpty(_techName))
        {
            var session = await AuthService.GetCurrentUserAsync();
            _techName = session?.Username;
        }

        await LoadActiveJobClocks();
        _lastUpdated = DateTime.Now;
        _loading = false;
        StateHasChanged();
    }

    private async Task RefreshDashboard()
    {
        if (_isRemoteMode && _syncService is not null && !_isSyncing)
        {
            await SyncNow();
        }
        else
        {
            await LoadDashboard();
        }
    }

    private async Task LoadPermissions()
    {
        var session = await AuthService.GetCurrentUserAsync();
        if (session is not null && Enum.TryParse<UserRole>(session.Role, out var role))
        {
            _userRole = role;
            foreach (var f in Features.All)
                _canView[f] = await PermSvc.CanViewAsync(role, f);
        }
        else
        {
            // Default to hiding features if role can't be determined (security)
            foreach (var f in Features.All)
                _canView[f] = false;
        }
    }

    private static string Greeting()
