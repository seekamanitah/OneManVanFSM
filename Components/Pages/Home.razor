    {
        _clockError = null;
        try
        {
            await TimeService.JobClockOutAsync(_employeeId, jobId);
            await LoadDashboard();
        }
        catch (Exception ex)
        {
            _clockError = $"Job clock out failed: {ex.Message}";
        }
    }

