    }

    private string FormatElapsed()
    {
        if (_data?.ClockInTime == null) return "00:00";
        var elapsed = DateTime.UtcNow - _data.ClockInTime.Value;
        if (elapsed.TotalSeconds < 0) elapsed = TimeSpan.Zero;
        return $"{(int)elapsed.TotalHours:D2}:{elapsed.Minutes:D2}";
    }

    private async Task ClockIn()
    {
        _clockError = null;
        if (_employeeId <= 0)
        {
            _clockError = "Your account is not linked to an employee record. Ask an admin to link your user to an Employee in Settings.";
            return;
        }
        try
        {
            var result = await TimeService.ClockInAsync(_employeeId);
            if (result is null)
            {
                _clockError = "Clock in failed. Your employee record may be missing.";
                return;
            }
            await LoadDashboard();
        }
        catch (InvalidOperationException ex)
        {
            _clockError = ex.Message;
        }
        catch (Exception ex)
        {
            _clockError = $"Clock in failed: {ex.Message}";
        }
    }

    private async Task ClockOut()
    {
        _clockError = null;
        try
        {
            await TimeService.ClockOutAsync(_employeeId);
            await LoadDashboard();
        }
        catch (Exception ex)
        {
            _clockError = $"Clock out failed: {ex.Message}";
        }
    }

    private async Task PauseShift()
    {
        _clockError = null;
        try
        {
            await TimeService.ShiftPauseAsync(_employeeId, "Lunch/Break");
            await LoadDashboard();
        }
        catch (Exception ex)
        {
            _clockError = $"Pause failed: {ex.Message}";
        }
    }

    private async Task ResumeShift()
    {
        _clockError = null;
        try
        {
            await TimeService.ShiftResumeAsync(_employeeId);
            await LoadDashboard();
        }
        catch (Exception ex)
        {
            _clockError = $"Resume failed: {ex.Message}";
        }
    }

    private string FormatPauseElapsed()
    {
        if (_data?.PauseStartTime == null) return "0m";
        var elapsed = DateTime.UtcNow - _data.PauseStartTime.Value;
        if (elapsed.TotalSeconds < 0) elapsed = TimeSpan.Zero;
        return elapsed.TotalHours >= 1
            ? $"{(int)elapsed.TotalHours}h {elapsed.Minutes}m"
            : $"{(int)elapsed.TotalMinutes}m";
    }

    private async Task LoadActiveJobClocks()
    {
        var clocks = await TimeService.GetActiveJobClocksAsync(_employeeId);
        _activeJobIds = clocks.Where(c => c.JobId.HasValue).Select(c => c.JobId!.Value).ToHashSet();
    }

