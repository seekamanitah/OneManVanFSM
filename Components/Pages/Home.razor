@page "/"
@using OneManVanFSM.Shared.Services
@inject IMobileDashboardService DashboardService
@inject IMobileTimeService TimeService
@inject IMobileJobService JobService
@inject IMobileAuthService AuthService
@inject IPermissionService PermSvc
@inject NavigationManager Nav
@inject IServiceProvider SP
@implements IDisposable

@if (_loading)
{
    <div class="text-center py-4">
        <div class="spinner-border text-primary" role="status"></div>
    </div>
}
else if (_data != null)
{
    <!-- Greeting -->
    <div class="d-flex justify-content-between align-items-center mb-0">
        <div style="font-size:0.85rem; font-weight:600; color:var(--primary);">
            <i class="bi @GreetingIcon() me-1"></i>@Greeting(), @(_techName ?? "Technician")
            @if (_lastUpdated.HasValue)
            {
                <span class="text-muted fw-normal ms-1" style="font-size:0.6rem;">@_lastUpdated.Value.ToString("h:mm tt")</span>
            }
        </div>
        <button class="btn btn-sm btn-outline-secondary" style="min-width:30px; padding:1px 5px; font-size:0.7rem;" @onclick="RefreshDashboard" title="Refresh">
            <i class="bi bi-arrow-clockwise"></i>
        </button>
    </div>

    <!-- Build Age Warning -->
    @if (_buildAgeHours > 24)
    {
        <div class="alert alert-warning py-1 mb-2 d-flex align-items-center" style="font-size:0.7rem; border-radius:8px;">
            <i class="bi bi-exclamation-triangle me-2"></i>
            <div>
                Running build from @_buildTimestamp?.ToLocalTime().ToString("MMM dd h:mm tt") (@_buildAgeHours hours old).
                <a href="/settings" class="alert-link ms-1">Check Settings for version info</a>
            </div>
        </div>
    }

    <!-- Sync Status Bar -->
    @if (_isRemoteMode)
    {
        <div class="mobile-card d-flex align-items-center gap-2 mb-2" style="padding:0.5rem 0.75rem; border-left:3px solid @(_syncConnected ? "#198754" : "#6c757d");">
            <i class="bi @(_syncConnected ? "bi-cloud-check-fill text-success" : "bi-cloud-slash text-muted")" style="font-size:1rem;"></i>
            <div style="flex:1; min-width:0;">
                <div style="font-size:0.8rem; font-weight:600;">Remote Mode</div>
                <div class="text-muted" style="font-size:0.65rem;">
                    @if (_syncService?.LastSyncTime != null)
                    {
                        @:Last sync: @_syncService.LastSyncTime.Value.ToLocalTime().ToString("MMM dd, h:mm tt")
                    }
                    else
                    {
                        @:Not yet synced
                    }
                </div>
            </div>
            @if (_isSyncing)
            {
                <div class="d-flex align-items-center gap-1">
                    <span class="spinner-border spinner-border-sm text-primary" role="status"></span>
                    <span style="font-size:0.7rem;" class="text-primary">@(_syncStatusText ?? "Syncing...")</span>
                </div>
            }
            else
            {
                <button class="btn btn-sm btn-outline-primary" style="font-size:0.7rem; padding:2px 8px;" @onclick="SyncNow">
                    <i class="bi bi-arrow-repeat me-1"></i>Sync
                </button>
            }
        </div>
        @if (_syncResultMessage != null)
        {
            <div class="alert @(_syncResultSuccess ? "alert-success" : "alert-danger") py-1 mb-2" style="font-size:0.75rem; border-radius:10px;">
                <div class="d-flex align-items-center @(_syncErrors.Any() ? "cursor-pointer" : "")" @onclick="() => { if (_syncErrors.Any()) _showSyncErrors = !_showSyncErrors; }">
                    <i class="bi @(_syncResultSuccess ? "bi-check-circle-fill" : "bi-x-circle-fill") me-2"></i>
                    <span style="flex:1;">@_syncResultMessage</span>
                    @if (_syncErrors.Any())
                    {
                        <i class="bi @(_showSyncErrors ? "bi-chevron-up" : "bi-chevron-down") ms-1" style="font-size:0.7rem;"></i>
                    }
                </div>
                @if (_showSyncErrors && _syncErrors.Any())
                {
                    <div class="mt-1 pt-1" style="border-top:1px solid rgba(0,0,0,.1);">
                        @foreach (var err in _syncErrors)
                        {
                            <div class="d-flex align-items-start gap-1 mb-1" style="font-size:0.7rem;">
                                <i class="bi bi-exclamation-triangle text-danger" style="margin-top:1px;"></i>
                                <div>
                                    <span class="fw-semibold">@err.EntityType:</span>
                                    <span>@err.ErrorMessage</span>
                                    <span class="text-muted ms-1">(@err.Timestamp.ToLocalTime().ToString("h:mm tt"))</span>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        }
    }

    @if (!string.IsNullOrEmpty(_clockError))
    {
        <div class="alert alert-danger py-2 small mb-2">@_clockError</div>
    }

    <!-- Time Clock (Shift) -->
    <div class="time-clock-card">
        @if (_data.IsClockedIn)
        {
            <div class="d-flex justify-content-between align-items-center">
                <div class="text-start">
                    <div class="clock-label">Clocked In @_data.ClockInTime?.ToLocalTime().ToString("h:mm tt")</div>
                    <div class="clock-time">@FormatElapsed()</div>
                </div>
                <div class="d-flex flex-column gap-1 align-items-end">
                    <div class="d-flex gap-1">
                        @if (_data.IsPaused)
                        {
                            <button class="btn btn-warning btn-sm px-2 py-0" style="font-size:0.7rem;" @onclick="ResumeShift">
                                <i class="bi bi-play-fill me-1"></i>Resume
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-outline-light btn-sm px-2 py-0" style="font-size:0.7rem;" @onclick="PauseShift">
                                <i class="bi bi-pause-fill me-1"></i>Pause
                            </button>
                        }
                        <button class="btn btn-outline-light btn-sm px-2 py-0" style="font-size:0.7rem;" @onclick="ClockOut">
                            <i class="bi bi-stop-circle me-1"></i>End
                        </button>
                    </div>
                    <div style="font-size:0.55rem; opacity:0.75; line-height:1.2;" class="text-end">
                        <span>Wk @_data.HoursThisWeek.ToString("0.#")h</span>
                        <span class="ms-1">Mo @_data.HoursThisMonth.ToString("0.#")h</span>
                        @if (_data.TotalBreakMinutesToday > 0) { <span class="ms-1">Brk @(_data.TotalBreakMinutesToday)m</span> }
                    </div>
                </div>
            </div>
            @if (_data.IsPaused)
            {
                <div class="text-center mt-1" style="font-size:0.65rem; opacity:0.9;"><i class="bi bi-pause-circle me-1"></i>Paused — @FormatPauseElapsed()</div>
            }
            @if (_data.ActiveJobClockCount > 0)
            {
                <div class="d-flex align-items-center justify-content-center gap-1 mt-1" style="font-size:0.65rem; opacity:0.85;">
                    <i class="bi bi-wrench"></i>
                    <span>@_data.ActiveJobClockCount job@(_data.ActiveJobClockCount > 1 ? "s" : "") active</span>
                    @if (_data.ActiveJobName != null) { <span>(@_data.ActiveJobName)</span> }
                </div>
            }
        }
        else
        {
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="clock-label">Not Clocked In</div>
                    <div style="font-size:0.6rem; opacity:0.7;">Wk @_data.HoursThisWeek.ToString("0.#")h · Mo @_data.HoursThisMonth.ToString("0.#")h</div>
                </div>
                <button class="btn btn-light btn-sm px-3" @onclick="ClockIn">
                    <i class="bi bi-play-circle me-1"></i>Start Shift
                </button>
            </div>
        }
    </div>

    @* Current Job Assignment Banner *@
    @if (_data.IsClockedIn && _data.ActiveJobId.HasValue)
    {
        <div class="card border-0 shadow-sm mb-2" style="background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%); cursor:pointer;"
             @onclick='() => Nav.NavigateTo($"/job/{_data.ActiveJobId}")'>
            <div class="card-body py-2 px-3">
                <div class="d-flex align-items-center gap-2">
                    <div class="rounded-circle d-flex align-items-center justify-content-center" style="width:32px;height:32px;background:rgba(76,175,80,0.2);">
                        <i class="bi bi-geo-alt-fill text-success"></i>
                    </div>
                    <div class="flex-grow-1">
                        <div class="fw-bold small text-success">Assigned Job</div>
                        <div class="small">
                            @(_data.ActiveJobNumber ?? "Job") &mdash; @(_data.ActiveJobName ?? "Untitled")
                        </div>
                        @if (_data.ActiveJobCustomerName != null)
                        {
                            <div class="text-muted" style="font-size:0.7rem;">@_data.ActiveJobCustomerName</div>
                        }
                    </div>
                    <i class="bi bi-chevron-right text-muted"></i>
                </div>
            </div>
        </div>
    }

    <!-- Stat Cards -->
    <div class="gap-grid mb-1" style="grid-template-columns: repeat(4, 1fr);">
        <div class="stat-card" style="cursor:pointer;" @onclick='() => Nav.NavigateTo("/jobs")'>
            <div class="stat-icon text-primary"><i class="bi bi-calendar-check"></i></div>
            <div class="stat-value">@_data.TodayJobCount</div>
            <div class="stat-label">Today</div>
        </div>
        <div class="stat-card" style="cursor:pointer;" @onclick='() => Nav.NavigateTo("/jobs")'>
            <div class="stat-icon text-warning"><i class="bi bi-exclamation-triangle"></i></div>
            <div class="stat-value">@_data.OpenJobCount</div>
            <div class="stat-label">Open</div>
        </div>
        <div class="stat-card">
            <div class="stat-icon text-info"><i class="bi bi-clock-history"></i></div>
            <div class="stat-value">@_data.HoursThisWeek.ToString("0.#")h</div>
            <div class="stat-label">Shift</div>
        </div>
        <div class="stat-card">
            <div class="stat-icon text-success"><i class="bi bi-check-circle"></i></div>
            <div class="stat-value">@_data.CompletedThisWeek</div>
            <div class="stat-label">Done</div>
        </div>
    </div>

    <!-- Estimate/Invoice Stats (elevated roles) -->
    @if (_isElevatedRole && (_data.DraftEstimateCount > 0 || _data.PendingInvoiceCount > 0))
    {
        <div class="gap-grid mb-1">
            @if (_data.DraftEstimateCount > 0)
            {
                <div class="stat-card" style="cursor:pointer;" @onclick='() => Nav.NavigateTo("/estimates")'>
                    <div class="stat-icon" style="color:#6f42c1;"><i class="bi bi-calculator"></i></div>
                    <div class="stat-value">@_data.DraftEstimateCount</div>
                    <div class="stat-label">Draft Est.</div>
                </div>
            }
            @if (_data.PendingInvoiceCount > 0)
            {
                <div class="stat-card" style="cursor:pointer;" @onclick='() => Nav.NavigateTo("/invoices")'>
                    <div class="stat-icon text-primary"><i class="bi bi-receipt"></i></div>
                    <div class="stat-value">@_data.PendingInvoiceCount</div>
                    <div class="stat-label">Pending Inv.</div>
                </div>
            }
        </div>
    }

    <!-- Next Job Countdown -->
    @if (NextScheduledJob != null)
    {
        <div class="mobile-card d-flex align-items-center gap-3" style="padding:0.65rem 1rem; border-left:3px solid var(--primary); cursor:pointer;"
             @onclick="() => GoToJob(NextScheduledJob.Id)">
            <div style="width:40px; height:40px; border-radius:50%; background:var(--primary); display:flex; align-items:center; justify-content:center; flex-shrink:0;">
                <i class="bi bi-clock-fill" style="color:white; font-size:1rem;"></i>
            </div>
            <div style="flex:1; min-width:0;">
                <p class="mb-0 fw-bold" style="font-size:0.85rem;">Next: @(NextScheduledJob.Title ?? NextScheduledJob.JobNumber)</p>
                <p class="card-subtitle mb-0">
                    @if (NextScheduledJob.ScheduledTime.HasValue)
                    {
                        @:at @DateTime.Today.Add(NextScheduledJob.ScheduledTime.Value).ToString("h:mm tt") ·
                    }
                    @(NextScheduledJob.SiteAddress ?? NextScheduledJob.CustomerName ?? "")
                </p>
            </div>
            <i class="bi bi-chevron-right text-muted" style="font-size:0.8rem;"></i>
        </div>
    }

    <!-- Alerts Row -->
    @if (_data.OverdueJobCount > 0 || _data.PendingNoteCount > 0 || _data.LowStockCount > 0 || _data.ExpiringAgreementCount > 0 || _data.MaintenanceDueCount > 0 || _data.WarrantyAlertCount > 0)
    {
        <div class="d-flex gap-1 flex-wrap mb-1">
            @if (_data.OverdueJobCount > 0)
            {
                <div class="mobile-card d-flex align-items-center gap-1 flex-fill" style="padding:0.35rem 0.6rem; border-left:3px solid #dc3545; cursor:pointer;" @onclick='() => Nav.NavigateTo("/jobs")'>
                    <i class="bi bi-exclamation-circle-fill text-danger" style="font-size:0.85rem;"></i>
                    <span style="font-size:0.72rem; font-weight:600;">@_data.OverdueJobCount Overdue</span>
                </div>
            }
            @if (_data.MaintenanceDueCount > 0)
            {
                <div class="mobile-card d-flex align-items-center gap-1 flex-fill" style="padding:0.35rem 0.6rem; border-left:3px solid #0d6efd; cursor:pointer;" @onclick='() => Nav.NavigateTo("/assets")'>
                    <i class="bi bi-tools text-primary" style="font-size:0.85rem;"></i>
                    <span style="font-size:0.72rem; font-weight:600;">@_data.MaintenanceDueCount PM Due</span>
                </div>
            }
            @if (_data.WarrantyAlertCount > 0)
            {
                <div class="mobile-card d-flex align-items-center gap-1 flex-fill" style="padding:0.35rem 0.6rem; border-left:3px solid #ffc107; cursor:pointer;" @onclick='() => Nav.NavigateTo("/assets")'>
                    <i class="bi bi-shield-exclamation text-warning" style="font-size:0.85rem;"></i>
                    <span style="font-size:0.72rem; font-weight:600;">@_data.WarrantyAlertCount Warranty</span>
                </div>
            }
            @if (_data.PendingNoteCount > 0)
            {
                <div class="mobile-card d-flex align-items-center gap-1 flex-fill" style="padding:0.35rem 0.6rem; border-left:3px solid #ffc107; cursor:pointer;" @onclick='() => Nav.NavigateTo("/notes")'>
                    <i class="bi bi-journal-text text-warning" style="font-size:0.85rem;"></i>
                    <span style="font-size:0.72rem; font-weight:600;">@_data.PendingNoteCount Urgent</span>
                </div>
            }
            @if (_data.LowStockCount > 0)
            {
                <div class="mobile-card d-flex align-items-center gap-1 flex-fill" style="padding:0.35rem 0.6rem; border-left:3px solid #fd7e14; cursor:pointer;" @onclick='() => Nav.NavigateTo("/inventory")'>
                    <i class="bi bi-box-seam text-warning" style="font-size:0.85rem;"></i>
                    <span style="font-size:0.72rem; font-weight:600;">@_data.LowStockCount Low Stock</span>
                </div>
            }
            @if (_data.ExpiringAgreementCount > 0)
            {
                <div class="mobile-card d-flex align-items-center gap-1 flex-fill" style="padding:0.35rem 0.6rem; border-left:3px solid #6f42c1; cursor:pointer;" @onclick='() => Nav.NavigateTo("/agreements")'>
                    <i class="bi bi-file-earmark-lock" style="font-size:0.85rem; color:#6f42c1;"></i>
                    <span style="font-size:0.72rem; font-weight:600;">@_data.ExpiringAgreementCount Expiring</span>
                </div>
            }
        </div>
    }

    <!-- Today's Jobs -->
    <div class="section-header">Today's Jobs</div>

    @if (_data.TodayJobs.Any())
    {
        @foreach (var job in _data.TodayJobs)
        {
            <div class="mobile-card" @onclick="() => GoToJob(job.Id)">
                <div class="mobile-card-header">
                    <div>
                        <span class="priority-dot priority-@job.Priority.ToString().ToLower()"></span>
                        <span class="card-title">@(job.Title ?? job.JobNumber)</span>
                    </div>
                    <span class="badge-status badge bg-@StatusColor(job.Status)">@job.Status</span>
                </div>
                <p class="card-subtitle mb-1">
                    <i class="bi bi-person me-1"></i>@(job.CustomerName ?? "—")
                </p>
                <p class="card-subtitle mb-0">
                    <i class="bi bi-geo-alt me-1"></i>@(job.SiteAddress ?? "No address")
                </p>
                @if (job.ScheduledTime.HasValue)
                {
                    <p class="card-subtitle mt-1 mb-0">
                        <i class="bi bi-clock me-1"></i>@job.ScheduledTime.Value.ToString(@"hh\:mm")
                        @if (job.EstimatedDuration.HasValue)
                        {
                            <span> · @job.EstimatedDuration.Value.ToString("0.#")h est.</span>
                        }
                    </p>
                }

                <div class="swipe-actions">
                    @if (_data.IsClockedIn)
                    {
                        @if (_activeJobIds.Contains(job.Id))
                        {
                            <button class="btn btn-outline-danger" style="font-size:0.75rem;" @onclick:stopPropagation="true"
                                    @onclick="() => StopJobClock(job.Id)">
                                <i class="bi bi-stop-circle me-1"></i>Stop Timer
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-outline-info" style="font-size:0.75rem;" @onclick:stopPropagation="true"
                                    @onclick="() => StartJobClock(job.Id)">
                                <i class="bi bi-stopwatch me-1"></i>Start Timer
                            </button>
                        }
                    }
                    @if (job.Status == JobStatus.Scheduled)
                    {
                        <button class="btn btn-outline-primary" @onclick:stopPropagation="true"
                                @onclick="() => UpdateStatus(job, JobStatus.EnRoute)">
                            <i class="bi bi-truck me-1"></i>En Route
                        </button>
                    }
                    else if (job.Status == JobStatus.EnRoute)
                    {
                        <button class="btn btn-outline-success" @onclick:stopPropagation="true"
                                @onclick="() => UpdateStatus(job, JobStatus.OnSite)">
                            <i class="bi bi-pin-map me-1"></i>On Site
                        </button>
                    }
                    else if (job.Status == JobStatus.OnSite || job.Status == JobStatus.InProgress)
                    {
                        <button class="btn btn-outline-success" @onclick:stopPropagation="true"
                                @onclick="() => UpdateStatus(job, JobStatus.Completed)">
                            <i class="bi bi-check-circle me-1"></i>Complete
                        </button>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <div class="empty-state">
            <i class="bi bi-calendar-check d-block"></i>
            <p>No jobs scheduled for today</p>
        </div>
    }

    <!-- Upcoming Jobs (next 3 days) -->
    @if (_data.UpcomingJobs.Any())
    {
        <div class="section-header">Upcoming (Next 3 Days)</div>
        @foreach (var job in _data.UpcomingJobs)
        {
            <div class="mobile-card" style="padding:0.65rem 1rem; cursor:pointer;" @onclick="() => GoToJob(job.Id)">
                <div class="d-flex justify-content-between align-items-start">
                    <div style="min-width:0; flex:1;">
                        <div class="d-flex align-items-center gap-1">
                            <span class="priority-dot priority-@job.Priority.ToString().ToLower()"></span>
                            <span style="font-size:0.85rem; font-weight:600;">@(job.Title ?? job.JobNumber)</span>
                        </div>
                        <p class="card-subtitle mb-0">
                            <i class="bi bi-person me-1"></i>@(job.CustomerName ?? "—")
                        </p>
                    </div>
                    <div class="text-end">
                        <span class="badge bg-light text-dark" style="font-size:0.65rem;">
                            @job.ScheduledDate?.ToString("MMM dd")
                        </span>
                        @if (job.ScheduledTime.HasValue)
                        {
                            <div class="text-muted" style="font-size:0.7rem;">@job.ScheduledTime.Value.ToString(@"hh\:mm")</div>
                        }
                    </div>
                </div>
            </div>
        }
    }

    <!-- Recent Activity -->
    @if (_data.RecentActivity.Any())
    {
        <div class="section-header">Recent Activity</div>
        @foreach (var item in _data.RecentActivity)
        {
            <div class="mobile-card" style="padding:0.65rem 1rem;">
                <div class="d-flex align-items-start gap-2">
                    <i class="bi @item.Icon text-muted" style="font-size:1.1rem; margin-top:2px;"></i>
                    <div style="flex:1; min-width:0;">
                        <p class="mb-0" style="font-size:0.85rem;">@item.Description</p>
                        <p class="mb-0 text-muted" style="font-size:0.7rem;">@item.Timestamp.ToString("MMM dd, h:mm tt")</p>
                    </div>
                </div>
            </div>
        }
    }

    <!-- Quick Actions -->
    <div class="section-header">Quick Actions</div>
    <div class="gap-grid mb-1" style="grid-template-columns:repeat(4,1fr); gap:0.35rem;">
        @if (_canView.GetValueOrDefault(Features.QuickNotes))
        {
            <div class="mobile-card text-center" style="cursor:pointer; padding:0.5rem 0.25rem;" @onclick='() => Nav.NavigateTo("/notes")'>
                <i class="bi bi-journal-plus text-primary" style="font-size:1.1rem;"></i>
                <div style="font-size:0.65rem; font-weight:600;" class="mt-1">Notes</div>
            </div>
        }
        @if (_canView.GetValueOrDefault(Features.Documents))
        {
            <div class="mobile-card text-center" style="cursor:pointer; padding:0.5rem 0.25rem;" @onclick='() => Nav.NavigateTo("/documents")'>
                <i class="bi bi-camera text-success" style="font-size:1.1rem;"></i>
                <div style="font-size:0.65rem; font-weight:600;" class="mt-1">Docs</div>
            </div>
        }
        @if (_canView.GetValueOrDefault(Features.Inventory))
        {
            <div class="mobile-card text-center" style="cursor:pointer; padding:0.5rem 0.25rem;" @onclick='() => Nav.NavigateTo("/inventory")'>
                <i class="bi bi-box-seam text-info" style="font-size:1.1rem;"></i>
                <div style="font-size:0.65rem; font-weight:600;" class="mt-1">Inventory</div>
            </div>
        }
        @if (_canView.GetValueOrDefault(Features.Estimates))
        {
            <div class="mobile-card text-center" style="cursor:pointer; padding:0.5rem 0.25rem;" @onclick='() => Nav.NavigateTo("/estimates")'>
                <i class="bi bi-calculator text-warning" style="font-size:1.1rem;"></i>
                <div style="font-size:0.65rem; font-weight:600;" class="mt-1">Estimates</div>
            </div>
        }
        @if (_canView.GetValueOrDefault(Features.Customers))
        {
            <div class="mobile-card text-center" style="cursor:pointer; padding:0.5rem 0.25rem;" @onclick='() => Nav.NavigateTo("/customers")'>
                <i class="bi bi-people" style="font-size:1.1rem; color:#6f42c1;"></i>
                <div style="font-size:0.65rem; font-weight:600;" class="mt-1">Customers</div>
            </div>
        }
        @if (_canView.GetValueOrDefault(Features.ServiceAgreements))
        {
            <div class="mobile-card text-center" style="cursor:pointer; padding:0.5rem 0.25rem;" @onclick='() => Nav.NavigateTo("/agreements")'>
                <i class="bi bi-file-earmark-text" style="font-size:1.1rem; color:#20c997;"></i>
                <div style="font-size:0.65rem; font-weight:600;" class="mt-1">Agreements</div>
            </div>
        }
        @if (_canView.GetValueOrDefault(Features.Reports))
        {
            <div class="mobile-card text-center" style="cursor:pointer; padding:0.5rem 0.25rem;" @onclick='() => Nav.NavigateTo("/reports")'>
                <i class="bi bi-bar-chart" style="font-size:1.1rem; color:#fd7e14;"></i>
                <div style="font-size:0.65rem; font-weight:600;" class="mt-1">Reports</div>
            </div>
        }
        @if (_canView.GetValueOrDefault(Features.Search))
        {
