@page "/notes"
@inject IMobileNoteService NoteService
@inject IMobileAuthService AuthService
@inject NavigationManager Nav

<!-- Notes / Documents Toggle -->
<div class="sub-tab-bar mb-1">
    <button class="sub-tab active">
        <i class="bi bi-journal-text me-1"></i>Notes
    </button>
    <button class="sub-tab" @onclick='() => Nav.NavigateTo("/documents")'>
        <i class="bi bi-file-earmark-text me-1"></i>Docs
    </button>
</div>

@if (JobId.HasValue)
{
    <div class="mobile-card d-flex align-items-center justify-content-between" style="padding:0.35rem 0.75rem; margin-bottom:0.4rem; background:#e8f0fe; border-left:3px solid var(--primary);">
        <span style="font-size:0.75rem;"><i class="bi bi-funnel me-1"></i>Showing notes for Job #@JobId</span>
        <button class="btn btn-sm btn-outline-secondary" style="min-height:26px; padding:1px 6px;" @onclick="ClearJobFilter">
            <i class="bi bi-x-lg"></i>
        </button>
    </div>
}

<!-- Category Filter Chips -->
<div class="d-flex gap-1 mb-1 flex-wrap">
    @foreach (var cat in _categories)
    {
        <button class="btn btn-sm @(cat == _categoryFilter ? "btn-primary" : "btn-outline-secondary")"
                style="border-radius:20px; font-size:0.7rem; padding:2px 10px; min-height:28px;"
                @onclick="() => SetCategory(cat)">
            @cat
        </button>
    }
</div>

<div class="d-flex gap-2 mb-2">
    <input type="search" class="form-control" style="min-height:36px; font-size:0.85rem; padding:4px 10px;" placeholder="Search notes\u2026" @bind="_search" @bind:event="oninput" />
    <button class="btn btn-outline-secondary" style="min-width:34px; min-height:36px; padding:2px 6px;" @onclick="LoadNotes" title="Refresh">
        <i class="bi bi-arrow-clockwise"></i>
    </button>
</div>

@if (_showCreate)
{
    <!-- Create Note Form -->
    <div class="mobile-card" style="padding:0.75rem;">
        <h6 class="fw-bold mb-2" style="font-size:0.85rem;">New Quick Note</h6>

        <div class="mb-1">
            <input type="text" class="form-control" style="min-height:38px; font-size:0.9rem; padding:6px 10px;" placeholder="Title (optional)" @bind="_newNote.Title" />
        </div>

        <div class="mb-1">
            <textarea class="form-control" rows="2" style="min-height:auto; font-size:0.9rem; padding:6px 10px;" placeholder="Note text…" @bind="_newNote.Text"></textarea>
        </div>

        <div class="mb-1">
            <select class="form-select" style="min-height:38px; font-size:0.9rem; padding:6px 10px;" @bind="_newNote.Category">
                <option value="">Category</option>
                <option value="Repair">Repair</option>
                <option value="Inspection">Inspection</option>
                <option value="Follow-Up">Follow-Up</option>
                <option value="Safety">Safety</option>
                <option value="General">General</option>
            </select>
        </div>

        <div class="form-check mb-1">
            <input class="form-check-input" type="checkbox" id="urgentCheck" @bind="_newNote.IsUrgent" />
            <label class="form-check-label" for="urgentCheck" style="font-size:0.8rem;">Mark as Urgent</label>
        </div>

        <div class="d-flex gap-2">
            <button class="btn btn-primary flex-fill" style="min-height:40px;" @onclick="SaveNote" disabled="@string.IsNullOrWhiteSpace(_newNote.Text)">
                <i class="bi bi-check-lg me-1"></i>Save
            </button>
            <button class="btn btn-outline-secondary" style="min-height:40px;" @onclick="CancelCreate">Cancel</button>
        </div>

        @if (_saveError != null)
        {
            <div class="alert alert-danger mt-2 py-1" style="font-size:0.8rem;">@_saveError</div>
        }
    </div>
}

@if (_loading)
{
    <div class="text-center py-4">
        <div class="spinner-border text-primary" role="status"></div>
    </div>
}
else if (FilteredNotes.Any())
{
    @foreach (var note in FilteredNotes)
    {
        <div class="mobile-card">
            <div class="mobile-card-header">
                <div class="d-flex align-items-center gap-2">
                    @if (note.IsUrgent)
                    {
                        <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size:0.9rem;"></i>
                    }
                    <span class="card-title">@(note.Title ?? "Quick Note")</span>
                </div>
                <button class="btn btn-sm btn-outline-danger" style="min-height:32px; padding:2px 8px;" @onclick="() => DeleteNote(note.Id)">
                    <i class="bi bi-trash3"></i>
                </button>
            </div>
            <p class="mb-1" style="font-size:0.85rem; white-space:pre-wrap;">@note.Text</p>
            <div class="d-flex justify-content-between align-items-center">
                @if (note.Category != null)
                {
                    <span class="badge bg-light text-dark" style="font-size:0.7rem;">@note.Category</span>
                }
                else
                {
                    <span></span>
                }
                <span class="text-muted" style="font-size:0.7rem;">@note.CreatedAt.ToString("MMM dd, h:mm tt")</span>
            </div>
        </div>
    }
}
else if (!_showCreate)
{
    <div class="empty-state">
        <i class="bi bi-journal-text d-block"></i>
        <p>No quick notes yet</p>
    </div>
}

@if (!_showCreate)
{
    <button class="fab" title="New Note" @onclick="ShowCreate">
        <i class="bi bi-plus-lg"></i>
    </button>
}

@code {
[SupplyParameterFromQuery] public int? JobId { get; set; }

private int _employeeId;
private List<MobileNoteItem> _notes = [];
private bool _loading = true;
private bool _showCreate;
private MobileNoteCreate _newNote = new();
private string? _saveError;
private string _categoryFilter = "All";
private string _search = string.Empty;
private readonly string[] _categories = ["All", "Repair", "Safety", "Follow-Up", "Inspection", "General"];

private IEnumerable<MobileNoteItem> FilteredNotes
{
    get
    {
        var result = _notes.AsEnumerable();
        if (_categoryFilter != "All")
            result = result.Where(n => string.Equals(n.Category, _categoryFilter, StringComparison.OrdinalIgnoreCase));
        if (!string.IsNullOrWhiteSpace(_search))
        {
            var term = _search.Trim().ToLower();
            result = result.Where(n =>
                (n.Title != null && n.Title.Contains(term, StringComparison.OrdinalIgnoreCase)) ||
                n.Text.Contains(term, StringComparison.OrdinalIgnoreCase));
        }
        return result;
    }
}

private void SetCategory(string cat)
{
    _categoryFilter = cat;
}

protected override async Task OnInitializedAsync()
{
    _employeeId = await AuthService.GetEmployeeIdAsync() ?? 0;
    if (JobId.HasValue)
        _showCreate = true;

    await LoadNotes();
}

    private async Task LoadNotes()
    {
        _loading = true;
        _notes = await NoteService.GetNotesAsync(JobId);
        _loading = false;
    }

private void ClearJobFilter()
{
    Nav.NavigateTo("/notes");
}

private void ShowCreate()
{
    _newNote = new MobileNoteCreate { CreatedByEmployeeId = _employeeId };
    if (JobId.HasValue)
    {
        _newNote.EntityType = "Job";
        _newNote.EntityId = JobId.Value;
    }
    _saveError = null;
    _showCreate = true;
}

    private void CancelCreate()
    {
        _showCreate = false;
    }

    private async Task SaveNote()
    {
        if (string.IsNullOrWhiteSpace(_newNote.Text))
        {
            _saveError = "Note text is required.";
            return;
        }

        _newNote.CreatedByEmployeeId = _employeeId;
        await NoteService.CreateNoteAsync(_newNote);
        _showCreate = false;
        await LoadNotes();
    }

    private async Task DeleteNote(int id)
    {
        await NoteService.DeleteNoteAsync(id);
        await LoadNotes();
    }
}
